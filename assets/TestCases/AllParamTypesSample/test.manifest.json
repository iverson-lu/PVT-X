{
  "schemaVersion": "1.5.0",
  "id": "AllParamTypesSample",
  "name": "ðŸ§ª Parameter Types Sample",
  "category": "Demo",
  "description": "Demonstrates all supported parameter types including json for complex structures.",
  "version": "1.0.0",
  "privilege": "User",
  "timeoutSec": 120,
  "tags": ["sample", "parameters", "demo"],
  "parameters": [
    {
      "name": "E_Mode",
      "type": "enum",
      "required": true,
      "default": "Alpha",
      "enumValues": ["Alpha", "Beta", "Gamma"],
      "help": "Enum parameter (required)"
    },
    {
      "name": "S_Text",
      "type": "string",
      "required": false,
      "default": "hello",
      "help": "String parameter"
    },
    {
      "name": "N_Int",
      "type": "int",
      "required": false,
      "default": 42,
      "min": -100,
      "max": 100,
      "help": "Integer with min/max constraints"
    },
    {
      "name": "B_Flag",
      "type": "boolean",
      "required": false,
      "default": true,
      "help": "Boolean parameter (CLI: -B_Flag:$true or -B_Flag:$false)"
    },
    {
      "name": "N_Double",
      "type": "double",
      "required": false,
      "default": 3.14,
      "min": 0,
      "max": 9999,
      "unit": "unit",
      "help": "Double with min/max and unit"
    },
    {
      "name": "P_Path",
      "type": "path",
      "required": false,
      "default": "C:\\Windows",
      "help": "Path parameter (string)"
    },
    {
      "name": "ItemsJson",
      "type": "json",
      "required": false,
      "default": "[1, 2, 3]",
      "uiHint": "textarea",
      "help": "JSON array example - parsed by script using ConvertFrom-Json"
    },
    {
      "name": "ConfigJson",
      "type": "json",
      "required": false,
      "default": "{\"timeout\": 30, \"retry\": true}",
      "uiHint": "textarea",
      "help": "JSON object example - parsed by script using ConvertFrom-Json"
    }
  ]
}
