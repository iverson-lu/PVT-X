{
  "schemaVersion": "1.5.0",
  "id": "AllParamTypesSample",
  "name": "ðŸ§ª All Parameter Types Sample",
  "category": "Demo",
  "description": "Covers basic parameter types to validate UI+Engine handling.",
  "version": "1.0.0",
  "privilege": "User",
  "timeoutSec": 120,
  "tags": ["sample", "parameters", "basic-types"],
  "parameters": [
    {
      "name": "E_Mode",
      "type": "enum",
      "required": true,
      "default": "Alpha",
      "enumValues": ["Alpha", "Beta", "Gamma"],
      "help": "enum (string with allowed values)"
    },
    {
      "name": "S_Text",
      "type": "string",
      "required": false,
      "default": "hello",
      "help": "string"
    },
    {
      "name": "N_Int",
      "type": "int",
      "required": false,
      "default": 42,
      "min": -100,
      "max": 100,
      "help": "int (with min/max)"
    },
    {
      "name": "B_Flag",
      "type": "boolean",
      "required": false,
      "default": true,
      "help": "boolean"
    },
    {
      "name": "N_Double",
      "type": "double",
      "required": false,
      "default": 3.14,
      "min": 0,
      "max": 9999,
      "unit": "unit",
      "help": "double (with min/max + unit)"
    },
    {
      "name": "P_Path",
      "type": "path",
      "required": false,
      "default": "C:\\Windows",
      "help": "path (string)"
    }
  ]
}
