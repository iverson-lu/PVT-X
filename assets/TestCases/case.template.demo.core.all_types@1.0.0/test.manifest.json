{
  "schemaVersion": "1.5.0",
  "id": "case.template.demo.core.all_types",
  "name": "Template Case",
  "description": "Template case demonstrating all parameter types and structured output format. Can force Pass/Fail/Timeout/Error outcomes.",
  "version": "1.0.0",
  "category": "Template",
  "owner": "PVT-X",
  "privilege": "User",
  "timeoutSec": 2,
  "parameters": [
    {
      "name": "Mode",
      "type": "enum",
      "required": true,
      "enumValues": ["pass", "fail", "timeout", "error"],
      "help": "Controls test outcome: pass|fail|timeout|error"
    },
    {
      "name": "Message",
      "type": "string",
      "required": false,
      "default": "hello",
      "help": "String parameter example"
    },
    {
      "name": "Count",
      "type": "int",
      "required": false,
      "default": 42,
      "min": -100,
      "max": 100,
      "help": "Integer parameter with min/max constraints"
    },
    {
      "name": "Enabled",
      "type": "boolean",
      "required": false,
      "default": true,
      "help": "Boolean parameter (CLI: -Enabled:$true or -Enabled:$false)"
    },
    {
      "name": "Threshold",
      "type": "double",
      "required": false,
      "default": 3.14,
      "min": 0,
      "max": 9999,
      "unit": "unit",
      "help": "Double parameter with min/max and unit"
    },
    {
      "name": "DataPath",
      "type": "path",
      "required": false,
      "default": "data/test-data.txt",
      "help": "Path parameter (relative to test case directory, resolved using PVTX_TESTCASE_PATH)"
    },
    {
      "name": "Items",
      "type": "json",
      "required": false,
      "default": "[1, 2, 3]",
      "uiHint": "textarea",
      "help": "JSON array example - parsed by script using ConvertFrom-Json"
    },
    {
      "name": "Options",
      "type": "json",
      "required": false,
      "enumValues": ["Windows 7", "Windows 8", "Windows 10", "Windows 11"],
      "default": "[\"Windows 7\", \"Windows 10\"]",
      "uiHint": "multiselect",
      "help": "Multi-select example - UI should render as checkboxes when json+enumValues detected"
    },
    {
      "name": "Config",
      "type": "json",
      "required": false,
      "default": "{\"timeout\": 30, \"retry\": true}",
      "uiHint": "textarea",
      "help": "JSON object example - parsed by script using ConvertFrom-Json"
    }
  ],
  "tags": ["template", "parameters", "demo", "all-types"]
}
