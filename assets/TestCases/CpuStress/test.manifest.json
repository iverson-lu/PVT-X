{
  "schemaVersion": "1.5.0",
  "id": "CpuStress",
  "name": "CPU Stress Test",
  "category": "Thermal",
  "description": "Simulates CPU stress for thermal testing",
  "version": "1.0.0",
  "privilege": "User",
  "timeoutSec": 120,
  "tags": ["cpu", "thermal", "stress"],
  "parameters": [
    {
      "name": "DurationSec",
      "type": "int",
      "required": false,
      "default": 5,
      "min": 1,
      "max": 3600,
      "help": "Duration of stress test in seconds"
    },
    {
      "name": "Mode",
      "type": "enum",
      "required": false,
      "default": "Normal",
      "enumValues": ["Normal", "Intensive"],
      "help": "Test intensity mode"
    },
    {
      "name": "ShouldPass",
      "type": "boolean",
      "required": false,
      "default": true,
      "help": "If false, script exits with code 1"
    }
  ]
}
