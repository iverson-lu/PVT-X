{
  "schemaVersion": "1.0",
  "id": "TemplateCase",
  "name": "Template Case (Mode Switch)",
  "description": "Template case with a single TestMode parameter to force Pass/Fail/Timeout/Error, and writes predictable artifacts under artifacts/.",
  "version": "1.0.0",
  "category": "Template",
  "owner": "PVT-X",
  "entry": {
    "type": "powershell",
    "script": "run.ps1"
  },
  "timeoutSec": 2,
  "parameters": [
    {
      "name": "TestMode", 
      "type": "string",
      "required": true,
      "default": "pass",
      "help": "Controls outcome: pass|fail|timeout|error"
    }
  ],
  "tags": ["template", "mode", "artifacts", "timeout"],
  "artifacts": [
    { "path": "artifacts/report.json", "description": "Standard machine-readable report" },
    { "path": "artifacts/raw/sample.json", "description": "Sample raw json output" },
    { "path": "artifacts/raw/sample.txt", "description": "Sample raw text output" },
    { "path": "artifacts/attachments/sample.log", "description": "Sample attachment log file" },
    { "path": "artifacts/attachments/sample.bin", "description": "Sample attachment binary file" }
  ]
}
