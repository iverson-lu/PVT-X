{
  "schemaVersion": "1.5.0",
  "id": "ThermalSuite",
  "name": "Thermal Test Suite",
  "description": "Suite of thermal validation tests",
  "version": "1.0.0",
  "tags": [
    "thermal",
    "validation"
  ],
  "controls": {
    "repeat": 2,
    "maxParallel": 1,
    "continueOnFailure": false,
    "retryOnError": 0,
    "timeoutPolicy": "AbortOnTimeout"
  },
  "testCases": [
    {
      "nodeId": "cpu-quick",
      "ref": "CpuStress",
      "inputs": {
        "DurationSec": "2",
        "Mode": "Normal",
        "ShouldPass": true
      }
    },
    {
      "nodeId": "cpu-intensive",
      "ref": "CpuStress",
      "inputs": {
        "DurationSec": "3",
        "Mode": "Intensive",
        "ShouldPass": true
      }
    }
  ]
}