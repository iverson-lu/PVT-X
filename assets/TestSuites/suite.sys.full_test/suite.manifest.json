{
  "schemaVersion": "1.5.0",
  "id": "suite.sys.full_test",
  "name": "System Test Suite",
  "description": "System full testing suite",
  "version": "1.0.0",
  "tags": [
    "system",
    "full"
  ],
  "controls": {
    "repeat": 1,
    "maxParallel": 1,
    "continueOnFailure": false,
    "retryOnError": 0,
    "timeoutPolicy": "AbortOnTimeout"
  },
  "testCases": [
    {
      "nodeId": "hw.camera.detect_devices",
      "ref": "Camera Verification",
      "inputs": {
        "MinExpectedCount": "1"
      }
    },
    {
      "nodeId": "hw.devices.health_check",
      "ref": "Device Health Check",
      "inputs": {
        "RestrictedMode": false
      }
    },
    {
      "nodeId": "hw.memory.size_check",
      "ref": "Memory Check Test",
      "inputs": {
        "MinMemoryMB": "100"
      }
    },
    {
      "nodeId": "sw.os.windows.system_info_verify",
      "ref": "System Information Verification",
      "inputs": {
        "CPU_ProcessorName": "Intel",
        "WindowsUpdate_MaxDaysSinceLastUpdate": "30",
        "CPU_MinFrequency": "1.0",
        "OS_Version": "Windows 25H2",
        "Windows_MustBeActivated": true,
        "System_WindowsPath": "C:\\Windows",
        "RequiredSoftware": "[\u0022Microsoft Edge\u0022, \u0022Microsoft 365\u0022]",
        "MinimumRequirements": "{\u0022cores\u0022: 4, \u0022memoryGB\u0022: 8, \u0022diskTotalGB\u0022: 100, \u0022webcamCount\u0022: 1}"
      }
    }
  ]
}