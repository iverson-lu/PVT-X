{
  "schemaVersion": "1.5.0",
  "id": "suite.system.core.reboot_test",
  "name": "Reboot Test",
  "description": "For reboot test",
  "version": "1.0.0",
  "controls": {
    "repeat": 3,
    "maxParallel": 1,
    "continueOnFailure": true,
    "retryOnError": 0,
    "timeoutPolicy": "AbortOnTimeout"
  },
  "testCases": [
    {
      "nodeId": "case.hw.device.core.status_check@1.0.0",
      "ref": "Device Status Check",
      "inputs": {
        "FailOnStatus": "[\u0022Error\u0022, \u0022DriverMissing\u0022]",
        "IgnoreDevices": "[{\u0022device_name\u0022: \u0022VB-Audio Virtual Cable\u0022}]",
        "AlwaysCollectDeviceList": false
      }
    },
    {
      "nodeId": "case.os.windows.core.reboot@1.0.0",
      "ref": "Reboot Resume Test",
      "inputs": {
        "delaySec": "10",
        "reason": "Reboot requested by test case",
        "verifyReboot": false
      }
    },
    {
      "nodeId": "case.os.windows.core.event_log_check@1.0.1",
      "ref": "Event Log Check",
      "inputs": {
        "WindowMinutes": "60",
        "LogNames": "[\u0022System\u0022]",
        "MinLevel": "Warning",
        "AllowlistCsv": "rules/allowlist.csv",
        "BlocklistCsv": "rules/blocklist.csv",
        "FailThreshold": "1",
        "MaxEventsPerLog": "5000",
        "TruncateMessageChars": "300",
        "CaptureEventsToFile": false
      }
    }
  ]
}