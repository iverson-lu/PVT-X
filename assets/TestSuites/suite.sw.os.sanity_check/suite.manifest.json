{
  "schemaVersion": "1.5.0",
  "id": "suite.sw.os.sanity_check",
  "name": "Sanity Check",
  "description": "Sanity testing",
  "version": "1.0.0",
  "controls": {
    "repeat": 1,
    "maxParallel": 1,
    "continueOnFailure": false,
    "retryOnError": 0,
    "timeoutPolicy": "AbortOnTimeout"
  },
  "testCases": [
    {
      "nodeId": "hw.devices.health_check@1.0.0",
      "ref": "Device Health Check",
      "inputs": {
        "RestrictedMode": false
      }
    },
    {
      "nodeId": "hw.memory.size_check@1.0.0",
      "ref": "Memory Check Test",
      "inputs": {
        "MinMemoryMB": "100"
      }
    },
    {
      "nodeId": "sw.os.windows.timezone_verify@1.0.0",
      "ref": "Timezone Verification",
      "inputs": {
        "ExpectedUtcOffset": "\u002B08:00"
      }
    }
  ]
}