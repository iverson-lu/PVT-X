{
  "schemaVersion": "1.5.0",
  "id": "SmokeTest",
  "name": "Smoke Test",
  "description": "Sample smoke test suite",
  "version": "1.0.0",
  "tags": [
    "smoke",
    "sanity"
  ],
  "controls": {
    "repeat": 1,
    "maxParallel": 1,
    "continueOnFailure": false,
    "retryOnError": 0,
    "timeoutPolicy": "AbortOnTimeout"
  },
  "testCases": [
    {
      "nodeId": "hw.devices.health_check",
      "ref": "Device Health Check",
      "inputs": {
        "RestrictedMode": false
      }
    },
    {
      "nodeId": "hw.memory.size_check",
      "ref": "Memory Check Test",
      "inputs": {
        "MinMemoryMB": "100"
      }
    },
    {
      "nodeId": "sw.os.windows.timezone_verify",
      "ref": "Timezone Verification",
      "inputs": {
        "ExpectedUtcOffset": "\u002B08:00"
      }
    }
  ]
}