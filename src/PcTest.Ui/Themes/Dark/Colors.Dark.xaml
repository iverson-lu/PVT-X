<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ========================================
         DARK THEME COLORS
         Professional engineering tool palette
         ======================================== -->
    
    <!-- ========================================
         CANONICAL COLOR TOKENS
         These are the semantic color definitions
         ======================================== -->
    
    <!-- App Background Colors -->
    <Color x:Key="AppBackgroundColor">#1A1A1A</Color>
    <Color x:Key="PanelBackgroundColor">#242424</Color>
    <Color x:Key="SidebarBackgroundColor">#1E1E1E</Color>
    <Color x:Key="CardBackgroundColor">#2D2D2D</Color>
    <Color x:Key="CardBackgroundHoverColor">#353535</Color>
    <Color x:Key="SurfaceAlternateColor">#383838</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimaryColor">#E4E4E4</Color>
    <Color x:Key="TextSecondaryColor">#B8B8B8</Color>
    <Color x:Key="TextTertiaryColor">#8A8A8A</Color>
    <Color x:Key="TextDisabledColor">#5A5A5A</Color>
    <Color x:Key="TextOnPrimaryColor">#FFFFFF</Color>
    <Color x:Key="TextOnDarkColor">#FFFFFF</Color>
    
    <!-- Border Colors -->
    <Color x:Key="BorderDefaultColor">#404040</Color>
    <Color x:Key="BorderSubtleColor">#333333</Color>
    <Color x:Key="BorderStrongColor">#5A5A5A</Color>
    <Color x:Key="DividerColor">#333333</Color>
    
    <!-- Primary Brand Colors -->
    <Color x:Key="PrimaryColor">#3B82F6</Color>
    <Color x:Key="PrimaryHoverColor">#60A5FA</Color>
    <Color x:Key="PrimaryPressedColor">#2563EB</Color>
    <Color x:Key="PrimaryLightColor">#1E3A5F</Color>
    <Color x:Key="PrimarySubtleColor">#1E3A5F</Color>
    
    <!-- Selection Colors -->
    <Color x:Key="SelectionBackgroundColor">#1E3A5F</Color>
    <Color x:Key="SelectionIndicatorColor">#3B82F6</Color>
    <Color x:Key="SelectionHoverColor">#264B77</Color>
    
    <!-- Navigation Colors -->
    <Color x:Key="NavBackgroundColor">#1E1E1E</Color>
    <Color x:Key="NavItemHoverColor">#18FFFFFF</Color>
    <Color x:Key="NavItemSelectedBackgroundColor">#203B82F6</Color>
    <Color x:Key="NavItemSelectedHoverColor">#303B82F6</Color>
    <Color x:Key="NavIconNormalColor">#99FFFFFF</Color>
    <Color x:Key="NavIconHoverColor">#CCFFFFFF</Color>
    <Color x:Key="NavIconSelectedColor">#3B82F6</Color>
    
    <!-- Control Colors -->
    <Color x:Key="ControlBackgroundColor">#2D2D2D</Color>
    <Color x:Key="ControlBackgroundSecondaryColor">#242424</Color>
    <Color x:Key="ControlHoverColor">#383838</Color>
    <Color x:Key="ControlPressedColor">#404040</Color>
    <Color x:Key="ControlDisabledColor">#333333</Color>
    
    <!-- Interactive State Colors -->
    <Color x:Key="InteractiveHoverColor">#383838</Color>
    <Color x:Key="InteractivePressedColor">#404040</Color>
    <Color x:Key="InteractiveSelectedColor">#1E3A5F</Color>
    
    <!-- Badge Colors (for parameter type badges) -->
    <Color x:Key="BadgeBackgroundColor">#1E3A5F</Color>
    <Color x:Key="BadgeBorderColor">#2E5A8F</Color>
    <Color x:Key="BadgeTextColor">#60A5FA</Color>
    
    <!-- Required Badge Colors (red variant) -->
    <Color x:Key="RequiredBadgeBackgroundColor">#450A0A</Color>
    <Color x:Key="RequiredBadgeBorderColor">#7F1D1D</Color>
    <Color x:Key="RequiredBadgeTextColor">#FCA5A5</Color>
    
    <!-- Status Colors (adjusted for dark background) -->
    <Color x:Key="StatusSuccessColor">#22C55E</Color>
    <Color x:Key="StatusSuccessLightColor">#14532D</Color>
    <Color x:Key="StatusSuccessBorderColor">#166534</Color>
    
    <Color x:Key="StatusWarningColor">#EAB308</Color>
    <Color x:Key="StatusWarningLightColor">#422006</Color>
    <Color x:Key="StatusWarningBorderColor">#713F12</Color>
    
    <Color x:Key="StatusErrorColor">#EF4444</Color>
    <Color x:Key="StatusErrorDarkColor">#DC2626</Color>
    <Color x:Key="StatusErrorLightColor">#450A0A</Color>
    <Color x:Key="StatusErrorBorderColor">#7F1D1D</Color>
    
    <Color x:Key="StatusRunningColor">#3B82F6</Color>
    <Color x:Key="StatusRunningLightColor">#1E3A5F</Color>
    <Color x:Key="StatusRunningBorderColor">#1D4ED8</Color>
    
    <Color x:Key="StatusPendingColor">#8A8A8A</Color>
    <Color x:Key="StatusPendingLightColor">#333333</Color>
    <Color x:Key="StatusPendingBorderColor">#404040</Color>
    
    <Color x:Key="StatusInfoColor">#22D3EE</Color>
    <Color x:Key="StatusInfoLightColor">#164E63</Color>
    <Color x:Key="StatusInfoBorderColor">#0E7490</Color>
    
    <!-- Overlay/Modal Colors -->
    <Color x:Key="OverlayBackgroundColor">#B0000000</Color>
    <Color x:Key="ShadowColor">#40000000</Color>
    
    <!-- Terminal/Console Colors (same as light - always dark) -->
    <Color x:Key="TerminalBackgroundColor">#0C0C0C</Color>
    <Color x:Key="TerminalTextColor">#CCCCCC</Color>
    <Color x:Key="TerminalErrorColor">#FF6B6B</Color>
    
    <!-- Tab/Segmented Control Colors -->
    <Color x:Key="TabContainerBackgroundColor">#2A2A2A</Color>
    <Color x:Key="TabSelectedBackgroundColor">#3D3D3D</Color>
    <Color x:Key="TabHoverBackgroundColor">#333333</Color>
    <Color x:Key="TabSelectedHoverBackgroundColor">#454545</Color>
    
    <!-- DataGrid Colors -->
    <Color x:Key="GridLineColor">#20FFFFFF</Color>
    
    
    <!-- ========================================
         CANONICAL BRUSH TOKENS
         SolidColorBrush versions of color tokens
         ======================================== -->
    
    <!-- App Background Brushes -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}"/>
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundHoverBrush" Color="{StaticResource CardBackgroundHoverColor}"/>
    <SolidColorBrush x:Key="SurfaceAlternateBrush" Color="{StaticResource SurfaceAlternateColor}"/>
    
    <!-- Text Brushes -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource TextTertiaryColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabledColor}"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource TextOnPrimaryColor}"/>
    <SolidColorBrush x:Key="TextOnDarkBrush" Color="{StaticResource TextOnDarkColor}"/>
    
    <!-- Border Brushes -->
    <SolidColorBrush x:Key="BorderDefaultBrush" Color="{StaticResource BorderDefaultColor}"/>
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="{StaticResource BorderSubtleColor}"/>
    <SolidColorBrush x:Key="BorderStrongBrush" Color="{StaticResource BorderStrongColor}"/>
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}"/>
    
    <!-- Primary Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}"/>
    <SolidColorBrush x:Key="PrimaryPressedBrush" Color="{StaticResource PrimaryPressedColor}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}"/>
    <SolidColorBrush x:Key="PrimarySubtleBrush" Color="{StaticResource PrimarySubtleColor}"/>
    
    <!-- Selection Brushes -->
    <SolidColorBrush x:Key="SelectionBackgroundBrush" Color="{StaticResource SelectionBackgroundColor}"/>
    <SolidColorBrush x:Key="SelectionIndicatorBrush" Color="{StaticResource SelectionIndicatorColor}"/>
    <SolidColorBrush x:Key="SelectionHoverBrush" Color="{StaticResource SelectionHoverColor}"/>
    
    <!-- Navigation Brushes -->
    <SolidColorBrush x:Key="NavBackgroundBrush" Color="{StaticResource NavBackgroundColor}"/>
    <SolidColorBrush x:Key="NavItemHoverBrush" Color="{StaticResource NavItemHoverColor}"/>
    <SolidColorBrush x:Key="NavItemSelectedBackgroundBrush" Color="{StaticResource NavItemSelectedBackgroundColor}"/>
    <SolidColorBrush x:Key="NavItemSelectedHoverBrush" Color="{StaticResource NavItemSelectedHoverColor}"/>
    <SolidColorBrush x:Key="NavIconNormalBrush" Color="{StaticResource NavIconNormalColor}"/>
    <SolidColorBrush x:Key="NavIconHoverBrush" Color="{StaticResource NavIconHoverColor}"/>
    <SolidColorBrush x:Key="NavIconSelectedBrush" Color="{StaticResource NavIconSelectedColor}"/>
    
    <!-- Control Brushes -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}"/>
    <SolidColorBrush x:Key="ControlBackgroundSecondaryBrush" Color="{StaticResource ControlBackgroundSecondaryColor}"/>
    <SolidColorBrush x:Key="ControlHoverBrush" Color="{StaticResource ControlHoverColor}"/>
    <SolidColorBrush x:Key="ControlPressedBrush" Color="{StaticResource ControlPressedColor}"/>
    <SolidColorBrush x:Key="ControlDisabledBrush" Color="{StaticResource ControlDisabledColor}"/>
    
    <!-- Interactive Brushes -->
    <SolidColorBrush x:Key="InteractiveHoverBrush" Color="{StaticResource InteractiveHoverColor}"/>
    <SolidColorBrush x:Key="InteractivePressedBrush" Color="{StaticResource InteractivePressedColor}"/>
    <SolidColorBrush x:Key="InteractiveSelectedBrush" Color="{StaticResource InteractiveSelectedColor}"/>
    
    <!-- Badge Brushes -->
    <SolidColorBrush x:Key="BadgeBackgroundBrush" Color="{StaticResource BadgeBackgroundColor}"/>
    <SolidColorBrush x:Key="BadgeBorderBrush" Color="{StaticResource BadgeBorderColor}"/>
    <SolidColorBrush x:Key="BadgeTextBrush" Color="{StaticResource BadgeTextColor}"/>
    
    <SolidColorBrush x:Key="RequiredBadgeBackgroundBrush" Color="{StaticResource RequiredBadgeBackgroundColor}"/>
    <SolidColorBrush x:Key="RequiredBadgeBorderBrush" Color="{StaticResource RequiredBadgeBorderColor}"/>
    <SolidColorBrush x:Key="RequiredBadgeTextBrush" Color="{StaticResource RequiredBadgeTextColor}"/>
    
    <!-- Status Brushes -->
    <SolidColorBrush x:Key="StatusSuccessBrush" Color="{StaticResource StatusSuccessColor}"/>
    <SolidColorBrush x:Key="StatusSuccessLightBrush" Color="{StaticResource StatusSuccessLightColor}"/>
    <SolidColorBrush x:Key="StatusSuccessBorderBrush" Color="{StaticResource StatusSuccessBorderColor}"/>
    
    <SolidColorBrush x:Key="StatusWarningBrush" Color="{StaticResource StatusWarningColor}"/>
    <SolidColorBrush x:Key="StatusWarningLightBrush" Color="{StaticResource StatusWarningLightColor}"/>
    <SolidColorBrush x:Key="StatusWarningBorderBrush" Color="{StaticResource StatusWarningBorderColor}"/>
    
    <SolidColorBrush x:Key="StatusErrorBrush" Color="{StaticResource StatusErrorColor}"/>
    <SolidColorBrush x:Key="StatusErrorDarkBrush" Color="{StaticResource StatusErrorDarkColor}"/>
    <SolidColorBrush x:Key="StatusErrorLightBrush" Color="{StaticResource StatusErrorLightColor}"/>
    <SolidColorBrush x:Key="StatusErrorBorderBrush" Color="{StaticResource StatusErrorBorderColor}"/>
    
    <SolidColorBrush x:Key="StatusRunningBrush" Color="{StaticResource StatusRunningColor}"/>
    <SolidColorBrush x:Key="StatusRunningLightBrush" Color="{StaticResource StatusRunningLightColor}"/>
    <SolidColorBrush x:Key="StatusRunningBorderBrush" Color="{StaticResource StatusRunningBorderColor}"/>
    
    <SolidColorBrush x:Key="StatusPendingBrush" Color="{StaticResource StatusPendingColor}"/>
    <SolidColorBrush x:Key="StatusPendingLightBrush" Color="{StaticResource StatusPendingLightColor}"/>
    <SolidColorBrush x:Key="StatusPendingBorderBrush" Color="{StaticResource StatusPendingBorderColor}"/>
    
    <SolidColorBrush x:Key="StatusInfoBrush" Color="{StaticResource StatusInfoColor}"/>
    <SolidColorBrush x:Key="StatusInfoLightBrush" Color="{StaticResource StatusInfoLightColor}"/>
    <SolidColorBrush x:Key="StatusInfoBorderBrush" Color="{StaticResource StatusInfoBorderColor}"/>
    
    <!-- Overlay Brushes -->
    <SolidColorBrush x:Key="OverlayBackgroundBrush" Color="{StaticResource OverlayBackgroundColor}"/>
    <SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource ShadowColor}"/>
    
    <!-- Terminal Brushes -->
    <SolidColorBrush x:Key="TerminalBackgroundBrush" Color="{StaticResource TerminalBackgroundColor}"/>
    <SolidColorBrush x:Key="TerminalTextBrush" Color="{StaticResource TerminalTextColor}"/>
    <SolidColorBrush x:Key="TerminalErrorBrush" Color="{StaticResource TerminalErrorColor}"/>
    
    <!-- Tab Brushes -->
    <SolidColorBrush x:Key="TabContainerBackgroundBrush" Color="{StaticResource TabContainerBackgroundColor}"/>
    <SolidColorBrush x:Key="TabSelectedBackgroundBrush" Color="{StaticResource TabSelectedBackgroundColor}"/>
    <SolidColorBrush x:Key="TabHoverBackgroundBrush" Color="{StaticResource TabHoverBackgroundColor}"/>
    <SolidColorBrush x:Key="TabSelectedHoverBackgroundBrush" Color="{StaticResource TabSelectedHoverBackgroundColor}"/>
    
    <!-- DataGrid Brushes -->
    <SolidColorBrush x:Key="GridLineBrush" Color="{StaticResource GridLineColor}"/>
    
    
    <!-- ========================================
         LEGACY KEY MAPPINGS
         Map old keys to new canonical tokens
         for backward compatibility
         ======================================== -->
    
    <!-- Legacy Brand Colors -->
    <Color x:Key="BrandPrimaryColor">#3B82F6</Color>
    <Color x:Key="BlueGrayDarkColor">#1F2933</Color>
    <Color x:Key="BlueGrayMediumColor">#334155</Color>
    <Color x:Key="BlueGrayLightColor">#64748B</Color>
    
    <!-- Legacy Error Colors -->
    <Color x:Key="ErrorRedDarkColor">#DC2626</Color>
    <Color x:Key="ErrorRedPrimaryColor">#EF4444</Color>
    <Color x:Key="ErrorRedLightColor">#F87171</Color>
    
    <!-- Legacy Neutral Colors -->
    <Color x:Key="NeutralWhiteColor">#E4E4E4</Color>
    <Color x:Key="NeutralVeryLightColor">#383838</Color>
    <Color x:Key="NeutralLightColor">#333333</Color>
    <Color x:Key="NeutralMediumColor">#404040</Color>
    <Color x:Key="NeutralDarkColor">#8A8A8A</Color>
    <Color x:Key="NeutralVeryDarkColor">#B8B8B8</Color>
    <Color x:Key="NeutralBlackColor">#E4E4E4</Color>
    
    <!-- Legacy Status Colors -->
    <Color x:Key="SuccessGreenColor">#22C55E</Color>
    <Color x:Key="InfoCyanColor">#22D3EE</Color>
    <Color x:Key="WarningAmberColor">#EAB308</Color>
    
    <!-- Legacy Brushes (mapped to canonical) -->
    <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="BrandPrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}"/>
    <SolidColorBrush x:Key="BrandPrimaryPressedBrush" Color="{StaticResource PrimaryPressedColor}"/>
    <SolidColorBrush x:Key="SurfaceBackgroundBrush" Color="{StaticResource AppBackgroundColor}"/>
    <SolidColorBrush x:Key="BorderAccentBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="NavItemSelectedBrush" Color="{StaticResource SelectionIndicatorColor}"/>
    <SolidColorBrush x:Key="NavItemSelectedTextBrush" Color="{StaticResource TextOnPrimaryColor}"/>
    
</ResourceDictionary>
