<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ========================================
         HP-INSPIRED COLOR PALETTE
         ======================================== -->
    
    <!-- Brand Colors -->
    <Color x:Key="BrandPrimaryColor">#174AD8</Color>
    <Color x:Key="BlueGrayDarkColor">#4B7682</Color>
    <Color x:Key="BlueGrayMediumColor">#568392</Color>
    <Color x:Key="BlueGrayLightColor">#779CA8</Color>
    
    <!-- Error/Warning Colors -->
    <Color x:Key="ErrorRedDarkColor">#E64647</Color>
    <Color x:Key="ErrorRedPrimaryColor">#FF504E</Color>
    <Color x:Key="ErrorRedLightColor">#FF7171</Color>
    
    <!-- Neutral Colors -->
    <Color x:Key="NeutralWhiteColor">#FFFFFF</Color>
    <Color x:Key="NeutralVeryLightColor">#F8F9FA</Color>
    <Color x:Key="NeutralLightColor">#E9ECEF</Color>
    <Color x:Key="NeutralMediumColor">#CED4DA</Color>
    <Color x:Key="NeutralDarkColor">#6C757D</Color>
    <Color x:Key="NeutralVeryDarkColor">#343A40</Color>
    <Color x:Key="NeutralBlackColor">#212529</Color>
    
    <!-- Success/Info Colors (derived from blue-green palette) -->
    <Color x:Key="SuccessGreenColor">#28A745</Color>
    <Color x:Key="InfoCyanColor">#17A2B8</Color>
    <Color x:Key="WarningAmberColor">#FFC107</Color>
    
    
    <!-- ========================================
         SEMANTIC COLOR BRUSHES
         ======================================== -->
    
    <!-- Brand / Primary -->
    <SolidColorBrush x:Key="BrandPrimaryBrush" Color="{StaticResource BrandPrimaryColor}"/>
    <SolidColorBrush x:Key="BrandPrimaryHoverBrush" Color="#1E56E8"/>
    <SolidColorBrush x:Key="BrandPrimaryPressedBrush" Color="#1340C0"/>
    
    <!-- Surface / Background -->
    <SolidColorBrush x:Key="SurfaceBackgroundBrush" Color="{StaticResource NeutralVeryLightColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource NeutralWhiteColor}"/>
    <SolidColorBrush x:Key="CardBackgroundHoverBrush" Color="#FAFBFC"/>
    <SolidColorBrush x:Key="SurfaceAlternateBrush" Color="{StaticResource NeutralLightColor}"/>
    
    <!-- Border -->
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="{StaticResource NeutralMediumColor}"/>
    <SolidColorBrush x:Key="BorderDefaultBrush" Color="{StaticResource NeutralDarkColor}"/>
    <SolidColorBrush x:Key="BorderAccentBrush" Color="{StaticResource BrandPrimaryColor}"/>
    
    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource NeutralBlackColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource NeutralVeryDarkColor}"/>
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource NeutralDarkColor}"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource NeutralMediumColor}"/>
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource NeutralWhiteColor}"/>
    
    <!-- Navigation -->
    <SolidColorBrush x:Key="NavBackgroundBrush" Color="{StaticResource NeutralWhiteColor}"/>
    <SolidColorBrush x:Key="NavItemHoverBrush" Color="{StaticResource NeutralLightColor}"/>
    <SolidColorBrush x:Key="NavItemSelectedBrush" Color="{StaticResource BrandPrimaryColor}"/>
    <SolidColorBrush x:Key="NavItemSelectedTextBrush" Color="{StaticResource NeutralWhiteColor}"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="StatusSuccessBrush" Color="{StaticResource SuccessGreenColor}"/>
    <SolidColorBrush x:Key="StatusSuccessLightBrush" Color="#D4EDDA"/>
    <SolidColorBrush x:Key="StatusErrorBrush" Color="{StaticResource ErrorRedDarkColor}"/>
    <SolidColorBrush x:Key="StatusErrorLightBrush" Color="#F8D7DA"/>
    <SolidColorBrush x:Key="StatusWarningBrush" Color="{StaticResource ErrorRedPrimaryColor}"/>
    <SolidColorBrush x:Key="StatusWarningLightBrush" Color="#FFF3CD"/>
    <SolidColorBrush x:Key="StatusRunningBrush" Color="{StaticResource BrandPrimaryColor}"/>
    <SolidColorBrush x:Key="StatusRunningLightBrush" Color="#D1E7FD"/>
    <SolidColorBrush x:Key="StatusInfoBrush" Color="{StaticResource InfoCyanColor}"/>
    <SolidColorBrush x:Key="StatusInfoLightBrush" Color="#D1ECF1"/>
    <SolidColorBrush x:Key="StatusPendingBrush" Color="{StaticResource NeutralDarkColor}"/>
    <SolidColorBrush x:Key="StatusPendingLightBrush" Color="{StaticResource NeutralLightColor}"/>
    
    <!-- Interactive States -->
    <SolidColorBrush x:Key="InteractiveHoverBrush" Color="{StaticResource NeutralLightColor}"/>
    <SolidColorBrush x:Key="InteractivePressedBrush" Color="{StaticResource NeutralMediumColor}"/>
    <SolidColorBrush x:Key="InteractiveSelectedBrush" Color="#E7F1FF"/>
    
    <!-- Control Backgrounds -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource NeutralWhiteColor}"/>
    <SolidColorBrush x:Key="ControlBackgroundSecondaryBrush" Color="{StaticResource NeutralVeryLightColor}"/>
    <SolidColorBrush x:Key="ControlDisabledBrush" Color="{StaticResource NeutralLightColor}"/>
    
</ResourceDictionary>
