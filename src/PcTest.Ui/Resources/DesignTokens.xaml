<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    
    <!-- ========================================
         SPACING TOKENS
         ======================================== -->
    
    <system:Double x:Key="SpaceXS">4</system:Double>
    <system:Double x:Key="SpaceS">8</system:Double>
    <system:Double x:Key="SpaceM">12</system:Double>
    <system:Double x:Key="SpaceL">16</system:Double>
    <system:Double x:Key="SpaceXL">24</system:Double>
    <system:Double x:Key="Space2XL">32</system:Double>
    
    <!-- Thickness tokens for margins and padding -->
    <Thickness x:Key="ThicknessXS">4</Thickness>
    <Thickness x:Key="ThicknessS">8</Thickness>
    <Thickness x:Key="ThicknessM">12</Thickness>
    <Thickness x:Key="ThicknessL">16</Thickness>
    <Thickness x:Key="ThicknessXL">24</Thickness>
    <Thickness x:Key="Thickness2XL">32</Thickness>
    
    <!-- Page-level padding -->
    <Thickness x:Key="PagePadding">24</Thickness>
    <Thickness x:Key="PagePaddingHorizontal">24,0,24,0</Thickness>
    <Thickness x:Key="PagePaddingVertical">0,24,0,24</Thickness>
    
    <!-- Card-specific spacing -->
    <Thickness x:Key="CardPadding">16</Thickness>
    <Thickness x:Key="CardMargin">0,0,0,12</Thickness>
    <Thickness x:Key="CardPaddingCompact">12</Thickness>
    
    <!-- Section spacing -->
    <Thickness x:Key="SectionMargin">0,0,0,24</Thickness>
    <Thickness x:Key="SectionHeaderMargin">0,0,0,16</Thickness>
    <Thickness x:Key="SectionItemMargin">0,0,0,8</Thickness>
    
    <!-- Control spacing -->
    <Thickness x:Key="ControlMarginSmall">0,0,8,0</Thickness>
    <Thickness x:Key="ControlMarginMedium">0,0,12,0</Thickness>
    <Thickness x:Key="ControlMarginLarge">0,0,16,0</Thickness>
    
    <!-- List item spacing -->
    <Thickness x:Key="ListItemPadding">12,8</Thickness>
    <Thickness x:Key="ListItemMargin">0,0,0,4</Thickness>
    
    
    <!-- ========================================
         CORNER RADIUS TOKENS
         ======================================== -->
    
    <CornerRadius x:Key="RadiusS">6</CornerRadius>
    <CornerRadius x:Key="RadiusM">10</CornerRadius>
    <CornerRadius x:Key="RadiusL">14</CornerRadius>
    
    <!-- Specific radius values -->
    <system:Double x:Key="RadiusSValue">6</system:Double>
    <system:Double x:Key="RadiusMValue">10</system:Double>
    <system:Double x:Key="RadiusLValue">14</system:Double>
    
    
    <!-- ========================================
         TYPOGRAPHY TOKENS
         ======================================== -->
    
    <!-- Font Sizes -->
    <system:Double x:Key="FontSizeXS">10</system:Double>
    <system:Double x:Key="FontSizeS">11</system:Double>
    <system:Double x:Key="FontSizeM">13</system:Double>
    <system:Double x:Key="FontSizeL">14</system:Double>
    <system:Double x:Key="FontSizeXL">16</system:Double>
    <system:Double x:Key="FontSize2XL">20</system:Double>
    <system:Double x:Key="FontSize3XL">24</system:Double>
    
    <!-- Font Weights -->
    <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>
    
    
    <!-- ========================================
         LAYOUT TOKENS
         ======================================== -->
    
    <!-- Border thickness -->
    <system:Double x:Key="BorderThicknessSubtle">1</system:Double>
    <system:Double x:Key="BorderThicknessDefault">1</system:Double>
    <system:Double x:Key="BorderThicknessEmphasis">2</system:Double>
    
    <!-- Shadow depths (for future use) -->
    <system:Double x:Key="ElevationLow">2</system:Double>
    <system:Double x:Key="ElevationMedium">4</system:Double>
    <system:Double x:Key="ElevationHigh">8</system:Double>
    
    
    <!-- ========================================
         PREMIUM ELEVATION EFFECTS
         Diffused shadows for depth without heaviness
         ======================================== -->
    
    <!-- Card Elevation - Primary content panels -->
    <DropShadowEffect x:Key="ElevationCard"
                      Color="{DynamicResource ShadowColor}"
                      BlurRadius="16"
                      ShadowDepth="2"
                      Direction="270"
                      Opacity="0.08"/>
    
    <!-- Raised Elevation - Interactive/focused cards -->
    <DropShadowEffect x:Key="ElevationRaised"
                      Color="{DynamicResource ShadowColor}"
                      BlurRadius="24"
                      ShadowDepth="4"
                      Direction="270"
                      Opacity="0.12"/>
    
    <!-- Subtle Elevation - Section headers, metadata panels -->
    <DropShadowEffect x:Key="ElevationSubtle"
                      Color="{DynamicResource ShadowColor}"
                      BlurRadius="8"
                      ShadowDepth="1"
                      Direction="270"
                      Opacity="0.05"/>
    
    <!-- Floating Elevation - Dropdowns, popovers -->
    <DropShadowEffect x:Key="ElevationFloating"
                      Color="{DynamicResource ShadowColor}"
                      BlurRadius="32"
                      ShadowDepth="8"
                      Direction="270"
                      Opacity="0.18"/>
    
    
    <!-- ========================================
         TEXT STYLES
         ======================================== -->
    
    <!-- Title Styles -->
    <Style x:Key="PageTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSize3XL}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    
    <Style x:Key="PageSubtitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeL}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>
    
    <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeXL}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>
    
    <Style x:Key="CardTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeL}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>
    
    <!-- Body Styles -->
    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    
    <Style x:Key="SecondaryTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
    </Style>
    
    <Style x:Key="TertiaryTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeXS}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextTertiaryBrush}"/>
    </Style>
    
    <Style x:Key="LabelTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>
    
    
    <!-- ========================================
         CARD STYLES
         ======================================== -->
    
    <Style x:Key="CardContainerStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusM}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
        <Setter Property="Margin" Value="{StaticResource CardMargin}"/>
        <Setter Property="Effect" Value="{StaticResource ElevationCard}"/>
    </Style>
    
    <!-- Premium Card - Elevated appearance for primary content -->
    <Style x:Key="PremiumCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusM}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{DynamicResource ShadowColor}" 
                                  BlurRadius="20" 
                                  ShadowDepth="3" 
                                  Direction="270" 
                                  Opacity="0.1"/>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Interactive Card - With hover state -->
    <Style x:Key="InteractiveCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource RadiusM}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="{DynamicResource ShadowColor}" 
                                  BlurRadius="16" 
                                  ShadowDepth="2" 
                                  Direction="270" 
                                  Opacity="0.08"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{DynamicResource CardBorderHoverBrush}"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="{DynamicResource ShadowColor}" 
                                          BlurRadius="24" 
                                          ShadowDepth="4" 
                                          Direction="270" 
                                          Opacity="0.14"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Section Header Style - For titled section containers -->
    <Style x:Key="SectionHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource SectionHeaderBackgroundBrush}"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="CornerRadius" Value="8,8,0,0"/>
    </Style>
    
    <!-- ========================================
         SETTINGS / FORM FIELD STYLES
         ======================================== -->
    
    <!-- Field Label Style - for form field labels in settings -->
    <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeM}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightNormal}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- Subsection Header Style - for grouping checkboxes or settings -->
    <Style x:Key="SubsectionHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource FontSizeS}"/>
        <Setter Property="FontWeight" Value="{StaticResource FontWeightSemiBold}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextTertiaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    
</ResourceDictionary>
