<ui:FluentWindow x:Class="PcTest.Ui.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:PcTest.Ui.ViewModels"
        mc:Ignorable="d"
        Title="{Binding AppTitle}"
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance vm:MainWindowViewModel}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="{Binding AppTitle}" ShowMaximize="True" ShowMinimize="True"/>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Navigation Menu -->
            <Border Grid.Column="0" Background="{StaticResource NavBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="0,0,1,0">
                <StackPanel Margin="{StaticResource ThicknessS}">
                    <ui:Button Content="Plan" Icon="{ui:SymbolIcon Clipboard24}" 
                              Tag="Plan" Click="NavButton_Click"
                              HorizontalAlignment="Stretch" 
                              Margin="{StaticResource SectionItemMargin}"/>
                    <ui:Button Content="Run" Icon="{ui:SymbolIcon Play24}" 
                              Tag="Run" Click="NavButton_Click"
                              HorizontalAlignment="Stretch" 
                              Margin="{StaticResource SectionItemMargin}"/>
                    <ui:Button Content="History" Icon="{ui:SymbolIcon History24}" 
                              Tag="History" Click="NavButton_Click"
                              HorizontalAlignment="Stretch" 
                              Margin="{StaticResource SectionItemMargin}"/>
                    <ui:Button Content="Logs &amp; Results" Icon="{ui:SymbolIcon DocumentSearch24}" 
                              Tag="LogsResults" Click="NavButton_Click"
                              HorizontalAlignment="Stretch" 
                              Margin="{StaticResource SectionItemMargin}"/>
                    <Separator Margin="0,16,0,16"/>
                    <ui:Button Content="Settings" Icon="{ui:SymbolIcon Settings24}" 
                              Tag="Settings" Click="NavButton_Click"
                              HorizontalAlignment="Stretch" 
                              Margin="{StaticResource SectionItemMargin}"/>
                </StackPanel>
            </Border>
                
            <!-- Page Content Frame -->
            <Frame Grid.Column="1" x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource ControlBackgroundSecondaryBrush}" 
                BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="0,1,0,0"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding StatusMessage}" 
                          VerticalAlignment="Center"
                          FontSize="{StaticResource FontSizeM}"
                          Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Grid.Column="1" Text="{Binding CurrentPageName}" 
                          Foreground="{StaticResource TextTertiaryBrush}"
                          FontSize="{StaticResource FontSizeS}"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</ui:FluentWindow>
