<ui:FluentWindow x:Class="PcTest.Ui.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:vm="clr-namespace:PcTest.Ui.ViewModels"
        mc:Ignorable="d"
        Title="{Binding AppTitle}"
        Icon="pack://application:,,,/Resources/hp_logo.png"
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance vm:MainWindowViewModel}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="{Binding AppTitle}" ShowMaximize="True" ShowMinimize="True">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="/Resources/hp_logo.png" Width="16" Height="16"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="56"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Navigation Menu -->
            <Border Grid.Column="0" Background="{StaticResource NavBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Main Navigation Items (Top) -->
                    <StackPanel Grid.Row="0" VerticalAlignment="Top" Margin="0,8,0,0">
                        <ui:Button x:Name="PlanNavButton"
                                  Icon="{ui:SymbolIcon Clipboard24}" 
                                  Tag="Plan" 
                                  Click="NavButton_Click"
                                  Style="{StaticResource CompactNavButtonStyle}"
                                  ToolTip="Plan"
                                  KeyboardNavigation.TabIndex="0"/>
                        <ui:Button x:Name="RunNavButton"
                                  Icon="{ui:SymbolIcon Play24}" 
                                  Tag="Run" 
                                  Click="NavButton_Click"
                                  Style="{StaticResource CompactNavButtonStyle}"
                                  ToolTip="Run"
                                  KeyboardNavigation.TabIndex="1"/>
                        <ui:Button x:Name="RunsNavButton"
                                  Icon="{ui:SymbolIcon History24}" 
                                  Tag="Runs" 
                                  Click="NavButton_Click"
                                  Style="{StaticResource CompactNavButtonStyle}"
                                  ToolTip="Runs"
                                  KeyboardNavigation.TabIndex="2"/>
                    </StackPanel>
                    
                    <!-- Settings (Bottom) -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Margin="0,0,0,8">
                        <Separator Margin="8,12" Background="{StaticResource BorderSubtleBrush}"/>
                        <ui:Button x:Name="SettingsNavButton"
                                  Icon="{ui:SymbolIcon Settings24}" 
                                  Tag="Settings" 
                                  Click="NavButton_Click"
                                  Style="{StaticResource CompactNavButtonStyle}"
                                  ToolTip="Settings"
                                  KeyboardNavigation.TabIndex="3"/>
                    </StackPanel>
                </Grid>
            </Border>
                
            <!-- Page Content Frame -->
            <Frame Grid.Column="1" x:Name="ContentFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource ControlBackgroundSecondaryBrush}" 
                BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="0,1,0,0"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding StatusMessage}" 
                          VerticalAlignment="Center"
                          FontSize="{StaticResource FontSizeM}"
                          Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Grid.Column="1" Text="{Binding CurrentPageName}" 
                          Foreground="{StaticResource TextTertiaryBrush}"
                          FontSize="{StaticResource FontSizeS}"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</ui:FluentWindow>
