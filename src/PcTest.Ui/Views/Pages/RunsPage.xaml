<Page x:Class="PcTest.Ui.Views.Pages.RunsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:PcTest.Ui.ViewModels"
      Title="History"
      d:DataContext="{d:DesignInstance vm:RunsViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Loaded="Page_Loaded"
      Background="{StaticResource SurfaceBackgroundBrush}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Filters Card -->
        <Border Grid.Row="0" 
                Background="{StaticResource CardBackgroundBrush}" 
                BorderBrush="{StaticResource BorderSubtleBrush}" 
                BorderThickness="1"
                CornerRadius="{StaticResource RadiusM}"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <WrapPanel>
                    <ui:TextBox PlaceholderText="Search..." 
                               Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                               Width="200" 
                               Margin="{StaticResource ControlMarginMedium}"
                               Icon="{ui:SymbolIcon Search24}"/>
                    
                    <ComboBox ItemsSource="{Binding StatusOptions}" 
                             SelectedItem="{Binding StatusFilter}"
                             Width="120" 
                             Margin="{StaticResource ControlMarginMedium}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <ComboBox ItemsSource="{Binding RunTypeOptions}" 
                             SelectedItem="{Binding RunTypeFilter}"
                             Width="120" 
                             Margin="{StaticResource ControlMarginMedium}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <CheckBox Content="Top-level only" 
                             IsChecked="{Binding TopLevelOnly}" 
                             VerticalAlignment="Center" 
                             Margin="{StaticResource ControlMarginMedium}"/>
                    
                    <DatePicker SelectedDate="{Binding StartTimeFrom}" 
                               Width="120" 
                               Margin="{StaticResource ControlMarginMedium}"/>
                    <DatePicker SelectedDate="{Binding StartTimeTo}" 
                               Width="120" 
                               Margin="{StaticResource ControlMarginMedium}"/>
                </WrapPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Content="Refresh" 
                              Icon="{ui:SymbolIcon ArrowSync24}" 
                              Command="{Binding RefreshCommand}"
                              Appearance="Primary"
                              Margin="0,0,8,0"/>
                    <ui:Button Icon="{ui:SymbolIcon Dismiss24}" 
                              Command="{Binding ClearFiltersCommand}"
                              ToolTip="Clear Filters"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Master-Detail Layout -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500" MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Master: Run List Card -->
            <Border Grid.Column="0"
                   Background="{StaticResource CardBackgroundBrush}"
                   BorderBrush="{StaticResource BorderSubtleBrush}"
                   BorderThickness="1"
                   CornerRadius="{StaticResource RadiusM}">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                </Border.Effect>
                <DataGrid 
                     ItemsSource="{Binding Runs}"
                     SelectedItem="{Binding SelectedRun}"
                     AutoGenerateColumns="False"
                     IsReadOnly="True"
                     CanUserAddRows="False"
                     CanUserDeleteRows="False"
                     SelectionMode="Single"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     EnableRowVirtualization="True"
                     GridLinesVisibility="Horizontal"
                     HorizontalGridLinesBrush="#10000000"
                     VerticalGridLinesBrush="Transparent"
                     RowHeight="48">
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Padding" Value="0,6"/>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <!-- Status Column: Icon Only -->
                        <DataGridTemplateColumn Header="" Width="50" SortMemberPath="Status">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:SymbolIcon Symbol="{Binding Status, Converter={StaticResource RunStatusToIconConverter}}" 
                                                  Foreground="{Binding Status, Converter={StaticResource RunStatusToBrushConverter}}"
                                                  FontSize="20" 
                                                  HorizontalAlignment="Center"
                                                  ToolTip="{Binding Status}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Target Column: Name + Version -->
                        <DataGridTemplateColumn Header="Target" Width="*" MinWidth="150" SortMemberPath="DisplayName">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding NameWithoutVersion}" 
                                                  FontSize="13"
                                                  FontWeight="Medium"
                                                  Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding VersionDisplay}" 
                                                  FontSize="11"
                                                  Foreground="{StaticResource TextTertiaryBrush}"
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Type Column: Icon Only -->
                        <DataGridTemplateColumn Header="Type" Width="50" SortMemberPath="RunType">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:SymbolIcon Symbol="{Binding RunType, Converter={StaticResource RunTypeToIconConverter}}" 
                                                  FontSize="20"
                                                  Foreground="{StaticResource TextSecondaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  ToolTip="{Binding RunTypeTooltip}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Start Time Column: Date + Time -->
                        <DataGridTemplateColumn Header="Start" Width="80" SortMemberPath="StartTime">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding StartTime, StringFormat=yyyy-MM-dd}" 
                                                  FontSize="12"
                                                  Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding StartTime, StringFormat=HH:mm:ss}" 
                                                  FontSize="11"
                                                  Foreground="{StaticResource TextTertiaryBrush}"
                                                  Margin="0,1,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Duration Column: Seconds only -->
                        <DataGridTemplateColumn Header="Duration" Width="80" SortMemberPath="Duration">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Duration, StringFormat=mm\\:ss}" 
                                              FontFamily="Consolas"
                                              FontSize="12"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              VerticalAlignment="Center"
                                              ToolTip="{Binding Duration, StringFormat=hh\\:mm\\:ss}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Run ID Column: Short Display -->
                        <DataGridTemplateColumn Header="Run ID" Width="80" SortMemberPath="RunId">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ShortRunId}" 
                                              FontFamily="Consolas"
                                              FontSize="11"
                                              Foreground="{StaticResource TextTertiaryBrush}"
                                              ToolTip="{Binding RunId}"
                                              VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                         Width="16" 
                         HorizontalAlignment="Stretch" 
                         Background="Transparent"
                         ShowsPreview="False"/>
            
            <!-- Detail: Run Inspector Card -->
            <Border Grid.Column="2" 
                    Background="{StaticResource CardBackgroundBrush}"
                    BorderBrush="{StaticResource BorderSubtleBrush}" 
                    BorderThickness="1"
                    CornerRadius="{StaticResource RadiusM}">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                </Border.Effect>
                
                <Grid>
                    <!-- Show placeholder when no run is selected -->
                    <Grid Visibility="{Binding IsRunSelected, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="DocumentSearch24" FontSize="48" Foreground="{StaticResource TextTertiaryBrush}"/>
                            <TextBlock Text="Select a run to view details" 
                                      FontSize="{StaticResource FontSizeL}"
                                      Foreground="{StaticResource TextTertiaryBrush}"
                                      Margin="0,16,0,0"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Show inspector when run is selected -->
                    <Grid Visibility="{Binding IsRunSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Inspector Header -->
                    <Border Grid.Row="0" 
                            Background="{StaticResource ControlBackgroundSecondaryBrush}"
                            BorderBrush="{StaticResource BorderSubtleBrush}" 
                            BorderThickness="0,0,0,1"
                            Padding="20,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="{Binding SelectedRun.RunId}" 
                                              FontFamily="Consolas"
                                              FontWeight="{StaticResource FontWeightSemiBold}" 
                                              FontSize="{StaticResource FontSizeM}"
                                              Foreground="{StaticResource TextPrimaryBrush}"
                                              VerticalAlignment="Center"/>
                                    <ui:Button Icon="{ui:SymbolIcon Copy20}" 
                                              Command="{Binding CopyRunIdCommand}"
                                              ToolTip="Copy full Run ID"
                                              Appearance="Secondary"
                                              Margin="8,0,0,0"
                                              Padding="4"
                                              Height="28"
                                              Width="28"
                                              VerticalAlignment="Center"/>
                                    <ui:Badge Content="{Binding RunStatus}" 
                                             VerticalAlignment="Center"
                                             Margin="8,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Target: " 
                                              Foreground="{StaticResource TextTertiaryBrush}"
                                              FontSize="{StaticResource FontSizeM}"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding RunDisplayName}" 
                                              FontSize="{StaticResource FontSizeM}"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <ui:Button Grid.Column="1" 
                                      Icon="{ui:SymbolIcon FolderOpen24}" 
                                      Command="{Binding OpenFolderCommand}"
                                      ToolTip="Open Run Folder"/>
                        </Grid>
                    </Border>
                    
                    <!-- Inspector Tabs -->
                    <TabControl Grid.Row="1" Margin="0">
                        <!-- Summary Tab -->
                        <TabItem Header="Summary">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                         Padding="{StaticResource CardPadding}">
                                <StackPanel>
                                    <ui:CardExpander Header="Run Information" IsExpanded="True">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding RunStatus}" 
                                                      Style="{StaticResource BodyTextStyle}"/>
                                            
                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Start Time:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding StartTimeDisplay}" 
                                                      Style="{StaticResource BodyTextStyle}"/>
                                            
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="End Time:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding EndTimeDisplay}" 
                                                      Style="{StaticResource BodyTextStyle}"/>
                                            
                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Duration:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DurationDisplay}" 
                                                      Style="{StaticResource BodyTextStyle}"/>
                                            
                                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Exit Code:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ExitCode}" 
                                                      Style="{StaticResource BodyTextStyle}"/>
                                            
                                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Error:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding ErrorMessage}" 
                                                      Style="{StaticResource BodyTextStyle}" TextWrapping="Wrap"/>
                                        </Grid>
                                    </ui:CardExpander>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                        
                        <!-- Stdout Tab -->
                        <TabItem Header="Stdout">
                            <Border Margin="16" 
                                   Background="#0C0C0C" 
                                   BorderBrush="{StaticResource BorderSubtleBrush}"
                                   BorderThickness="0"
                                   CornerRadius="6">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                    <TextBox Text="{Binding StdoutContent, Mode=OneWay}" 
                                            IsReadOnly="True" 
                                            FontFamily="Cascadia Code, Consolas" 
                                            FontSize="11"
                                            Foreground="#CCCCCC"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            Padding="12"/>
                                </ScrollViewer>
                            </Border>
                        </TabItem>
                        
                        <!-- Stderr Tab -->
                        <TabItem Header="Stderr">
                            <Border Margin="16" 
                                   Background="#0C0C0C" 
                                   BorderBrush="{StaticResource BorderSubtleBrush}"
                                   BorderThickness="0"
                                   CornerRadius="6">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                    <TextBox Text="{Binding StderrContent, Mode=OneWay}" 
                                            IsReadOnly="True" 
                                            FontFamily="Cascadia Code, Consolas" 
                                            FontSize="11"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            Foreground="#FF6B6B"
                                            Padding="12"/>
                                </ScrollViewer>
                            </Border>
                        </TabItem>
                        
                        <!-- Structured Events Tab -->
                        <TabItem Header="Structured Events">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Event Filters -->
                                <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" 
                                        BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="0,0,0,1"
                                        Padding="{StaticResource CardPadding}">
                                    <WrapPanel>
                                        <ui:TextBox PlaceholderText="Filter events..." 
                                                   Text="{Binding EventSearchText, UpdateSourceTrigger=PropertyChanged}"
                                                   Width="200" 
                                                   Margin="{StaticResource ControlMarginMedium}"
                                                   Icon="{ui:SymbolIcon Filter24}"/>
                                        <CheckBox Content="Errors only" 
                                                 IsChecked="{Binding ErrorsOnly}"
                                                 VerticalAlignment="Center"
                                                 Margin="{StaticResource ControlMarginMedium}"/>
                                        <ui:Button Content="Refresh" Icon="{ui:SymbolIcon ArrowSync24}" 
                                                  Command="{Binding RefreshEventsCommand}"
                                                  Margin="{StaticResource ControlMarginMedium}"/>
                                        <ui:Button Content="Clear" Icon="{ui:SymbolIcon Dismiss24}" 
                                                  Command="{Binding ClearEventFiltersCommand}"/>
                                    </WrapPanel>
                                </Border>
                                
                                <!-- Events Grid -->
                                <DataGrid Grid.Row="1" 
                                         ItemsSource="{Binding FilteredEvents}"
                                         SelectedItem="{Binding SelectedEvent}"
                                         AutoGenerateColumns="False"
                                         IsReadOnly="True"
                                         SelectionMode="Single"
                                         VirtualizingPanel.IsVirtualizing="True"
                                         VirtualizingPanel.VirtualizationMode="Recycling"
                                         EnableRowVirtualization="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Timestamp" Binding="{Binding TimestampDisplay}" Width="120"/>
                                        <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="80"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="150"/>
                                        <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <!-- Event Details -->
                                <ui:CardExpander Grid.Row="2" Header="Event Details" IsExpanded="True" MaxHeight="200">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                        <TextBox Text="{Binding EventDetailsJson, Mode=OneWay}" 
                                                IsReadOnly="True" 
                                                FontFamily="Cascadia Code, Consolas" 
                                                FontSize="11"
                                                Foreground="{StaticResource TextPrimaryBrush}"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                Padding="8"/>
                                    </ScrollViewer>
                                </ui:CardExpander>
                            </Grid>
                        </TabItem>
                        
                        <!-- Artifacts Tab -->
                        <TabItem Header="Artifacts">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250" MinWidth="200"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Artifacts Tree -->
                                <Border Grid.Column="0" 
                                       BorderBrush="{StaticResource BorderSubtleBrush}" 
                                       BorderThickness="0,0,1,0"
                                       Padding="8">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TreeView ItemsSource="{Binding Artifacts}" 
                                                 VirtualizingStackPanel.IsVirtualizing="True"
                                                 SelectedItemChanged="ArtifactsTree_SelectedItemChanged">
                                            <TreeView.ItemTemplate>
                                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Name}"/>
                                                        <TextBlock Text="{Binding SizeDisplay}" 
                                                                  Foreground="{StaticResource TextTertiaryBrush}"
                                                                  FontSize="{StaticResource FontSizeXS}"
                                                                  Margin="8,0,0,0"/>
                                                    </StackPanel>
                                                </HierarchicalDataTemplate>
                                            </TreeView.ItemTemplate>
                                        </TreeView>
                                    </ScrollViewer>
                                </Border>
                                
                                <GridSplitter Grid.Column="1" 
                                             Width="4" 
                                             HorizontalAlignment="Stretch" 
                                             Background="Transparent"/>
                                
                                <!-- Artifact Content Viewer -->
                                <Border Grid.Column="2" 
                                       Background="#0C0C0C"
                                       Margin="8">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                        <TextBox Text="{Binding ArtifactContent, Mode=OneWay}" 
                                                IsReadOnly="True" 
                                                FontFamily="Cascadia Code, Consolas" 
                                                FontSize="11"
                                                Foreground="#CCCCCC"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                Padding="12"/>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Grid>
            </Border>
        </Grid>
        
        <!-- Busy Overlay -->
        <Border Grid.RowSpan="3" Background="#80000000" 
               Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True"/>
                <TextBlock Text="{Binding BusyMessage}" Margin="0,10,0,0" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
