<Page x:Class="PcTest.Ui.Views.Pages.LogsResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:PcTest.Ui.ViewModels"
      Title="Logs &amp; Results"
      d:DataContext="{d:DesignInstance vm:LogsResultsViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{StaticResource SurfaceBackgroundBrush}">
    
    <Grid Margin="16">
        <!-- Run Picker (shown when no run selected) -->
        <Grid Visibility="{Binding IsRunSelected, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Search/Filter Bar -->
            <Border Grid.Row="0" 
                    Background="{StaticResource CardBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderSubtleBrush}" 
                    BorderThickness="1"
                    CornerRadius="{StaticResource RadiusM}"
                    Padding="20"
                    Margin="0,0,0,16">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                </Border.Effect>
                <WrapPanel>
                    <ui:TextBox PlaceholderText="Search runs..." 
                               Text="{Binding RunPickerViewModel.SearchText, UpdateSourceTrigger=PropertyChanged}"
                               Width="250" 
                               Margin="{StaticResource ControlMarginMedium}"
                               Icon="{ui:SymbolIcon Search24}"/>
                    <ComboBox ItemsSource="{Binding RunPickerViewModel.StatusOptions}"
                             SelectedItem="{Binding RunPickerViewModel.StatusFilter}"
                             Width="120" 
                             Margin="{StaticResource ControlMarginMedium}"/>
                    <ComboBox ItemsSource="{Binding RunPickerViewModel.RunTypeOptions}"
                             SelectedItem="{Binding RunPickerViewModel.RunTypeFilter}"
                             Width="120" 
                             Margin="{StaticResource ControlMarginMedium}"/>
                    <DatePicker SelectedDate="{Binding RunPickerViewModel.StartTimeFrom}" 
                               Width="120" 
                               Margin="{StaticResource ControlMarginMedium}"/>
                    <DatePicker SelectedDate="{Binding RunPickerViewModel.StartTimeTo}" 
                               Width="120" 
                               Margin="{StaticResource ControlMarginMedium}"/>
                </WrapPanel>
            </Border>
            
            <!-- Runs Grid -->
            <DataGrid Grid.Row="1" 
                     ItemsSource="{Binding RunPickerViewModel.FilteredRuns}"
                     SelectedItem="{Binding RunPickerViewModel.SelectedRun}"
                     AutoGenerateColumns="False"
                     IsReadOnly="True"
                     SelectionMode="Single"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     EnableRowVirtualization="True"
                     MouseDoubleClick="RunsGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Run ID" Binding="{Binding RunId}" Width="200"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding RunType}" Width="80"/>
                    <DataGridTextColumn Header="Target" Binding="{Binding DisplayName}" Width="200"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                    <DataGridTextColumn Header="Start Time" Binding="{Binding StartTimeDisplay}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
        <!-- Logs/Results Viewer (shown when run is selected) -->
        <Grid Visibility="{Binding IsRunSelected, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource CardBackgroundBrush}" 
                    BorderBrush="{StaticResource BorderSubtleBrush}" 
                    BorderThickness="1"
                    CornerRadius="{StaticResource RadiusM}"
                    Padding="20"
                    Margin="0,0,0,16">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ui:Button Grid.Column="0" 
                              Icon="{ui:SymbolIcon ArrowLeft24}" 
                              Command="{Binding ClearRunCommand}"
                              ToolTip="Back"
                              Margin="0,0,20,0"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock Text="Run" 
                                  VerticalAlignment="Center" 
                                  FontSize="{StaticResource FontSizeXS}"
                                  Foreground="{StaticResource TextTertiaryBrush}"
                                  Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding RunId}" 
                                  FontWeight="{StaticResource FontWeightSemiBold}" 
                                  FontSize="{StaticResource FontSizeL}"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  VerticalAlignment="Center"/>
                        <ui:Badge Content="{Binding RunStatus}" 
                                 VerticalAlignment="Center"
                                 Margin="12,0,0,0"/>
                        <Border Width="1" Height="20" 
                               Background="{StaticResource BorderSubtleBrush}" 
                               Margin="16,0"/>
                        <TextBlock Text="Target" 
                                  VerticalAlignment="Center" 
                                  Foreground="{StaticResource TextTertiaryBrush}"
                                  FontSize="{StaticResource FontSizeXS}"
                                  Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding RunDisplayName}" 
                                  VerticalAlignment="Center"
                                  FontSize="{StaticResource FontSizeM}"
                                  Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                    
                    <ui:Button Grid.Column="2" 
                              Icon="{ui:SymbolIcon FolderOpen24}" 
                              Command="{Binding OpenFolderCommand}"
                              ToolTip="Open Folder"/>
                </Grid>
            </Border>
            
            <!-- Content Tabs -->
            <TabControl Grid.Row="1" Margin="0">
                <!-- Summary Tab -->
                <TabItem Header="Summary">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                 Margin="{StaticResource CardPadding}">
                        <StackPanel>
                            <ui:CardExpander Header="Result Summary" IsExpanded="True">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" 
                                              Style="{StaticResource LabelTextStyle}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding RunStatus}" 
                                              Style="{StaticResource BodyTextStyle}"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Start Time:" 
                                              Style="{StaticResource LabelTextStyle}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding StartTimeDisplay}" 
                                              Style="{StaticResource BodyTextStyle}"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="End Time:" 
                                              Style="{StaticResource LabelTextStyle}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding EndTimeDisplay}" 
                                              Style="{StaticResource BodyTextStyle}"/>
                                    
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Duration:" 
                                              Style="{StaticResource LabelTextStyle}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DurationDisplay}" 
                                              Style="{StaticResource BodyTextStyle}"/>
                                    
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Exit Code:" 
                                              Style="{StaticResource LabelTextStyle}"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ExitCode}" 
                                              Style="{StaticResource BodyTextStyle}"/>
                                    
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Error:" 
                                              Style="{StaticResource LabelTextStyle}"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding ErrorMessage}" 
                                              Style="{StaticResource BodyTextStyle}" TextWrapping="Wrap"/>
                                </Grid>
                            </ui:CardExpander>
                            
                            <ui:CardExpander Header="Artifacts" IsExpanded="True" 
                                            Margin="{StaticResource SectionMargin}">
                                <TreeView ItemsSource="{Binding Artifacts}" VirtualizingStackPanel.IsVirtualizing="True">
                                    <TreeView.ItemTemplate>
                                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                            <StackPanel Orientation="Horizontal">
                                                <ui:SymbolIcon Symbol="{Binding Icon}" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Name}"/>
                                            </StackPanel>
                                        </HierarchicalDataTemplate>
                                    </TreeView.ItemTemplate>
                                </TreeView>
                            </ui:CardExpander>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                
                <!-- Stdout Tab -->
                <TabItem Header="Stdout">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" 
                                   Margin="{StaticResource CardPadding}">
                            <ui:TextBox PlaceholderText="Search logs..." Width="200" 
                                       Text="{Binding StdoutSearchText, UpdateSourceTrigger=PropertyChanged}" 
                                       Icon="{ui:SymbolIcon Search24}"/>
                        </StackPanel>
                        
                        <Border Grid.Row="1" 
                               Margin="16,0,16,16" 
                               Background="#0C0C0C" 
                               BorderBrush="{StaticResource BorderSubtleBrush}"
                               BorderThickness="0"
                               CornerRadius="6">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <TextBox Text="{Binding StdoutContent, Mode=OneWay}" 
                                        IsReadOnly="True" 
                                        FontFamily="Cascadia Code, Consolas" 
                                        FontSize="11"
                                        Foreground="#CCCCCC"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        Padding="12"/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </TabItem>
                
                <!-- Stderr Tab -->
                <TabItem Header="Stderr">
                    <Border Margin="16" 
                           Background="#0C0C0C" 
                           BorderBrush="{StaticResource BorderSubtleBrush}"
                           BorderThickness="0"
                           CornerRadius="6">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding StderrContent, Mode=OneWay}" 
                                    IsReadOnly="True" 
                                    FontFamily="Cascadia Code, Consolas" 
                                    FontSize="11"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    Foreground="#FF6B6B"
                                    Padding="12"/>
                        </ScrollViewer>
                    </Border>
                </TabItem>
                
                <!-- Events Tab -->
                <TabItem Header="Structured Events">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Filters -->
                        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" 
                                BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="0,0,0,1"
                                Padding="{StaticResource CardPadding}">
                            <WrapPanel>
                                <ui:TextBox PlaceholderText="Filter events..." 
                                           Text="{Binding EventFilterText, UpdateSourceTrigger=PropertyChanged}"
                                           Width="200" 
                                           Margin="{StaticResource ControlMarginMedium}"
                                           Icon="{ui:SymbolIcon Filter24}"/>
                                <ComboBox ItemsSource="{Binding EventTypeOptions}"
                                         SelectedItem="{Binding EventTypeFilter}"
                                         Width="150" 
                                         Margin="{StaticResource ControlMarginMedium}"/>
                                <ComboBox ItemsSource="{Binding EventLevelOptions}"
                                         SelectedItem="{Binding EventLevelFilter}"
                                         Width="100" 
                                         Margin="{StaticResource ControlMarginMedium}"/>
                                <ui:Button Content="Refresh" Icon="{ui:SymbolIcon ArrowSync24}" 
                                          Command="{Binding RefreshEventsCommand}"/>
                            </WrapPanel>
                        </Border>
                        
                        <!-- Events Grid -->
                        <DataGrid Grid.Row="1" 
                                 ItemsSource="{Binding FilteredEvents}"
                                 SelectedItem="{Binding SelectedEvent}"
                                 AutoGenerateColumns="False"
                                 IsReadOnly="True"
                                 SelectionMode="Single"
                                 VirtualizingPanel.IsVirtualizing="True"
                                 VirtualizingPanel.VirtualizationMode="Recycling"
                                 EnableRowVirtualization="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Timestamp" Binding="{Binding TimestampDisplay}" Width="120"/>
                                <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="60"/>
                                <DataGridTextColumn Header="Type" Binding="{Binding EventType}" Width="120"/>
                                <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        
                        <!-- Event Details -->
                        <ui:CardExpander Grid.Row="2" Header="Event Details" IsExpanded="True" MaxHeight="200">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <TextBox Text="{Binding SelectedEventJson, Mode=OneWay}" 
                                        IsReadOnly="True" 
                                        FontFamily="Cascadia Code, Consolas" 
                                        FontSize="11"
                                        Foreground="{StaticResource TextPrimaryBrush}"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        Padding="8"/>
                            </ScrollViewer>
                        </ui:CardExpander>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        
        <!-- Busy Overlay -->
        <Border Background="#80000000" 
               Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True"/>
                <TextBlock Text="{Binding BusyMessage}" Margin="0,10,0,0" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
