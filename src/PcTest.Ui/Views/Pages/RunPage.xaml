<Page x:Class="PcTest.Ui.Views.Pages.RunPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:PcTest.Ui.ViewModels"
      xmlns:res="clr-namespace:PcTest.Ui.Resources"
      Title="Run"
      d:DataContext="{d:DesignInstance vm:RunViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBackgroundBrush}">

    <Page.Resources>
        <Style x:Key="IterationStatusBadgeStyle" TargetType="{x:Type ui:Badge}" BasedOn="{StaticResource {x:Type ui:Badge}}">
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeXS}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{Binding Status, Converter={StaticResource RunStatusToBrushConverter}}"/>
            <Setter Property="BorderBrush" Value="{Binding Status, Converter={StaticResource RunStatusToBrushConverter}}"/>
            <Setter Property="Foreground" Value="{DynamicResource TagBadgeTextBrush}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsRunning}" Value="True">
                    <Setter Property="Background" Value="{DynamicResource StatusRunningBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource StatusRunningBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Control Bar Card -->
        <Border Grid.Row="0" 
                Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderSubtleBrush}" 
                BorderThickness="1"
                CornerRadius="{StaticResource RadiusM}"
                Padding="20"
                Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Back Button (icon-only, lightweight) -->
                <ui:Button Grid.Column="0"
                          Icon="{ui:SymbolIcon ArrowLeft24}"
                          Command="{Binding GoBackCommand}"
                          Appearance="Transparent"
                          ToolTip="Back to Plan"
                          Visibility="{Binding HasBackButton, Converter={StaticResource BoolToVisibilityConverter}}"
                          Padding="8"
                          Margin="0,0,12,0"
                          VerticalAlignment="Center"/>
                
                <!-- Target Selector (shown when navigating directly) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="{Binding ShowTargetSelector, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Run Type:" VerticalAlignment="Center" 
                              FontSize="{StaticResource FontSizeM}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              Margin="{StaticResource ControlMarginMedium}"/>
                    <ComboBox SelectedIndex="{Binding RunType, Converter={StaticResource EnumToIntConverter}}" Width="120" Margin="{StaticResource ControlMarginMedium}">
                        <ComboBoxItem Content="Test Case"/>
                        <ComboBoxItem Content="Test Suite"/>
                        <ComboBoxItem Content="Test Plan"/>
                    </ComboBox>
                    <TextBlock Text="Target:" VerticalAlignment="Center" 
                              FontSize="{StaticResource FontSizeM}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              Margin="{StaticResource ControlMarginMedium}"/>
                    <ComboBox ItemsSource="{Binding AvailableTargets}" 
                             SelectedItem="{Binding TargetIdentity}" 
                             Width="300"/>
                </StackPanel>
                
                <!-- Target Display (shown when coming from Plan page) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="{Binding ShowTargetSelector, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <TextBlock Text="Target" 
                              VerticalAlignment="Center" 
                              FontSize="{StaticResource FontSizeXS}" 
                              Foreground="{DynamicResource TextTertiaryBrush}"
                              Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding TargetIdentity}" 
                              FontWeight="{StaticResource FontWeightSemiBold}" 
                              FontSize="{StaticResource FontSizeL}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              VerticalAlignment="Center"/>
                    <ui:Badge Content="{Binding RunType}" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    <Border Width="1" Height="20" 
                           Background="{DynamicResource BorderSubtleBrush}" 
                           Margin="16,0"/>
                    <ui:ProgressRing IsIndeterminate="True" Width="16" Height="16" 
                                    Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}"
                                    VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Status" 
                              VerticalAlignment="Center" 
                              FontSize="{StaticResource FontSizeXS}" 
                              Foreground="{DynamicResource TextTertiaryBrush}"
                              Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding StatusText}" 
                              FontWeight="{StaticResource FontWeightSemiBold}" 
                              FontSize="{StaticResource FontSizeL}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              VerticalAlignment="Center"/>
                    <ui:Badge Content="{Binding RepeatIterationBadgeText}"
                              Style="{StaticResource TagBadgeStyle}"
                              Visibility="{Binding ShowRepeatIndicator, Converter={StaticResource BoolToVisibilityConverter}}"
                              Margin="12,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <ui:Button Content="Start" 
                              Icon="{ui:SymbolIcon Play24}"
                              Command="{Binding StartCommand}"
                              Appearance="Primary"
                              IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                              Margin="0,0,8,0"/>
                    <ui:Button Content="Stop" 
                              Icon="{ui:SymbolIcon Stop24}"
                              Command="{Binding StopCommand}"
                              IsEnabled="{Binding IsRunning}"
                              Margin="0,0,8,0"/>
                    <ui:Button Content="Abort" 
                              Icon="{ui:SymbolIcon Dismiss24}"
                              Command="{Binding AbortCommand}"
                              IsEnabled="{Binding IsRunning}"
                              Appearance="Danger"
                              Margin="0,0,8,0"/>
                    <ui:Button 
                              Icon="{ui:SymbolIcon DocumentSearch24}"
                              Command="{Binding ViewHistoryCommand}"
                              ToolTip="View in History"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Execution Pipeline Card -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource CardBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderSubtleBrush}" 
                    BorderThickness="1"
                    CornerRadius="{StaticResource RadiusM}">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Execution Pipeline" 
                              Style="{StaticResource SectionTitleStyle}"
                              Margin="20,20,20,12"/>
                    
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Padding="8,0,8,8"
                                  Visibility="{Binding ShowIterationGroups, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl ItemsSource="{Binding Iterations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="8,6"
                                            Background="{DynamicResource CardBackgroundBrush}"
                                            BorderBrush="{DynamicResource BorderSubtleBrush}"
                                            BorderThickness="1"
                                            CornerRadius="8">
                                        <Expander IsExpanded="{Binding IsExpanded}"
                                                  Background="Transparent"
                                                  BorderThickness="0">
                                            <Expander.Header>
                                                <Border Background="{DynamicResource TimelineCardBackgroundBrush}"
                                                        CornerRadius="6"
                                                        Padding="12">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Label}"
                                                                      FontWeight="{StaticResource FontWeightSemiBold}"
                                                                      Foreground="{DynamicResource TextPrimaryBrush}"
                                                                      FontSize="{StaticResource FontSizeM}"/>
                                                            <TextBlock Text="â€¢"
                                                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                                                      Margin="8,0"/>
                                                            <TextBlock Text="{Binding ProgressDisplay}"
                                                                      Foreground="{DynamicResource TextSecondaryBrush}"
                                                                      FontSize="{StaticResource FontSizeS}"/>
                                                            <TextBlock Text="{Binding DurationDisplay}"
                                                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                                                      FontSize="{StaticResource FontSizeS}"
                                                                      Margin="12,0,0,0"/>
                                                        </StackPanel>
                                                        <ui:Badge Grid.Column="1"
                                                                  Content="{Binding StatusLabel}"
                                                                  Style="{StaticResource IterationStatusBadgeStyle}"
                                                                  VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </Expander.Header>
                                            <ListBox ItemsSource="{Binding Cases}"
                                                     SelectedItem="{Binding DataContext.SelectedNode, RelativeSource={RelativeSource AncestorType=Page}, Mode=TwoWay}"
                                                     BorderThickness="0"
                                                     Background="Transparent"
                                                     VirtualizingPanel.IsVirtualizing="True"
                                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                     Padding="4,4,4,8">
                                                <ListBox.ItemContainerStyle>
                                                    <Style TargetType="ListBoxItem">
                                                        <Setter Property="Padding" Value="0"/>
                                                        <Setter Property="Margin" Value="2,0,12,2"/>
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ListBoxItem">
                                                                    <Border Background="{TemplateBinding Background}"
                                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                                            Padding="{TemplateBinding Padding}"
                                                                            CornerRadius="6">
                                                                        <ContentPresenter/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="{DynamicResource InteractiveHoverBrush}"/>
                                                            </Trigger>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter Property="Background" Value="{DynamicResource InteractiveSelectedBrush}"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ListBox.ItemContainerStyle>
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Grid.Style>
                                                                <Style TargetType="Grid">
                                                                    <Setter Property="Margin" Value="12,8"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IndentLevel}" Value="1">
                                                                            <Setter Property="Margin" Value="32,8,12,8"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Grid.Style>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto"/>
                                                                <RowDefinition Height="Auto"/>
                                                            </Grid.RowDefinitions>
                                                            
                                                            <!-- Status Icon - aligned to first row only -->
                                                            <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Top">
                                                                <!-- Running state icon -->
                                                                <ui:SymbolIcon Symbol="Play20" 
                                                                              Foreground="{DynamicResource StatusRunningBrush}"
                                                                              FontSize="20" 
                                                                              ToolTip="Running"
                                                                              Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                                <!-- Other status icons -->
                                                                <ui:SymbolIcon Symbol="{Binding Status, Converter={StaticResource RunStatusToIconConverter}}" 
                                                                              Foreground="{Binding Status, Converter={StaticResource RunStatusToBrushConverter}}"
                                                                              FontSize="20" 
                                                                              ToolTip="{Binding Status}"
                                                                              Visibility="{Binding IsRunning, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                                            </Grid>
                                                            
                                                            <!-- First row: Name -->
                                                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                                                      FontWeight="{StaticResource FontWeightSemiBold}"
                                                                      FontSize="{StaticResource FontSizeM}"
                                                                      Foreground="{DynamicResource TextPrimaryBrush}"
                                                                      Margin="0,0,10,0"
                                                                      Text="{Binding DisplayName}"/>
                                                            
                                                            <!-- Second row: Id@Version -->
                                                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                                                      Foreground="{DynamicResource TextSecondaryBrush}" 
                                                                      FontSize="{StaticResource FontSizeS}"
                                                                      Margin="0,-4,10,0"
                                                                      Text="{Binding DisplayIdentity}"/>
                                                            
                                                            <!-- Status column - spans both rows -->
                                                            <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" HorizontalAlignment="Right">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>
                                                                <TextBlock Grid.Row="0" Text="{Binding StatusDisplay}" 
                                                                          FontSize="{StaticResource FontSizeS}"
                                                                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                                                                <TextBlock Grid.Row="1" Text="{Binding DurationDisplay}" 
                                                                          Foreground="{DynamicResource TextTertiaryBrush}" 
                                                                          FontSize="{StaticResource FontSizeXS}"/>
                                                            </Grid>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </Expander>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <ListBox Grid.Row="1" 
                            ItemsSource="{Binding Nodes}"
                            SelectedItem="{Binding SelectedNode}"
                            BorderThickness="0"
                            Background="Transparent"
                            VirtualizingPanel.IsVirtualizing="True"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            Padding="8,0,8,8"
                            Visibility="{Binding ShowFlatPipeline, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="2,0,12,2"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   Padding="{TemplateBinding Padding}"
                                                   CornerRadius="6">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource InteractiveHoverBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource InteractiveSelectedBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Margin" Value="12,8"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IndentLevel}" Value="1">
                                                    <Setter Property="Margin" Value="32,8,12,8"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Status Icon - aligned to first row only -->
                                    <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Top">
                                        <!-- Running state icon -->
                                        <ui:SymbolIcon Symbol="Play20" 
                                                      Foreground="{DynamicResource StatusRunningBrush}"
                                                      FontSize="20" 
                                                      ToolTip="Running"
                                                      Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        <!-- Other status icons -->
                                        <ui:SymbolIcon Symbol="{Binding Status, Converter={StaticResource RunStatusToIconConverter}}" 
                                                      Foreground="{Binding Status, Converter={StaticResource RunStatusToBrushConverter}}"
                                                      FontSize="20" 
                                                      ToolTip="{Binding Status}"
                                                      Visibility="{Binding IsRunning, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                    </Grid>
                                    
                                    <!-- First row: Name -->
                                    <TextBlock Grid.Row="0" Grid.Column="1" 
                                              FontWeight="{StaticResource FontWeightSemiBold}"
                                              FontSize="{StaticResource FontSizeM}"
                                              Foreground="{DynamicResource TextPrimaryBrush}"
                                              Margin="0,0,10,0"
                                              Text="{Binding DisplayName}"/>
                                    
                                    <!-- Second row: Id@Version -->
                                    <TextBlock Grid.Row="1" Grid.Column="1" 
                                              Foreground="{DynamicResource TextSecondaryBrush}" 
                                              FontSize="{StaticResource FontSizeS}"
                                              Margin="0,-4,10,0"
                                              Text="{Binding DisplayIdentity}"/>
                                    
                                    <!-- Status column - spans both rows -->
                                    <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" HorizontalAlignment="Right">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="{Binding StatusDisplay}" 
                                                  FontSize="{StaticResource FontSizeS}"
                                                  Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock Grid.Row="1" Text="{Binding DurationDisplay}" 
                                                  Foreground="{DynamicResource TextTertiaryBrush}" 
                                                  FontSize="{StaticResource FontSizeXS}"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Output Panels -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Console Output Card -->
                <Border Grid.Row="0"
                       Background="{DynamicResource CardBackgroundBrush}"
                       BorderBrush="{DynamicResource BorderSubtleBrush}"
                       BorderThickness="1"
                       CornerRadius="{StaticResource RadiusM}">
                    <Border.Effect>
                        <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Console Output" 
                                  Style="{StaticResource SectionTitleStyle}"
                                  Margin="20,20,20,12"/>
                        
                        <Border Grid.Row="1" 
                               Margin="12,0,12,12" 
                               Background="{DynamicResource TerminalBackgroundBrush}" 
                               BorderBrush="{DynamicResource BorderSubtleBrush}"
                               BorderThickness="0"
                               CornerRadius="6">
                            <ScrollViewer x:Name="ConsoleScrollViewer" 
                                         VerticalScrollBarVisibility="Auto" 
                                         HorizontalScrollBarVisibility="Auto">
                                <TextBox Text="{Binding ConsoleOutput, Mode=OneWay}" 
                                        IsReadOnly="True" 
                                        FontFamily="Cascadia Code, Consolas" 
                                        FontSize="11"
                                        Foreground="{DynamicResource TerminalTextBrush}"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        TextWrapping="NoWrap"
                                        Padding="12"
                                        Cursor="Arrow">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                               BorderBrush="{TemplateBinding BorderBrush}"
                                                               BorderThickness="{TemplateBinding BorderThickness}">
                                                            <ScrollViewer x:Name="PART_ContentHost" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Events Card - Timeline View -->
                <Border Grid.Row="2"
                       Background="{DynamicResource CardBackgroundBrush}"
                       BorderBrush="{DynamicResource BorderSubtleBrush}"
                       BorderThickness="1"
                       CornerRadius="{StaticResource RadiusM}">
                    <Border.Effect>
                        <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                    </Border.Effect>
                    <Border.Resources>
                        <!-- Event Timeline Converters -->
                        <res:EventCodeToTitleConverter x:Key="EventCodeToTitleConverter"/>
                        <res:EventCodeIsStartedConverter x:Key="EventCodeIsStartedConverter"/>
                        <res:EventCodeIsCompletedConverter x:Key="EventCodeIsCompletedConverter"/>
                        <res:EventLevelToIconConverter x:Key="EventLevelToIconConverter"/>
                    </Border.Resources>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Execution Timeline" 
                                  Style="{StaticResource SectionTitleStyle}"
                                  Margin="20,20,20,12"/>
                        
                        <ScrollViewer Grid.Row="1" 
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Disabled"
                                    Padding="0,0,8,12">
                            <ItemsControl ItemsSource="{Binding Events}"
                                        Margin="12,0,12,0"
                                        VirtualizingPanel.IsVirtualizing="True"
                                        VirtualizingPanel.VirtualizationMode="Recycling">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <!-- Event Timeline Item -->
                                        <Grid Margin="0,0,0,4">
                                            <Grid.ColumnDefinitions>
                                                <!-- Timeline column -->
                                                <ColumnDefinition Width="32"/>
                                                <!-- Content column -->
                                                <ColumnDefinition Width="*"/>
                                                <!-- Timestamp column -->
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Timeline Visual -->
                                            <Grid Grid.Column="0">
                                                <!-- Vertical line -->
                                                <Rectangle Width="2" 
                                                         Fill="{DynamicResource TimelineLineBrush}"
                                                         HorizontalAlignment="Center"
                                                         Margin="0,0,0,0"/>
                                                
                                                <!-- Event node/icon -->
                                                <Border Width="20" Height="20"
                                                       CornerRadius="10"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Top"
                                                       Margin="0,6,0,0">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="{DynamicResource TimelineNodeInfoBrush}"/>
                                                            <Setter Property="BorderThickness" Value="0"/>
                                                            <!-- Level-based color -->
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Level}" Value="error">
                                                                    <Setter Property="Background" Value="{DynamicResource TimelineNodeErrorBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Level}" Value="warning">
                                                                    <Setter Property="Background" Value="{DynamicResource TimelineNodeWarningBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Code, Converter={StaticResource EventCodeIsStartedConverter}}" Value="True">
                                                                    <Setter Property="Background" Value="Transparent"/>
                                                                    <Setter Property="BorderBrush" Value="{DynamicResource TimelineNodeStartedBrush}"/>
                                                                    <Setter Property="BorderThickness" Value="2"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Code, Converter={StaticResource EventCodeIsCompletedConverter}}" Value="True">
                                                                    <Setter Property="Background" Value="{DynamicResource TimelineNodeCompletedBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    
                                                    <!-- Icon inside node -->
                                                    <TextBlock Text="{Binding Level, Converter={StaticResource EventLevelToIconConverter}}"
                                                             FontFamily="Segoe MDL2 Assets"
                                                             FontSize="10"
                                                             Foreground="{DynamicResource TextOnPrimaryBrush}"
                                                             HorizontalAlignment="Center"
                                                             VerticalAlignment="Center"
                                                             Opacity="0.9"/>
                                                </Border>
                                            </Grid>
                                            
                                            <!-- Event Content Card -->
                                            <Border Grid.Column="1" 
                                                   Background="{DynamicResource TimelineCardBackgroundBrush}"
                                                   BorderBrush="{DynamicResource BorderSubtleBrush}"
                                                   BorderThickness="0"
                                                   CornerRadius="6"
                                                   Padding="12,8"
                                                   Margin="8,0,8,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="{DynamicResource TimelineCardHoverBrush}"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <!-- Event Title (derived from Code) -->
                                                    <TextBlock Grid.Row="0"
                                                             Text="{Binding Code, Converter={StaticResource EventCodeToTitleConverter}}"
                                                             FontWeight="{StaticResource FontWeightSemiBold}"
                                                             FontSize="{StaticResource FontSizeS}"
                                                             Foreground="{DynamicResource TextPrimaryBrush}"
                                                             TextTrimming="CharacterEllipsis"
                                                             Margin="0,0,0,4"/>
                                                    
                                                    <!-- Event Message -->
                                                    <TextBlock Grid.Row="1"
                                                             Text="{Binding Message}"
                                                             FontSize="{StaticResource FontSizeXS}"
                                                             Foreground="{DynamicResource TextSecondaryBrush}"
                                                             TextWrapping="Wrap"
                                                             MaxHeight="80"
                                                             TextTrimming="CharacterEllipsis"
                                                             ToolTip="{Binding Message}"/>
                                                </Grid>
                                            </Border>
                                            
                                            <!-- Timestamp -->
                                            <TextBlock Grid.Column="2"
                                                     Text="{Binding Timestamp, StringFormat='HH:mm:ss.fff'}"
                                                     FontFamily="Cascadia Code, Consolas"
                                                     FontSize="10"
                                                     Foreground="{DynamicResource TextTertiaryBrush}"
                                                     VerticalAlignment="Top"
                                                     Margin="4,8,8,0"
                                                     Opacity="0.7"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Running Indicator Overlay (non-blocking - allows clicks through) -->
        <!-- Removed blocking overlay per UX requirement - status is shown in control bar instead -->
    </Grid>
</Page>
