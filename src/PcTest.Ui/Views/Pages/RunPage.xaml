<Page x:Class="PcTest.Ui.Views.Pages.RunPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:PcTest.Ui.ViewModels"
      Title="Run"
      d:DataContext="{d:DesignInstance vm:RunViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{DynamicResource SurfaceBackgroundBrush}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Control Bar Card -->
        <Border Grid.Row="0" 
                Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderSubtleBrush}" 
                BorderThickness="1"
                CornerRadius="{StaticResource RadiusM}"
                Padding="20"
                Margin="0,0,0,16">
            <Border.Effect>
                <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Target Selector (shown when navigating directly) -->
                <StackPanel Orientation="Horizontal" Visibility="{Binding ShowTargetSelector, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Run Type:" VerticalAlignment="Center" 
                              FontSize="{StaticResource FontSizeM}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              Margin="{StaticResource ControlMarginMedium}"/>
                    <ComboBox SelectedIndex="{Binding RunType, Converter={StaticResource EnumToIntConverter}}" Width="120" Margin="{StaticResource ControlMarginMedium}">
                        <ComboBoxItem Content="Test Case"/>
                        <ComboBoxItem Content="Test Suite"/>
                        <ComboBoxItem Content="Test Plan"/>
                    </ComboBox>
                    <TextBlock Text="Target:" VerticalAlignment="Center" 
                              FontSize="{StaticResource FontSizeM}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              Margin="{StaticResource ControlMarginMedium}"/>
                    <ComboBox ItemsSource="{Binding AvailableTargets}" 
                             SelectedItem="{Binding TargetIdentity}" 
                             Width="300"/>
                </StackPanel>
                
                <!-- Target Display (shown when coming from Plan page) -->
                <StackPanel Orientation="Horizontal" Visibility="{Binding ShowTargetSelector, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <TextBlock Text="Target" 
                              VerticalAlignment="Center" 
                              FontSize="{StaticResource FontSizeXS}" 
                              Foreground="{DynamicResource TextTertiaryBrush}"
                              Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding TargetIdentity}" 
                              FontWeight="{StaticResource FontWeightSemiBold}" 
                              FontSize="{StaticResource FontSizeL}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              VerticalAlignment="Center"/>
                    <ui:Badge Content="{Binding RunType}" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    <Border Width="1" Height="20" 
                           Background="{DynamicResource BorderSubtleBrush}" 
                           Margin="16,0"/>
                    <ui:ProgressRing IsIndeterminate="True" Width="16" Height="16" 
                                    Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}"
                                    VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Status" 
                              VerticalAlignment="Center" 
                              FontSize="{StaticResource FontSizeXS}" 
                              Foreground="{DynamicResource TextTertiaryBrush}"
                              Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding StatusText}" 
                              FontWeight="{StaticResource FontWeightSemiBold}" 
                              FontSize="{StaticResource FontSizeL}"
                              Foreground="{DynamicResource TextPrimaryBrush}"
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Content="Start" 
                              Icon="{ui:SymbolIcon Play24}"
                              Command="{Binding StartCommand}"
                              Appearance="Primary"
                              IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                              Margin="0,0,8,0"/>
                    <ui:Button Content="Stop" 
                              Icon="{ui:SymbolIcon Stop24}"
                              Command="{Binding StopCommand}"
                              IsEnabled="{Binding IsRunning}"
                              Margin="0,0,8,0"/>
                    <ui:Button Content="Abort" 
                              Icon="{ui:SymbolIcon Dismiss24}"
                              Command="{Binding AbortCommand}"
                              IsEnabled="{Binding IsRunning}"
                              Appearance="Danger"
                              Margin="0,0,8,0"/>
                    <ui:Button 
                              Icon="{ui:SymbolIcon DocumentSearch24}"
                              Command="{Binding ViewHistoryCommand}"
                              ToolTip="View in History"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Execution Pipeline Card -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource CardBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderSubtleBrush}" 
                    BorderThickness="1"
                    CornerRadius="{StaticResource RadiusM}">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Execution Pipeline" 
                              Style="{StaticResource SectionTitleStyle}"
                              Margin="20,20,20,12"/>
                    
                    <ListBox Grid.Row="1" 
                            ItemsSource="{Binding Nodes}"
                            SelectedItem="{Binding SelectedNode}"
                            BorderThickness="0"
                            Background="Transparent"
                            VirtualizingPanel.IsVirtualizing="True"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            Padding="8,0,8,8">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0,0,0,2"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   Padding="{TemplateBinding Padding}"
                                                   CornerRadius="6">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource InteractiveHoverBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource InteractiveSelectedBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Margin" Value="12,8"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IndentLevel}" Value="1">
                                                    <Setter Property="Margin" Value="32,8,12,8"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Status Icon - aligned to first row only -->
                                    <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,8,0" VerticalAlignment="Top">
                                        <!-- Running state icon -->
                                        <ui:SymbolIcon Symbol="Play20" 
                                                      Foreground="{DynamicResource StatusRunningBrush}"
                                                      FontSize="20" 
                                                      ToolTip="Running"
                                                      Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        <!-- Other status icons -->
                                        <ui:SymbolIcon Symbol="{Binding Status, Converter={StaticResource RunStatusToIconConverter}}" 
                                                      Foreground="{Binding Status, Converter={StaticResource RunStatusToBrushConverter}}"
                                                      FontSize="20" 
                                                      ToolTip="{Binding Status}"
                                                      Visibility="{Binding IsRunning, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                    </Grid>
                                    
                                    <!-- First row: NodeId or Identity -->
                                    <TextBlock Grid.Row="0" Grid.Column="1" 
                                              FontWeight="{StaticResource FontWeightSemiBold}"
                                              FontSize="{StaticResource FontSizeM}"
                                              Foreground="{DynamicResource TextPrimaryBrush}"
                                              Margin="0,0,10,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding NodeId}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding NodeId}" Value="">
                                                        <Setter Property="Text" Value="{Binding Identity}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding NodeId}" Value="standalone">
                                                        <Setter Property="Text" Value="{Binding Identity}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- Second row: Identity (only visible if NodeId is not empty and not standalone) -->
                                    <TextBlock Grid.Row="1" Grid.Column="1" 
                                              Foreground="{DynamicResource TextSecondaryBrush}" 
                                              FontSize="{StaticResource FontSizeS}"
                                              Margin="0,0,10,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding Identity}"/>
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding NodeId}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding NodeId}" Value="standalone">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- Status column - spans both rows -->
                                    <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" HorizontalAlignment="Right">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="{Binding StatusDisplay}" 
                                                  FontSize="{StaticResource FontSizeS}"
                                                  Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <TextBlock Grid.Row="1" Text="{Binding DurationDisplay}" 
                                                  Foreground="{DynamicResource TextTertiaryBrush}" 
                                                  FontSize="{StaticResource FontSizeXS}"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Output Panels -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="16"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Console Output Card -->
                <Border Grid.Row="0"
                       Background="{DynamicResource CardBackgroundBrush}"
                       BorderBrush="{DynamicResource BorderSubtleBrush}"
                       BorderThickness="1"
                       CornerRadius="{StaticResource RadiusM}">
                    <Border.Effect>
                        <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Console Output" 
                                  Style="{StaticResource SectionTitleStyle}"
                                  Margin="20,20,20,12"/>
                        
                        <Border Grid.Row="1" 
                               Margin="12,0,12,12" 
                               Background="{DynamicResource TerminalBackgroundBrush}" 
                               BorderBrush="{DynamicResource BorderSubtleBrush}"
                               BorderThickness="0"
                               CornerRadius="6">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <TextBox Text="{Binding ConsoleOutput, Mode=OneWay}" 
                                        IsReadOnly="True" 
                                        FontFamily="Cascadia Code, Consolas" 
                                        FontSize="11"
                                        Foreground="{DynamicResource TerminalTextBrush}"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        TextWrapping="NoWrap"
                                        Padding="12"
                                        Cursor="Arrow">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                               BorderBrush="{TemplateBinding BorderBrush}"
                                                               BorderThickness="{TemplateBinding BorderThickness}">
                                                            <ScrollViewer x:Name="PART_ContentHost" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Events Card -->
                <Border Grid.Row="2"
                       Background="{DynamicResource CardBackgroundBrush}"
                       BorderBrush="{DynamicResource BorderSubtleBrush}"
                       BorderThickness="1"
                       CornerRadius="{StaticResource RadiusM}">
                    <Border.Effect>
                        <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Events (Simplified)" 
                                  Style="{StaticResource SectionTitleStyle}"
                                  Margin="20,20,20,12"/>
                        
                        <Border Grid.Row="1" 
                               Margin="12,0,12,12" 
                               Background="{DynamicResource TerminalBackgroundBrush}" 
                               BorderBrush="{DynamicResource BorderSubtleBrush}"
                               BorderThickness="0"
                               CornerRadius="6">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                <TextBox Text="{Binding EventsOutput, Mode=OneWay}" 
                                        IsReadOnly="True" 
                                        FontFamily="Cascadia Code, Consolas" 
                                        FontSize="11"
                                        Foreground="{DynamicResource TerminalTextBrush}"
                                        BorderThickness="0"
                                        Background="Transparent"
                                        TextWrapping="NoWrap"
                                        Padding="12"
                                        Cursor="Arrow">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Border Background="{TemplateBinding Background}"
                                                               BorderBrush="{TemplateBinding BorderBrush}"
                                                               BorderThickness="{TemplateBinding BorderThickness}">
                                                            <ScrollViewer x:Name="PART_ContentHost" />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Running Indicator Overlay (non-blocking - allows clicks through) -->
        <!-- Removed blocking overlay per UX requirement - status is shown in control bar instead -->
    </Grid>
</Page>
