<Page x:Class="PcTest.Ui.Views.Pages.RunPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:PcTest.Ui.ViewModels"
      Title="Run"
      d:DataContext="{d:DesignInstance vm:RunViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Control Bar -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" 
                BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="0,0,0,1"
                Padding="{StaticResource CardPadding}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Target Selector (shown when navigating directly) -->
                <StackPanel Orientation="Horizontal" Visibility="{Binding ShowTargetSelector, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Run Type:" VerticalAlignment="Center" 
                              FontSize="{StaticResource FontSizeM}"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="{StaticResource ControlMarginMedium}"/>
                    <ComboBox SelectedIndex="{Binding RunType, Converter={StaticResource EnumToIntConverter}}" Width="120" Margin="{StaticResource ControlMarginMedium}">
                        <ComboBoxItem Content="Test Case"/>
                        <ComboBoxItem Content="Test Suite"/>
                        <ComboBoxItem Content="Test Plan"/>
                    </ComboBox>
                    <TextBlock Text="Target:" VerticalAlignment="Center" 
                              FontSize="{StaticResource FontSizeM}"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="{StaticResource ControlMarginMedium}"/>
                    <ComboBox ItemsSource="{Binding AvailableTargets}" 
                             SelectedItem="{Binding TargetIdentity}" 
                             Width="300"/>
                </StackPanel>
                
                <!-- Target Display (shown when coming from Plan page) -->
                <StackPanel Orientation="Horizontal" Visibility="{Binding ShowTargetSelector, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <TextBlock Text="Target:" VerticalAlignment="Center" 
                              FontSize="{StaticResource FontSizeM}" 
                              Foreground="{StaticResource TextSecondaryBrush}"
                              Margin="{StaticResource ControlMarginMedium}"/>
                    <TextBlock Text="{Binding TargetIdentity}" 
                              FontWeight="{StaticResource FontWeightSemiBold}" 
                              FontSize="{StaticResource FontSizeM}"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              VerticalAlignment="Center"/>
                    <ui:Badge Content="{Binding RunType}" Margin="{StaticResource ControlMarginMedium}" VerticalAlignment="Center"/>
                    <TextBlock Text="Status:" VerticalAlignment="Center" 
                              FontSize="{StaticResource FontSizeM}" 
                              Foreground="{StaticResource TextSecondaryBrush}"
                              Margin="16,0,8,0"/>
                    <TextBlock Text="{Binding StatusText}" 
                              FontWeight="{StaticResource FontWeightSemiBold}" 
                              FontSize="{StaticResource FontSizeM}"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Content="Start" 
                              Icon="{ui:SymbolIcon Play24}"
                              Command="{Binding StartCommand}"
                              Appearance="Primary"
                              IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBoolConverter}}"
                              Margin="{StaticResource ControlMarginSmall}"/>
                    <ui:Button Content="Stop" 
                              Icon="{ui:SymbolIcon Stop24}"
                              Command="{Binding StopCommand}"
                              IsEnabled="{Binding IsRunning}"
                              Margin="{StaticResource ControlMarginSmall}"/>
                    <ui:Button Content="Abort" 
                              Icon="{ui:SymbolIcon Dismiss24}"
                              Command="{Binding AbortCommand}"
                              IsEnabled="{Binding IsRunning}"
                              Appearance="Danger"
                              Margin="{StaticResource ControlMarginSmall}"/>
                    <ui:Button Content="View Logs" 
                              Icon="{ui:SymbolIcon DocumentSearch24}"
                              Command="{Binding ViewLogsCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Node List -->
            <Border Grid.Column="0" 
                    Background="{StaticResource SurfaceBackgroundBrush}"
                    BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Execution Pipeline" 
                              Style="{StaticResource SectionTitleStyle}"
                              Margin="{StaticResource CardPadding}"/>
                    
                    <ListBox Grid.Row="1" 
                            ItemsSource="{Binding Nodes}"
                            SelectedItem="{Binding SelectedNode}"
                            VirtualizingPanel.IsVirtualizing="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="10,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Status Icon - aligned to first row only -->
                                    <Ellipse Grid.Row="0" Grid.Column="0" Width="12" Height="12" 
                                            Margin="0,4,10,0" VerticalAlignment="Top">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="{StaticResource StatusPendingBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                        <Setter Property="Fill" Value="{StaticResource StatusRunningBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Passed">
                                                        <Setter Property="Fill" Value="{StaticResource StatusSuccessBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                        <Setter Property="Fill" Value="{StaticResource StatusErrorBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Error">
                                                        <Setter Property="Fill" Value="{StaticResource StatusWarningBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                    
                                    <!-- First row: NodeId or Identity -->
                                    <TextBlock Grid.Row="0" Grid.Column="1" 
                                              FontWeight="{StaticResource FontWeightSemiBold}"
                                              FontSize="{StaticResource FontSizeM}"
                                              Foreground="{StaticResource TextPrimaryBrush}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding NodeId}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding NodeId}" Value="">
                                                        <Setter Property="Text" Value="{Binding Identity}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- Second row: Identity (only visible if NodeId is not empty) -->
                                    <TextBlock Grid.Row="1" Grid.Column="1" 
                                              Foreground="{StaticResource TextSecondaryBrush}" 
                                              FontSize="{StaticResource FontSizeS}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding Identity}"/>
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding NodeId}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    
                                    <!-- Status column - spans both rows -->
                                    <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" HorizontalAlignment="Right">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="{Binding StatusDisplay}" 
                                                  FontSize="{StaticResource FontSizeS}"
                                                  Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock Grid.Row="1" Text="{Binding DurationDisplay}" 
                                                  Foreground="{StaticResource TextTertiaryBrush}" 
                                                  FontSize="{StaticResource FontSizeXS}"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Output Panels -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Console Output -->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Console Output" 
                              Style="{StaticResource SectionTitleStyle}"
                              Margin="{StaticResource CardPadding}"/>
                    
                    <Border Grid.Row="1" 
                           Margin="16,0,16,16" 
                           Background="{StaticResource ControlBackgroundSecondaryBrush}" 
                           BorderBrush="{StaticResource BorderSubtleBrush}"
                           BorderThickness="1"
                           CornerRadius="{StaticResource RadiusM}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding ConsoleOutput, Mode=OneWay}" 
                                    IsReadOnly="True" 
                                    FontFamily="Consolas" 
                                    FontSize="{StaticResource FontSizeM}"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    TextWrapping="NoWrap"
                                    Padding="{StaticResource ThicknessM}"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
                
                <!-- Events Tail -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Events (Simplified)" 
                              Style="{StaticResource SectionTitleStyle}"
                              Margin="{StaticResource CardPadding}"/>
                    
                    <Border Grid.Row="1" 
                           Margin="16,0,16,16" 
                           Background="{StaticResource ControlBackgroundSecondaryBrush}" 
                           BorderBrush="{StaticResource BorderSubtleBrush}"
                           BorderThickness="1"
                           CornerRadius="{StaticResource RadiusM}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding EventsOutput, Mode=OneWay}" 
                                    IsReadOnly="True" 
                                    FontFamily="Consolas" 
                                    FontSize="{StaticResource FontSizeM}"
                                    Foreground="{StaticResource TextPrimaryBrush}"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    TextWrapping="NoWrap"
                                    Padding="{StaticResource ThicknessM}"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
        
        <!-- Progress Overlay -->
        <Border Grid.RowSpan="2" Background="#80000000" 
               Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True"/>
                <TextBlock Text="Running..." Margin="0,10,0,0" Foreground="White" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
