<Page x:Class="PcTest.Ui.Views.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:PcTest.Ui.ViewModels"
      Title="History"
      d:DataContext="{d:DesignInstance vm:HistoryViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Loaded="Page_Loaded"
      Background="{DynamicResource SurfaceBackgroundBrush}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Filters Card -->
        <Border Grid.Row="0" 
                Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderSubtleBrush}" 
                BorderThickness="1"
                CornerRadius="{StaticResource RadiusM}"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <WrapPanel>
                    <ui:TextBox PlaceholderText="Search..." 
                               Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                               Width="200" 
                               Margin="{StaticResource ControlMarginMedium}"
                               Icon="{ui:SymbolIcon Search24}"/>
                    
                    <ComboBox ItemsSource="{Binding StatusOptions}" 
                             SelectedItem="{Binding StatusFilter}"
                             Width="120" 
                             Margin="{StaticResource ControlMarginMedium}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <ComboBox ItemsSource="{Binding RunTypeOptions}" 
                             SelectedItem="{Binding RunTypeFilter}"
                             Width="120" 
                             Margin="{StaticResource ControlMarginMedium}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <CheckBox Content="Top-level only" 
                             IsChecked="{Binding TopLevelOnly}" 
                             VerticalAlignment="Center" 
                             Margin="{StaticResource ControlMarginMedium}"/>
                    
                    <DatePicker SelectedDate="{Binding StartTimeFrom}" 
                               Width="120" 
                               Margin="{StaticResource ControlMarginMedium}"/>
                    <DatePicker SelectedDate="{Binding StartTimeTo}" 
                               Width="120" 
                               Margin="{StaticResource ControlMarginMedium}"/>
                    
                    <ui:Button Content="Reset" 
                              Icon="{ui:SymbolIcon Dismiss24}" 
                              Command="{Binding ClearFiltersCommand}"
                              Margin="{StaticResource ControlMarginMedium}"/>
                </WrapPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Content="Refresh" 
                              Icon="{ui:SymbolIcon ArrowSync24}" 
                              Command="{Binding RefreshCommand}"
                              Appearance="Primary"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Master-Detail Layout -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500" MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Master: Run List Card -->
            <Border Grid.Column="0"
                   Background="{DynamicResource CardBackgroundBrush}"
                   BorderBrush="{DynamicResource BorderSubtleBrush}"
                   BorderThickness="1"
                   CornerRadius="{StaticResource RadiusM}">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                </Border.Effect>
                <Grid Grid.IsSharedSizeScope="True">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="{DynamicResource ControlBackgroundSecondaryBrush}"
                            BorderBrush="{DynamicResource BorderSubtleBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50" SharedSizeGroup="StatusColumn"/>
                                <ColumnDefinition Width="*" SharedSizeGroup="TargetColumn"/>
                                <ColumnDefinition Width="50" SharedSizeGroup="TypeColumn"/>
                                <ColumnDefinition Width="80" SharedSizeGroup="StartColumn"/>
                                <ColumnDefinition Width="80" SharedSizeGroup="DurationColumn"/>
                                <ColumnDefinition Width="80" SharedSizeGroup="RunIdColumn"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="1" Text="Target" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>
                            <TextBlock Grid.Column="2" Text="Type" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Start" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>
                            <TextBlock Grid.Column="4" Text="Duration" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>
                            <TextBlock Grid.Column="5" Text="Run ID" Foreground="{DynamicResource TextSecondaryBrush}" FontSize="12"/>
                        </Grid>
                    </Border>

                    <ListView Grid.Row="1"
                              ItemsSource="{Binding VisibleNodes}"
                              SelectedItem="{Binding SelectedNode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              BorderThickness="0"
                              Background="Transparent"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              VirtualizingPanel.CacheLength="20"
                              VirtualizingPanel.CacheLengthUnit="Item"
                              ScrollViewer.CanContentScroll="True">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Height" Value="48"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource InteractiveHoverBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{DynamicResource InteractiveSelectedBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" SharedSizeGroup="StatusColumn"/>
                                        <ColumnDefinition Width="*" SharedSizeGroup="TargetColumn"/>
                                        <ColumnDefinition Width="50" SharedSizeGroup="TypeColumn"/>
                                        <ColumnDefinition Width="80" SharedSizeGroup="StartColumn"/>
                                        <ColumnDefinition Width="80" SharedSizeGroup="DurationColumn"/>
                                        <ColumnDefinition Width="80" SharedSizeGroup="RunIdColumn"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Column -->
                                    <ui:SymbolIcon Grid.Column="0"
                                                  Symbol="{Binding Run.Status, Converter={StaticResource RunStatusToIconConverter}}"
                                                  Foreground="{Binding Run.Status, Converter={StaticResource RunStatusToBrushConverter}}"
                                                  FontSize="20"
                                                  HorizontalAlignment="Center"
                                                  ToolTip="{Binding Run.Status}"/>

                                    <!-- Target Column -->
                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Margin="{Binding Depth, Converter={StaticResource DepthToIndentConverter}}">
                                        <Button Command="{Binding DataContext.ToggleNodeCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="0"
                                                Width="20"
                                                Height="20">
                                            <ui:SymbolIcon FontSize="16">
                                                <ui:SymbolIcon.Style>
                                                    <Style TargetType="ui:SymbolIcon">
                                                        <Setter Property="Symbol" Value="ChevronRight24"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Children.Count}" Value="0">
                                                                <Setter Property="Visibility" Value="Hidden"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                                                <Setter Property="Symbol" Value="ChevronDown24"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ui:SymbolIcon.Style>
                                            </ui:SymbolIcon>
                                        </Button>

                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Run.NameWithoutVersion}"
                                                      FontSize="13"
                                                      FontWeight="Medium"
                                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding Run.VersionDisplay}"
                                                      FontSize="11"
                                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                                      Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Type Column -->
                                    <ui:SymbolIcon Grid.Column="2"
                                                  Symbol="{Binding Run.RunType, Converter={StaticResource RunTypeToIconConverter}}"
                                                  FontSize="20"
                                                  Foreground="{DynamicResource TextSecondaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  ToolTip="{Binding Run.RunTypeTooltip}"/>

                                    <!-- Start Time Column -->
                                    <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Run.StartTime, StringFormat=yyyy-MM-dd}"
                                                  FontSize="12"
                                                  Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding Run.StartTime, StringFormat=HH:mm:ss}"
                                                  FontSize="11"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  Margin="0,1,0,0"/>
                                    </StackPanel>

                                    <!-- Duration Column -->
                                    <TextBlock Grid.Column="4"
                                              Text="{Binding Run.Duration, StringFormat=mm\\:ss}"
                                              FontFamily="Consolas"
                                              FontSize="12"
                                              Foreground="{DynamicResource TextSecondaryBrush}"
                                              VerticalAlignment="Center"
                                              ToolTip="{Binding Run.Duration, StringFormat=hh\\:mm\\:ss}"/>

                                    <!-- Run ID Column -->
                                    <TextBlock Grid.Column="5"
                                              Text="{Binding Run.ShortRunId}"
                                              FontFamily="Consolas"
                                              FontSize="11"
                                              Foreground="{DynamicResource TextTertiaryBrush}"
                                              ToolTip="{Binding Run.RunId}"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                         Width="16" 
                         HorizontalAlignment="Stretch" 
                         Background="Transparent"
                         ShowsPreview="False"/>
            
            <!-- Detail: Run Inspector Card -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource CardBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderSubtleBrush}" 
                    BorderThickness="1"
                    CornerRadius="{StaticResource RadiusM}">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                </Border.Effect>
                
                <Grid>
                    <!-- Show placeholder when no run is selected -->
                    <Grid Visibility="{Binding IsRunSelected, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="DocumentSearch24" FontSize="48" Foreground="{DynamicResource TextTertiaryBrush}"/>
                            <TextBlock Text="Select a run to view details" 
                                      FontSize="{StaticResource FontSizeL}"
                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                      Margin="0,16,0,0"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Show inspector when run is selected -->
                    <Grid Visibility="{Binding IsRunSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Inspector Header -->
                    <Border Grid.Row="0" 
                            Background="{DynamicResource ControlBackgroundSecondaryBrush}"
                            BorderBrush="{DynamicResource BorderSubtleBrush}" 
                            BorderThickness="0,0,0,1"
                            Padding="20,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="{Binding SelectedRun.RunId}" 
                                              FontFamily="Consolas"
                                              FontWeight="{StaticResource FontWeightSemiBold}" 
                                              FontSize="{StaticResource FontSizeM}"
                                              Foreground="{DynamicResource TextPrimaryBrush}"
                                              VerticalAlignment="Center"/>
                                    <ui:Button Icon="{ui:SymbolIcon Copy20}" 
                                              Command="{Binding CopyRunIdCommand}"
                                              ToolTip="Copy full Run ID"
                                              Appearance="Secondary"
                                              Margin="8,0,0,0"
                                              Padding="4"
                                              Height="28"
                                              Width="28"
                                              VerticalAlignment="Center"/>
                                    <ui:Badge Content="{Binding RunStatus}" 
                                             VerticalAlignment="Center"
                                             Margin="8,0,0,0"
                                             Background="{Binding RunStatusEnum, Converter={StaticResource RunStatusToBrushConverter}}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Target: " 
                                              Foreground="{DynamicResource TextTertiaryBrush}"
                                              FontSize="{StaticResource FontSizeM}"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding RunDisplayName}" 
                                              FontSize="{StaticResource FontSizeM}"
                                              Foreground="{DynamicResource TextSecondaryBrush}"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <ui:Button Grid.Column="1" 
                                      Icon="{ui:SymbolIcon FolderOpen24}" 
                                      Command="{Binding OpenFolderCommand}"
                                      ToolTip="Open Run Folder"/>
                        </Grid>
                    </Border>
                    
                    <!-- Inspector Tabs -->
                    <TabControl Grid.Row="1" Margin="0">
                        <!-- Summary Tab -->
                        <TabItem Header="Summary">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                         Padding="{StaticResource CardPadding}">
                                <StackPanel>
                                    <ui:CardExpander Header="Run Information" IsExpanded="True">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding RunStatus}" 
                                                      Style="{StaticResource BodyTextStyle}"/>
                                            
                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Start Time:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding StartTimeDisplay}" 
                                                      Style="{StaticResource BodyTextStyle}"/>
                                            
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="End Time:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding EndTimeDisplay}" 
                                                      Style="{StaticResource BodyTextStyle}"/>
                                            
                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Duration:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DurationDisplay}" 
                                                      Style="{StaticResource BodyTextStyle}"/>
                                            
                                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Exit Code:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ExitCode}" 
                                                      Style="{StaticResource BodyTextStyle}"/>
                                            
                                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Error:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding ErrorMessage}" 
                                                      Style="{StaticResource BodyTextStyle}" TextWrapping="Wrap"/>
                                        </Grid>
                                    </ui:CardExpander>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                        
                        <!-- Stdout Tab -->
                        <TabItem Header="Stdout">
                            <Border Margin="16" 
                                   Background="{DynamicResource TerminalBackgroundBrush}" 
                                   BorderBrush="{DynamicResource BorderSubtleBrush}"
                                   BorderThickness="0"
                                   CornerRadius="6">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                    <TextBox Text="{Binding StdoutContent, Mode=OneWay}" 
                                            IsReadOnly="True" 
                                            FontFamily="Cascadia Code, Consolas" 
                                            FontSize="11"
                                            Foreground="{DynamicResource TerminalTextBrush}"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            TextWrapping="NoWrap"
                                            Padding="12"
                                            Cursor="Arrow">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="{TemplateBinding Background}"
                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                   BorderThickness="{TemplateBinding BorderThickness}">
                                                                <ScrollViewer x:Name="PART_ContentHost" />
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </ScrollViewer>
                            </Border>
                        </TabItem>
                        
                        <!-- Stderr Tab -->
                        <TabItem Header="Stderr">
                            <Border Margin="16" 
                                   Background="{DynamicResource TerminalBackgroundBrush}" 
                                   BorderBrush="{DynamicResource BorderSubtleBrush}"
                                   BorderThickness="0"
                                   CornerRadius="6">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                    <TextBox Text="{Binding StderrContent, Mode=OneWay}" 
                                            IsReadOnly="True" 
                                            FontFamily="Cascadia Code, Consolas" 
                                            FontSize="11"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            Foreground="{DynamicResource TerminalErrorBrush}"
                                            TextWrapping="NoWrap"
                                            Padding="12"
                                            Cursor="Arrow">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="{TemplateBinding Background}"
                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                   BorderThickness="{TemplateBinding BorderThickness}">
                                                                <ScrollViewer x:Name="PART_ContentHost" />
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </ScrollViewer>
                            </Border>
                        </TabItem>
                        
                        <!-- Structured Events Tab -->
                        <TabItem Header="Structured Events">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Event Filters -->
                                <Border Grid.Row="0" Background="{DynamicResource CardBackgroundBrush}" 
                                        BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="0,0,0,1"
                                        Padding="{StaticResource CardPadding}">
                                    <WrapPanel>
                                        <ui:TextBox PlaceholderText="Filter events..." 
                                                   Text="{Binding EventSearchText, UpdateSourceTrigger=PropertyChanged}"
                                                   Width="200" 
                                                   Margin="{StaticResource ControlMarginMedium}"
                                                   Icon="{ui:SymbolIcon Filter24}"/>
                                        <CheckBox Content="Errors only" 
                                                 IsChecked="{Binding ErrorsOnly}"
                                                 VerticalAlignment="Center"
                                                 Margin="{StaticResource ControlMarginMedium}"/>
                                        <ui:Button Content="Refresh" Icon="{ui:SymbolIcon ArrowSync24}" 
                                                  Command="{Binding RefreshEventsCommand}"
                                                  Margin="{StaticResource ControlMarginMedium}"/>
                                        <ui:Button Content="Clear" Icon="{ui:SymbolIcon Dismiss24}" 
                                                  Command="{Binding ClearEventFiltersCommand}"/>
                                    </WrapPanel>
                                </Border>
                                
                                <!-- Events Grid -->
                                <DataGrid Grid.Row="1" 
                                         ItemsSource="{Binding FilteredEvents}"
                                         SelectedItem="{Binding SelectedEvent}"
                                         AutoGenerateColumns="False"
                                         IsReadOnly="True"
                                         SelectionMode="Single"
                                         VirtualizingPanel.IsVirtualizing="True"
                                         VirtualizingPanel.VirtualizationMode="Recycling"
                                         EnableRowVirtualization="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Timestamp" Binding="{Binding TimestampDisplay}" Width="120"/>
                                        <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="80"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="150"/>
                                        <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <!-- Event Details -->
                                <ui:CardExpander Grid.Row="2" Header="Event Details" IsExpanded="True" MaxHeight="200">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                        <TextBox Text="{Binding EventDetailsJson, Mode=OneWay}" 
                                                IsReadOnly="True" 
                                                FontFamily="Cascadia Code, Consolas" 
                                                FontSize="11"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                Padding="8"/>
                                    </ScrollViewer>
                                </ui:CardExpander>
                            </Grid>
                        </TabItem>
                        
                        <!-- Artifacts Tab -->
                        <TabItem Header="Artifacts">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250" MinWidth="200"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Artifacts Tree -->
                                <Border Grid.Column="0" 
                                       BorderBrush="{DynamicResource BorderSubtleBrush}" 
                                       BorderThickness="0,0,1,0"
                                       Padding="8">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TreeView ItemsSource="{Binding Artifacts}" 
                                                 VirtualizingStackPanel.IsVirtualizing="True"
                                                 SelectedItemChanged="ArtifactsTree_SelectedItemChanged">
                                            <TreeView.ItemTemplate>
                                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Name}"/>
                                                        <TextBlock Text="{Binding SizeDisplay}" 
                                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                                  FontSize="{StaticResource FontSizeXS}"
                                                                  Margin="8,0,0,0"/>
                                                    </StackPanel>
                                                </HierarchicalDataTemplate>
                                            </TreeView.ItemTemplate>
                                        </TreeView>
                                    </ScrollViewer>
                                </Border>
                                
                                <GridSplitter Grid.Column="1" 
                                             Width="4" 
                                             HorizontalAlignment="Stretch" 
                                             Background="Transparent"/>
                                
                                <!-- Artifact Content Viewer -->
                                <Border Grid.Column="2" 
                                       Background="{DynamicResource TerminalBackgroundBrush}"
                                       Margin="8">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                        <TextBox Text="{Binding ArtifactContent, Mode=OneWay}" 
                                                IsReadOnly="True" 
                                                FontFamily="Cascadia Code, Consolas" 
                                                FontSize="11"
                                                Foreground="{DynamicResource TerminalTextBrush}"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                TextWrapping="NoWrap"
                                                Padding="12"
                                                Cursor="Arrow">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="TextBox">
                                                                <Border Background="{TemplateBinding Background}"
                                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                                       BorderThickness="{TemplateBinding BorderThickness}">
                                                                    <ScrollViewer x:Name="PART_ContentHost" />
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Grid>
            </Border>
        </Grid>
        
        <!-- Busy Overlay -->
        <Border Grid.RowSpan="3" Background="{DynamicResource OverlayBackgroundBrush}" 
               Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True"/>
                <TextBlock Text="{Binding BusyMessage}" Margin="0,10,0,0" Foreground="{DynamicResource TextOnDarkBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
