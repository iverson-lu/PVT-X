<Page x:Class="PcTest.Ui.Views.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:PcTest.Ui.ViewModels"
      Title="History"
      d:DataContext="{d:DesignInstance vm:HistoryViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Loaded="Page_Loaded"
      Background="{DynamicResource SurfaceBackgroundBrush}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Filters Card -->
        <Border Grid.Row="0" 
                Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderSubtleBrush}" 
                BorderThickness="1"
                CornerRadius="{StaticResource RadiusM}"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <WrapPanel>
                    <ui:TextBox PlaceholderText="Search..." 
                               Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                               Width="200" 
                               Margin="{StaticResource ControlMarginMedium}"
                               Icon="{ui:SymbolIcon Search24}"/>
                    
                    <ComboBox ItemsSource="{Binding StatusOptions}" 
                             SelectedItem="{Binding StatusFilter}"
                             Width="120" 
                             Margin="{StaticResource ControlMarginMedium}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <ComboBox ItemsSource="{Binding RunTypeOptions}" 
                             SelectedItem="{Binding RunTypeFilter}"
                             Width="120" 
                             Margin="{StaticResource ControlMarginMedium}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <CheckBox Content="Top-level only" 
                             IsChecked="{Binding TopLevelOnly}" 
                             VerticalAlignment="Center" 
                             Margin="{StaticResource ControlMarginMedium}"/>
                    
                    <DatePicker SelectedDate="{Binding StartTimeFrom}" 
                               Width="120" 
                               Margin="{StaticResource ControlMarginMedium}"/>
                    <DatePicker SelectedDate="{Binding StartTimeTo}" 
                               Width="120" 
                               Margin="{StaticResource ControlMarginMedium}"/>
                    
                    <ui:Button Content="Reset" 
                              Icon="{ui:SymbolIcon Dismiss24}" 
                              Command="{Binding ClearFiltersCommand}"
                              Margin="{StaticResource ControlMarginMedium}"/>
                </WrapPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Content="Refresh" 
                              Icon="{ui:SymbolIcon ArrowSync24}" 
                              Command="{Binding RefreshCommand}"
                              Appearance="Primary"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Master-Detail Layout -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="550" MinWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Master: Run Tree List Card -->
            <Border Grid.Column="0"
                   Background="{DynamicResource CardBackgroundBrush}"
                   BorderBrush="{DynamicResource BorderSubtleBrush}"
                   BorderThickness="1"
                   CornerRadius="{StaticResource RadiusM}">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Column Headers -->
                    <Border Grid.Row="0" 
                            Background="{DynamicResource ControlBackgroundSecondaryBrush}" 
                            BorderBrush="{DynamicResource BorderSubtleBrush}" 
                            BorderThickness="0,0,0,1"
                            CornerRadius="8,8,0,0"
                            Padding="8,8,8,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/><!-- Status -->
                                <ColumnDefinition Width="*"/><!-- Target with expand -->
                                <ColumnDefinition Width="50"/><!-- Type -->
                                <ColumnDefinition Width="60"/><!-- Start -->
                                <ColumnDefinition Width="60"/><!-- Duration -->
                                <ColumnDefinition Width="60"/><!-- RunId -->
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="" FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Target" FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}" Margin="24,0,0,0"/>
                            <TextBlock Grid.Column="2" Text="Type" FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Start" FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}"/>
                            <TextBlock Grid.Column="4" Text="Duration" FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}"/>
                            <TextBlock Grid.Column="5" Text="Run ID" FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}"/>
                        </Grid>
                    </Border>
                    
                    <!-- Tree List -->
                    <ListBox Grid.Row="1"
                            ItemsSource="{Binding VisibleNodes}"
                            SelectedItem="{Binding SelectedNode, Mode=TwoWay}"
                            VirtualizingPanel.IsVirtualizing="True"
                            VirtualizingPanel.VirtualizationMode="Recycling"
                            VirtualizingPanel.CacheLength="20"
                            VirtualizingPanel.CacheLengthUnit="Item"
                            ScrollViewer.CanContentScroll="True"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Height" Value="48"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd" 
                                                   Background="{TemplateBinding Background}" 
                                                   BorderBrush="{DynamicResource GridLineBrush}"
                                                   BorderThickness="0,0,0,1"
                                                   Padding="8,0">
                                                <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource InteractiveHoverBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource InteractiveSelectedBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="36"/><!-- Status -->
                                        <ColumnDefinition Width="*"/><!-- Target with expand/indent -->
                                        <ColumnDefinition Width="50"/><!-- Type -->
                                        <ColumnDefinition Width="60"/><!-- Start -->
                                        <ColumnDefinition Width="60"/><!-- Duration -->
                                        <ColumnDefinition Width="60"/><!-- RunId -->
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Status Icon -->
                                    <ui:SymbolIcon Grid.Column="0"
                                                  Symbol="{Binding DisplayStatus, Converter={StaticResource RunStatusToIconConverter}}" 
                                                  Foreground="{Binding DisplayStatus, Converter={StaticResource RunStatusToBrushConverter}}"
                                                  FontSize="18" 
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  ToolTip="{Binding DisplayStatus}"/>
                                    
                                    <!-- Target with Indent and Expand Arrow -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"
                                               Margin="{Binding Depth, Converter={StaticResource DepthToIndentConverter}}">
                                        <!-- Expand/Collapse Button (only when CanExpand) -->
                                        <Button Command="{Binding ToggleExpandCommand}" 
                                               Visibility="{Binding CanExpand, Converter={StaticResource BoolToVisibilityConverter}}"
                                               Background="Transparent" 
                                               BorderThickness="0" 
                                               Padding="2"
                                               Width="20" Height="20"
                                               VerticalAlignment="Center"
                                               Cursor="Hand">
                                            <ui:SymbolIcon Symbol="{Binding IsExpanded, Converter={StaticResource IsExpandedToIconConverter}}" 
                                                          FontSize="12"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </Button>
                                        <!-- Spacer when no expand button -->
                                        <Border Width="20" 
                                               Visibility="{Binding CanExpand, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                        
                                        <!-- Target Name + Version -->
                                        <StackPanel Margin="4,0,0,0">
                                            <TextBlock Text="{Binding DisplayName}" 
                                                      FontSize="13"
                                                      FontWeight="Medium"
                                                      Foreground="{DynamicResource TextPrimaryBrush}"
                                                      TextTrimming="CharacterEllipsis"
                                                      MaxWidth="200"/>
                                            <TextBlock Text="{Binding DisplaySubtitle}" 
                                                      FontSize="10"
                                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                                      Visibility="{Binding DisplaySubtitle, Converter={StaticResource StringToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Type Icon -->
                                    <ui:SymbolIcon Grid.Column="2"
                                                  Symbol="{Binding DisplayRunType, Converter={StaticResource RunTypeToIconConverter}}" 
                                                  FontSize="18"
                                                  Foreground="{DynamicResource TextSecondaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  ToolTip="{Binding Run.RunTypeTooltip}"
                                                  Visibility="{Binding ShowTypeIcon, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    
                                    <!-- Start Time -->
                                    <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DisplayStartTime, StringFormat=MM-dd}" 
                                                  FontSize="11"
                                                  Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding DisplayStartTime, StringFormat=HH:mm}" 
                                                  FontSize="10"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"/>
                                    </StackPanel>
                                    
                                    <!-- Duration -->
                                    <TextBlock Grid.Column="4"
                                              Text="{Binding DisplayDuration, StringFormat=mm\\:ss}" 
                                              FontFamily="Consolas"
                                              FontSize="11"
                                              Foreground="{DynamicResource TextSecondaryBrush}"
                                              VerticalAlignment="Center"
                                              ToolTip="{Binding DisplayDuration, StringFormat=hh\\:mm\\:ss}"/>
                                    
                                    <!-- Short Run ID -->
                                    <TextBlock Grid.Column="5"
                                              Text="{Binding DisplayShortRunId}" 
                                              FontFamily="Consolas"
                                              FontSize="10"
                                              Foreground="{DynamicResource TextTertiaryBrush}"
                                              ToolTip="{Binding DisplayRunId}"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                         Width="16" 
                         HorizontalAlignment="Stretch" 
                         Background="Transparent"
                         ShowsPreview="False"/>
            
            <!-- Detail: Run Inspector Card -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource CardBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderSubtleBrush}" 
                    BorderThickness="1"
                    CornerRadius="{StaticResource RadiusM}">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                </Border.Effect>
                
                <Grid>
                    <!-- Show placeholder when no run is selected -->
                    <Grid Visibility="{Binding IsRunSelected, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="DocumentSearch24" FontSize="48" Foreground="{DynamicResource TextTertiaryBrush}"/>
                            <TextBlock Text="Select a run to view details" 
                                      FontSize="{StaticResource FontSizeL}"
                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                      Margin="0,16,0,0"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Show inspector when run is selected -->
                    <Grid Visibility="{Binding IsRunSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Inspector Header -->
                    <Border Grid.Row="0" 
                            Background="{DynamicResource ControlBackgroundSecondaryBrush}"
                            BorderBrush="{DynamicResource BorderSubtleBrush}" 
                            BorderThickness="0,0,0,1"
                            CornerRadius="8,8,0,0"
                            Padding="20,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="{Binding SelectedNode.Run.RunId}" 
                                              FontFamily="Consolas"
                                              FontWeight="{StaticResource FontWeightSemiBold}" 
                                              FontSize="{StaticResource FontSizeM}"
                                              Foreground="{DynamicResource TextPrimaryBrush}"
                                              VerticalAlignment="Center"/>
                                    <ui:Button Icon="{ui:SymbolIcon Copy20}" 
                                              Command="{Binding CopyRunIdCommand}"
                                              ToolTip="Copy full Run ID"
                                              Appearance="Secondary"
                                              Margin="8,0,0,0"
                                              Padding="4"
                                              Height="28"
                                              Width="28"
                                              VerticalAlignment="Center"/>
                                    <ui:Badge Content="{Binding RunStatus}" 
                                             VerticalAlignment="Center"
                                             Margin="8,0,0,0"
                                             Background="{Binding RunStatusEnum, Converter={StaticResource RunStatusToBrushConverter}}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Target: " 
                                              Foreground="{DynamicResource TextTertiaryBrush}"
                                              FontSize="{StaticResource FontSizeM}"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding RunDisplayName}" 
                                              FontSize="{StaticResource FontSizeM}"
                                              Foreground="{DynamicResource TextSecondaryBrush}"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <ui:Button Icon="{ui:SymbolIcon ArrowCircleLeft24}" 
                                          Command="{Binding GoToSourceCommand}"
                                          ToolTip="Go to Source (Case/Suite/Plan)"
                                          Margin="0,0,8,0"/>
                                <ui:Button Icon="{ui:SymbolIcon FolderOpen24}" 
                                          Command="{Binding OpenFolderCommand}"
                                          ToolTip="Open Run Folder"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Inspector Content Area -->
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Segmented View Switcher -->
                        <Border Grid.Row="0" 
                                Background="{DynamicResource ControlBackgroundSecondaryBrush}"
                                BorderBrush="{DynamicResource BorderSubtleBrush}" 
                                BorderThickness="0,0,0,1"
                                Padding="20,12">
                            <Border.Resources>
                                <!-- Segmented Button Style -->
                                <Style x:Key="SegmentButtonStyle" TargetType="RadioButton">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="14,7"/>
                                    <Setter Property="FontSize" Value="13"/>
                                    <Setter Property="FontWeight" Value="Normal"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                    <Setter Property="Margin" Value="0,0,8,0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="RadioButton">
                                                <Border x:Name="Border"
                                                       Background="{TemplateBinding Background}"
                                                       BorderThickness="0"
                                                       CornerRadius="8"
                                                       Padding="{TemplateBinding Padding}">
                                                    <Grid>
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                        <Border x:Name="Underline"
                                                               Height="2"
                                                               VerticalAlignment="Bottom"
                                                               Margin="4,0,4,-7"
                                                               Background="{DynamicResource AccentFillColorDefaultBrush}"
                                                               CornerRadius="1"
                                                               Opacity="0"/>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource SubtleFillColorSecondaryBrush}"/>
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource SubtleFillColorTertiaryBrush}"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                        <Setter TargetName="Underline" Property="Opacity" Value="1"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Border.Resources>
                            
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Content="Summary" 
                                           Style="{StaticResource SegmentButtonStyle}"
                                           GroupName="DetailView"
                                           IsChecked="{Binding SelectedDetailView, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Summary}"/>
                                <RadioButton Content="Stdout" 
                                           Style="{StaticResource SegmentButtonStyle}"
                                           GroupName="DetailView"
                                           IsChecked="{Binding SelectedDetailView, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Stdout}"/>
                                <RadioButton Content="Stderr" 
                                           Style="{StaticResource SegmentButtonStyle}"
                                           GroupName="DetailView"
                                           IsChecked="{Binding SelectedDetailView, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Stderr}"/>
                                <RadioButton Content="Structured Events" 
                                           Style="{StaticResource SegmentButtonStyle}"
                                           GroupName="DetailView"
                                           IsChecked="{Binding SelectedDetailView, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=StructuredEvents}"/>
                                <RadioButton Content="Artifacts" 
                                           Style="{StaticResource SegmentButtonStyle}"
                                           GroupName="DetailView"
                                           IsChecked="{Binding SelectedDetailView, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Artifacts}"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Content Area with View Switching -->
                        <Grid Grid.Row="1">
                            <!-- Summary View -->
                            <Grid Visibility="{Binding SelectedDetailView, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Summary}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                         Padding="{StaticResource CardPadding}">
                                <StackPanel>
                                    <ui:CardExpander Header="Run Information" IsExpanded="True">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding RunStatus}" 
                                                      Style="{StaticResource BodyTextStyle}"/>
                                            
                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Start Time:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding StartTimeDisplay}" 
                                                      Style="{StaticResource BodyTextStyle}"/>
                                            
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="End Time:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding EndTimeDisplay}" 
                                                      Style="{StaticResource BodyTextStyle}"/>
                                            
                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Duration:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DurationDisplay}" 
                                                      Style="{StaticResource BodyTextStyle}"/>
                                            
                                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Exit Code:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ExitCode}" 
                                                      Style="{StaticResource BodyTextStyle}"/>
                                            
                                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Error:" 
                                                      Style="{StaticResource LabelTextStyle}"/>
                                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding ErrorMessage}" 
                                                      Style="{StaticResource BodyTextStyle}" TextWrapping="Wrap"/>
                                        </Grid>
                                    </ui:CardExpander>
                                </StackPanel>
                            </ScrollViewer>
                            </Grid>
                            
                            <!-- Stdout View -->
                            <Grid Visibility="{Binding SelectedDetailView, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Stdout}">
                            <Border Margin="16" 
                                   Background="{DynamicResource TerminalBackgroundBrush}" 
                                   BorderBrush="{DynamicResource BorderSubtleBrush}"
                                   BorderThickness="0"
                                   CornerRadius="6">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                    <TextBox Text="{Binding StdoutContent, Mode=OneWay}" 
                                            IsReadOnly="True" 
                                            FontFamily="Cascadia Code, Consolas" 
                                            FontSize="11"
                                            Foreground="{DynamicResource TerminalTextBrush}"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            TextWrapping="NoWrap"
                                            Padding="12"
                                            Cursor="Arrow">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="{TemplateBinding Background}"
                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                   BorderThickness="{TemplateBinding BorderThickness}">
                                                                <ScrollViewer x:Name="PART_ContentHost" />
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </ScrollViewer>
                            </Border>
                            </Grid>
                            
                            <!-- Stderr View -->
                            <Grid Visibility="{Binding SelectedDetailView, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Stderr}">
                            <Border Margin="16" 
                                   Background="{DynamicResource TerminalBackgroundBrush}" 
                                   BorderBrush="{DynamicResource BorderSubtleBrush}"
                                   BorderThickness="0"
                                   CornerRadius="6">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                    <TextBox Text="{Binding StderrContent, Mode=OneWay}" 
                                            IsReadOnly="True" 
                                            FontFamily="Cascadia Code, Consolas" 
                                            FontSize="11"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            Foreground="{DynamicResource TerminalErrorBrush}"
                                            TextWrapping="NoWrap"
                                            Padding="12"
                                            Cursor="Arrow">
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="TextBox">
                                                            <Border Background="{TemplateBinding Background}"
                                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                                   BorderThickness="{TemplateBinding BorderThickness}">
                                                                <ScrollViewer x:Name="PART_ContentHost" />
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </ScrollViewer>
                            </Border>
                            </Grid>
                            
                            <!-- Structured Events View -->
                            <Grid Visibility="{Binding SelectedDetailView, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=StructuredEvents}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Event Filters -->
                                <Border Grid.Row="0" Background="{DynamicResource CardBackgroundBrush}" 
                                        BorderBrush="{DynamicResource BorderSubtleBrush}" BorderThickness="0,0,0,1"
                                        Padding="{StaticResource CardPadding}">
                                    <WrapPanel>
                                        <ui:TextBox PlaceholderText="Filter events..." 
                                                   Text="{Binding EventSearchText, UpdateSourceTrigger=PropertyChanged}"
                                                   Width="200" 
                                                   Margin="{StaticResource ControlMarginMedium}"
                                                   Icon="{ui:SymbolIcon Filter24}"/>
                                        <CheckBox Content="Errors only" 
                                                 IsChecked="{Binding ErrorsOnly}"
                                                 VerticalAlignment="Center"
                                                 Margin="{StaticResource ControlMarginMedium}"/>
                                        <ui:Button Content="Refresh" Icon="{ui:SymbolIcon ArrowSync24}" 
                                                  Command="{Binding RefreshEventsCommand}"
                                                  Margin="{StaticResource ControlMarginMedium}"/>
                                        <ui:Button Content="Clear" Icon="{ui:SymbolIcon Dismiss24}" 
                                                  Command="{Binding ClearEventFiltersCommand}"/>
                                    </WrapPanel>
                                </Border>
                                
                                <!-- Events Grid -->
                                <DataGrid Grid.Row="1" 
                                         ItemsSource="{Binding FilteredEvents}"
                                         SelectedItem="{Binding SelectedEvent}"
                                         AutoGenerateColumns="False"
                                         IsReadOnly="True"
                                         SelectionMode="Single"
                                         VirtualizingPanel.IsVirtualizing="True"
                                         VirtualizingPanel.VirtualizationMode="Recycling"
                                         EnableRowVirtualization="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Timestamp" Binding="{Binding TimestampDisplay}" Width="120"/>
                                        <DataGridTextColumn Header="Level" Binding="{Binding Level}" Width="80"/>
                                        <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="200"/>
                                        <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <!-- Event Details -->
                                <ui:CardExpander Grid.Row="2" Header="Event Details" IsExpanded="True" MaxHeight="200">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                        <TextBox Text="{Binding EventDetailsJson, Mode=OneWay}" 
                                                IsReadOnly="True" 
                                                FontFamily="Cascadia Code, Consolas" 
                                                FontSize="11"
                                                Foreground="{DynamicResource TextPrimaryBrush}"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                Padding="8"/>
                                    </ScrollViewer>
                                </ui:CardExpander>
                            </Grid>
                            </Grid>
                            
                            <!-- Artifacts View -->
                            <Grid Visibility="{Binding SelectedDetailView, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Artifacts}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250" MinWidth="200"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Artifacts Tree -->
                                <Border Grid.Column="0" 
                                       BorderBrush="{DynamicResource BorderSubtleBrush}" 
                                       BorderThickness="0,0,1,0"
                                       Padding="8">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TreeView ItemsSource="{Binding Artifacts}" 
                                                 VirtualizingStackPanel.IsVirtualizing="True"
                                                 SelectedItemChanged="ArtifactsTree_SelectedItemChanged">
                                            <TreeView.ItemTemplate>
                                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Name}"/>
                                                        <TextBlock Text="{Binding SizeDisplay}" 
                                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                                  FontSize="{StaticResource FontSizeXS}"
                                                                  Margin="8,0,0,0"/>
                                                    </StackPanel>
                                                </HierarchicalDataTemplate>
                                            </TreeView.ItemTemplate>
                                        </TreeView>
                                    </ScrollViewer>
                                </Border>
                                
                                <GridSplitter Grid.Column="1" 
                                             Width="4" 
                                             HorizontalAlignment="Stretch" 
                                             Background="Transparent"/>
                                
                                <!-- Artifact Content Viewer -->
                                <Border Grid.Column="2" 
                                       Background="{DynamicResource TerminalBackgroundBrush}"
                                       Margin="8">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                                        <TextBox Text="{Binding ArtifactContent, Mode=OneWay}" 
                                                IsReadOnly="True" 
                                                FontFamily="Cascadia Code, Consolas" 
                                                FontSize="11"
                                                Foreground="{DynamicResource TerminalTextBrush}"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                TextWrapping="NoWrap"
                                                Padding="12"
                                                Cursor="Arrow">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="TextBox">
                                                                <Border Background="{TemplateBinding Background}"
                                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                                       BorderThickness="{TemplateBinding BorderThickness}">
                                                                    <ScrollViewer x:Name="PART_ContentHost" />
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
            </Border>
        </Grid>
        
        <!-- Busy Overlay -->
        <Border Grid.RowSpan="3" Background="{DynamicResource OverlayBackgroundBrush}" 
               Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True"/>
                <TextBlock Text="{Binding BusyMessage}" Margin="0,10,0,0" Foreground="{DynamicResource TextOnDarkBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
