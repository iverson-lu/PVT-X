<Page x:Class="PcTest.Ui.Views.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:PcTest.Ui.ViewModels"
      Title="History"
      d:DataContext="{d:DesignInstance vm:HistoryViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Filters -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" 
                BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="0,0,0,1"
                Padding="{StaticResource CardPadding}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <WrapPanel>
                    <ui:TextBox PlaceholderText="Search..." 
                               Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                               Width="200" 
                               Margin="{StaticResource ControlMarginMedium}"
                               Icon="{ui:SymbolIcon Search24}"/>
                    
                    <ComboBox ItemsSource="{Binding StatusOptions}" 
                             SelectedItem="{Binding StatusFilter}"
                             Width="120" 
                             Margin="{StaticResource ControlMarginMedium}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <ComboBox ItemsSource="{Binding RunTypeOptions}" 
                             SelectedItem="{Binding RunTypeFilter}"
                             Width="120" 
                             Margin="{StaticResource ControlMarginMedium}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <CheckBox Content="Top-level only" 
                             IsChecked="{Binding TopLevelOnly}" 
                             VerticalAlignment="Center" 
                             Margin="{StaticResource ControlMarginMedium}"/>
                    
                    <DatePicker SelectedDate="{Binding StartTimeFrom}" 
                               Width="120" 
                               Margin="{StaticResource ControlMarginMedium}"/>
                    <DatePicker SelectedDate="{Binding StartTimeTo}" 
                               Width="120" 
                               Margin="{StaticResource ControlMarginMedium}"/>
                </WrapPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Content="Refresh" 
                              Icon="{ui:SymbolIcon ArrowSync24}" 
                              Command="{Binding RefreshCommand}" 
                              Margin="{StaticResource ControlMarginSmall}"/>
                    <ui:Button Content="Clear" 
                              Icon="{ui:SymbolIcon Dismiss24}" 
                              Command="{Binding ClearFiltersCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Runs List -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            
            <!-- Data Grid -->
            <DataGrid Grid.Column="0" 
                     ItemsSource="{Binding Runs}"
                     SelectedItem="{Binding SelectedRun}"
                     AutoGenerateColumns="False"
                     IsReadOnly="True"
                     CanUserAddRows="False"
                     CanUserDeleteRows="False"
                     SelectionMode="Single"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     EnableRowVirtualization="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Run ID" Binding="{Binding RunId}" Width="200"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding RunType}" Width="80"/>
                    <DataGridTextColumn Header="Target" Binding="{Binding DisplayName}" Width="200"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                    <DataGridTextColumn Header="Start Time" Binding="{Binding StartTimeDisplay}" Width="150"/>
                    <DataGridTextColumn Header="Duration" Binding="{Binding DurationDisplay}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
            
            <!-- Details Panel -->
            <Border Grid.Column="1" 
                    Background="{StaticResource SurfaceBackgroundBrush}"
                    BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="1,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="{StaticResource CardPadding}" DataContext="{Binding SelectedRun}">
                        <TextBlock Text="Run Details" 
                                  Style="{StaticResource SectionTitleStyle}"/>
                        
                        <Grid Visibility="{Binding DataContext.SelectedRun, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource NullToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Run ID:" 
                                      Style="{StaticResource LabelTextStyle}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding RunId}" 
                                      Style="{StaticResource BodyTextStyle}" TextWrapping="Wrap"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" 
                                      Style="{StaticResource LabelTextStyle}" 
                                      Margin="{StaticResource SectionItemMargin}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding RunType}" 
                                      Style="{StaticResource BodyTextStyle}" 
                                      Margin="{StaticResource SectionItemMargin}"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Target:" 
                                      Style="{StaticResource LabelTextStyle}" 
                                      Margin="{StaticResource SectionItemMargin}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DisplayName}" 
                                      Style="{StaticResource BodyTextStyle}" 
                                      Margin="{StaticResource SectionItemMargin}"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Status:" 
                                      Style="{StaticResource LabelTextStyle}" 
                                      Margin="{StaticResource SectionItemMargin}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Status}" 
                                      Style="{StaticResource BodyTextStyle}" 
                                      Margin="{StaticResource SectionItemMargin}"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Start:" 
                                      Style="{StaticResource LabelTextStyle}" 
                                      Margin="{StaticResource SectionItemMargin}"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding StartTimeDisplay}" 
                                      Style="{StaticResource BodyTextStyle}" 
                                      Margin="{StaticResource SectionItemMargin}"/>
                            
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Duration:" 
                                      Style="{StaticResource LabelTextStyle}" 
                                      Margin="{StaticResource SectionItemMargin}"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding DurationDisplay}" 
                                      Style="{StaticResource BodyTextStyle}" 
                                      Margin="{StaticResource SectionItemMargin}"/>
                            
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Test ID:" 
                                      Style="{StaticResource LabelTextStyle}" 
                                      Margin="{StaticResource SectionItemMargin}"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding TestId}" 
                                      Style="{StaticResource BodyTextStyle}" 
                                      Margin="{StaticResource SectionItemMargin}"/>
                            
                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Suite ID:" 
                                      Style="{StaticResource LabelTextStyle}" 
                                      Margin="{StaticResource SectionItemMargin}"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding SuiteId}" 
                                      Style="{StaticResource BodyTextStyle}" 
                                      Margin="{StaticResource SectionItemMargin}"/>
                        </Grid>
                        
                        <!-- Actions -->
                        <StackPanel Margin="{StaticResource SectionMargin}">
                            <ui:Button Content="View Logs &amp; Results" 
                                      Icon="{ui:SymbolIcon DocumentSearch24}"
                                      Command="{Binding DataContext.ViewLogsResultsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                      Appearance="Primary"
                                      HorizontalAlignment="Stretch"
                                      Margin="{StaticResource SectionItemMargin}"/>
                            <ui:Button Content="Open Folder" 
                                      Icon="{ui:SymbolIcon FolderOpen24}"
                                      Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                      HorizontalAlignment="Stretch"
                                      Margin="{StaticResource SectionItemMargin}"/>
                            <ui:Button Content="Rerun" 
                                      Icon="{ui:SymbolIcon ArrowRepeatAll24}"
                                      Command="{Binding DataContext.RerunCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                      HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Busy Overlay -->
        <Border Grid.RowSpan="2" Background="#80000000" 
               Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True"/>
                <TextBlock Text="{Binding BusyMessage}" Margin="0,10,0,0" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
