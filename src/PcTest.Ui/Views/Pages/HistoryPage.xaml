<Page x:Class="PcTest.Ui.Views.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:PcTest.Ui.ViewModels"
      Title="History"
      d:DataContext="{d:DesignInstance vm:HistoryViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Filters -->
        <Border Grid.Row="0" Background="{DynamicResource ControlFillColorDefaultBrush}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <WrapPanel>
                    <ui:TextBox PlaceholderText="Search..." 
                               Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                               Width="200" Margin="0,0,10,5"
                               Icon="{ui:SymbolIcon Search24}"/>
                    
                    <ComboBox ItemsSource="{Binding StatusOptions}" 
                             SelectedItem="{Binding StatusFilter}"
                             Width="120" Margin="0,0,10,5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <ComboBox ItemsSource="{Binding RunTypeOptions}" 
                             SelectedItem="{Binding RunTypeFilter}"
                             Width="120" Margin="0,0,10,5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <CheckBox Content="Top-level only" IsChecked="{Binding TopLevelOnly}" VerticalAlignment="Center" Margin="0,0,10,5"/>
                    
                    <DatePicker SelectedDate="{Binding StartTimeFrom}" Width="120" Margin="0,0,10,5"/>
                    <DatePicker SelectedDate="{Binding StartTimeTo}" Width="120" Margin="0,0,10,5"/>
                </WrapPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Content="Refresh" Icon="{ui:SymbolIcon ArrowSync24}" Command="{Binding RefreshCommand}" Margin="0,0,5,0"/>
                    <ui:Button Content="Clear" Icon="{ui:SymbolIcon Dismiss24}" Command="{Binding ClearFiltersCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Runs List -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            
            <!-- Data Grid -->
            <DataGrid Grid.Column="0" 
                     ItemsSource="{Binding Runs}"
                     SelectedItem="{Binding SelectedRun}"
                     AutoGenerateColumns="False"
                     IsReadOnly="True"
                     CanUserAddRows="False"
                     CanUserDeleteRows="False"
                     SelectionMode="Single"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     EnableRowVirtualization="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Run ID" Binding="{Binding RunId}" Width="200"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding RunType}" Width="80"/>
                    <DataGridTextColumn Header="Target" Binding="{Binding DisplayName}" Width="200"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                    <DataGridTextColumn Header="Start Time" Binding="{Binding StartTimeDisplay}" Width="150"/>
                    <DataGridTextColumn Header="Duration" Binding="{Binding DurationDisplay}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
            
            <!-- Details Panel -->
            <Border Grid.Column="1" BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="1,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15" DataContext="{Binding SelectedRun}">
                        <TextBlock Text="Run Details" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,15"/>
                        
                        <Grid Visibility="{Binding DataContext.SelectedRun, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource NullToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Run ID:" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding RunId}" TextWrapping="Wrap"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Type:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding RunType}" Margin="0,5,0,0"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Target:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DisplayName}" Margin="0,5,0,0"/>
                            
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Status:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Status}" Margin="0,5,0,0"/>
                            
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Start:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding StartTimeDisplay}" Margin="0,5,0,0"/>
                            
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Duration:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding DurationDisplay}" Margin="0,5,0,0"/>
                            
                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Test ID:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding TestId}" Margin="0,5,0,0"/>
                            
                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Suite ID:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding SuiteId}" Margin="0,5,0,0"/>
                        </Grid>
                        
                        <!-- Actions -->
                        <StackPanel Margin="0,20,0,0">
                            <ui:Button Content="View Logs &amp; Results" 
                                      Icon="{ui:SymbolIcon DocumentSearch24}"
                                      Command="{Binding DataContext.ViewLogsResultsCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                      Appearance="Primary"
                                      HorizontalAlignment="Stretch"
                                      Margin="0,0,0,5"/>
                            <ui:Button Content="Open Folder" 
                                      Icon="{ui:SymbolIcon FolderOpen24}"
                                      Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                      HorizontalAlignment="Stretch"
                                      Margin="0,0,0,5"/>
                            <ui:Button Content="Rerun" 
                                      Icon="{ui:SymbolIcon ArrowRepeatAll24}"
                                      Command="{Binding DataContext.RerunCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                      HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Busy Overlay -->
        <Border Grid.RowSpan="2" Background="#80000000" 
               Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True"/>
                <TextBlock Text="{Binding BusyMessage}" Margin="0,10,0,0" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
