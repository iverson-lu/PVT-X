<Page x:Class="PcTest.Ui.Views.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:PcTest.Ui.ViewModels"
      Title="History"
      d:DataContext="{d:DesignInstance vm:HistoryViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Loaded="Page_Loaded"
      Background="{DynamicResource SurfaceBackgroundBrush}">

    <Page.Resources>
        <SolidColorBrush x:Key="SegmentedSelectedBackgroundBrush"
                         Color="{DynamicResource PrimaryColor}"
                         Opacity="0.12"/>
        <Style x:Key="HistorySegmentedListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="HistorySegmentedListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextTertiaryBrush}"/>
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="SegmentBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Transparent"
                                BorderThickness="0,0,0,2"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="SegmentBorder" Property="Background" Value="{StaticResource SegmentedSelectedBackgroundBrush}"/>
                                <Setter TargetName="SegmentBorder" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="HistorySummaryTemplate">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                         Padding="{StaticResource CardPadding}">
                <StackPanel>
                    <ui:CardExpander Header="Run Information" IsExpanded="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:"
                                      Style="{StaticResource LabelTextStyle}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding RunStatus}"
                                      Style="{StaticResource BodyTextStyle}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Start Time:"
                                      Style="{StaticResource LabelTextStyle}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding StartTimeDisplay}"
                                      Style="{StaticResource BodyTextStyle}"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="End Time:"
                                      Style="{StaticResource LabelTextStyle}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding EndTimeDisplay}"
                                      Style="{StaticResource BodyTextStyle}"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Duration:"
                                      Style="{StaticResource LabelTextStyle}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DurationDisplay}"
                                      Style="{StaticResource BodyTextStyle}"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Exit Code:"
                                      Style="{StaticResource LabelTextStyle}"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ExitCode}"
                                      Style="{StaticResource BodyTextStyle}"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Error:"
                                      Style="{StaticResource LabelTextStyle}"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding ErrorMessage}"
                                      Style="{StaticResource BodyTextStyle}" TextWrapping="Wrap"/>
                        </Grid>
                    </ui:CardExpander>
                </StackPanel>
            </ScrollViewer>
        </DataTemplate>

        <DataTemplate x:Key="HistoryStdoutTemplate">
            <Border Margin="16"
                   Background="{DynamicResource TerminalBackgroundBrush}"
                   BorderBrush="{DynamicResource BorderSubtleBrush}"
                   BorderThickness="0"
                   CornerRadius="6">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding StdoutContent, Mode=OneWay}"
                            IsReadOnly="True"
                            FontFamily="Cascadia Code, Consolas"
                            FontSize="11"
                            Foreground="{DynamicResource TerminalTextBrush}"
                            BorderThickness="0"
                            Background="Transparent"
                            TextWrapping="NoWrap"
                            Padding="12"
                            Cursor="Arrow">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}">
                                                <ScrollViewer x:Name="PART_ContentHost" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </ScrollViewer>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="HistoryStderrTemplate">
            <Border Margin="16"
                   Background="{DynamicResource TerminalBackgroundBrush}"
                   BorderBrush="{DynamicResource BorderSubtleBrush}"
                   BorderThickness="0"
                   CornerRadius="6">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding StderrContent, Mode=OneWay}"
                            IsReadOnly="True"
                            FontFamily="Cascadia Code, Consolas"
                            FontSize="11"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="{DynamicResource TerminalErrorBrush}"
                            TextWrapping="NoWrap"
                            Padding="12"
                            Cursor="Arrow">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}">
                                                <ScrollViewer x:Name="PART_ContentHost" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </ScrollViewer>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="HistoryArtifactsTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" MinWidth="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Artifacts Tree -->
                <Border Grid.Column="0"
                       BorderBrush="{DynamicResource BorderSubtleBrush}"
                       BorderThickness="0,0,1,0"
                       Padding="8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TreeView ItemsSource="{Binding Artifacts}"
                                 VirtualizingStackPanel.IsVirtualizing="True"
                                 SelectedItemChanged="ArtifactsTree_SelectedItemChanged">
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}"/>
                                        <TextBlock Text="{Binding SizeDisplay}"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"
                                                  FontSize="{StaticResource FontSizeXS}"
                                                  Margin="8,0,0,0"/>
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>
                    </ScrollViewer>
                </Border>

                <GridSplitter Grid.Column="1"
                             Width="4"
                             HorizontalAlignment="Stretch"
                             Background="Transparent"/>

                <!-- Artifact Content Viewer -->
                <Border Grid.Column="2"
                       Background="{DynamicResource TerminalBackgroundBrush}"
                       Margin="8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <TextBox Text="{Binding ArtifactContent, Mode=OneWay}"
                                IsReadOnly="True"
                                FontFamily="Cascadia Code, Consolas"
                                FontSize="11"
                                Foreground="{DynamicResource TerminalTextBrush}"
                                BorderThickness="0"
                                Background="Transparent"
                                TextWrapping="NoWrap"
                                Padding="12"
                                Cursor="Arrow">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                       BorderBrush="{TemplateBinding BorderBrush}"
                                                       BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ScrollViewer x:Name="PART_ContentHost" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </ScrollViewer>
                </Border>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Filters Card -->
        <Border Grid.Row="0" 
                Background="{DynamicResource CardBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderSubtleBrush}" 
                BorderThickness="1"
                CornerRadius="{StaticResource RadiusM}"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <WrapPanel>
                    <ui:TextBox PlaceholderText="Search..." 
                               Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                               Width="200" 
                               Margin="{StaticResource ControlMarginMedium}"
                               Icon="{ui:SymbolIcon Search24}"/>
                    
                    <ComboBox ItemsSource="{Binding StatusOptions}" 
                             SelectedItem="{Binding StatusFilter}"
                             Width="120" 
                             Margin="{StaticResource ControlMarginMedium}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <ComboBox ItemsSource="{Binding RunTypeOptions}" 
                             SelectedItem="{Binding RunTypeFilter}"
                             Width="120" 
                             Margin="{StaticResource ControlMarginMedium}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <CheckBox Content="Top-level only" 
                             IsChecked="{Binding TopLevelOnly}" 
                             VerticalAlignment="Center" 
                             Margin="{StaticResource ControlMarginMedium}"/>
                    
                    <DatePicker SelectedDate="{Binding StartTimeFrom}" 
                               Width="120" 
                               Margin="{StaticResource ControlMarginMedium}"/>
                    <DatePicker SelectedDate="{Binding StartTimeTo}" 
                               Width="120" 
                               Margin="{StaticResource ControlMarginMedium}"/>
                    
                    <ui:Button Content="Reset" 
                              Icon="{ui:SymbolIcon Dismiss24}" 
                              Command="{Binding ClearFiltersCommand}"
                              Margin="{StaticResource ControlMarginMedium}"/>
                </WrapPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ui:Button Content="Refresh" 
                              Icon="{ui:SymbolIcon ArrowSync24}" 
                              Command="{Binding RefreshCommand}"
                              Appearance="Primary"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Master-Detail Layout -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="550" MinWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Master: Run Tree List Card -->
            <Border Grid.Column="0"
                   Background="{DynamicResource CardBackgroundBrush}"
                   BorderBrush="{DynamicResource BorderSubtleBrush}"
                   BorderThickness="1"
                   CornerRadius="{StaticResource RadiusM}">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Column Headers -->
                    <Border Grid.Row="0" 
                            Background="{DynamicResource ControlBackgroundSecondaryBrush}" 
                            BorderBrush="{DynamicResource BorderSubtleBrush}" 
                            BorderThickness="0,0,0,1"
                            CornerRadius="8,8,0,0"
                            Padding="8,8,8,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="36"/><!-- Status -->
                                <ColumnDefinition Width="*"/><!-- Target with expand -->
                                <ColumnDefinition Width="50"/><!-- Type -->
                                <ColumnDefinition Width="60"/><!-- Start -->
                                <ColumnDefinition Width="60"/><!-- Duration -->
                                <ColumnDefinition Width="60"/><!-- RunId -->
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="" FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Target" FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}" Margin="24,0,0,0"/>
                            <TextBlock Grid.Column="2" Text="Type" FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Start" FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}"/>
                            <TextBlock Grid.Column="4" Text="Duration" FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}"/>
                            <TextBlock Grid.Column="5" Text="Run ID" FontSize="11" Foreground="{DynamicResource TextTertiaryBrush}"/>
                        </Grid>
                    </Border>
                    
                    <!-- Tree List -->
                    <ListBox Grid.Row="1"
                            ItemsSource="{Binding VisibleNodes}"
                            SelectedItem="{Binding SelectedNode, Mode=TwoWay}"
                            VirtualizingPanel.IsVirtualizing="True"
                            VirtualizingPanel.VirtualizationMode="Recycling"
                            VirtualizingPanel.CacheLength="20"
                            VirtualizingPanel.CacheLengthUnit="Item"
                            ScrollViewer.CanContentScroll="True"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Height" Value="48"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd" 
                                                   Background="{TemplateBinding Background}" 
                                                   BorderBrush="{DynamicResource GridLineBrush}"
                                                   BorderThickness="0,0,0,1"
                                                   Padding="8,0">
                                                <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource InteractiveHoverBrush}"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="{DynamicResource InteractiveSelectedBrush}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="36"/><!-- Status -->
                                        <ColumnDefinition Width="*"/><!-- Target with expand/indent -->
                                        <ColumnDefinition Width="50"/><!-- Type -->
                                        <ColumnDefinition Width="60"/><!-- Start -->
                                        <ColumnDefinition Width="60"/><!-- Duration -->
                                        <ColumnDefinition Width="60"/><!-- RunId -->
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Status Icon -->
                                    <ui:SymbolIcon Grid.Column="0"
                                                  Symbol="{Binding Run.Status, Converter={StaticResource RunStatusToIconConverter}}" 
                                                  Foreground="{Binding Run.Status, Converter={StaticResource RunStatusToBrushConverter}}"
                                                  FontSize="18" 
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  ToolTip="{Binding Run.Status}"/>
                                    
                                    <!-- Target with Indent and Expand Arrow -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center"
                                               Margin="{Binding Depth, Converter={StaticResource DepthToIndentConverter}}">
                                        <!-- Expand/Collapse Button (only when CanExpand) -->
                                        <Button Command="{Binding ToggleExpandCommand}" 
                                               Visibility="{Binding CanExpand, Converter={StaticResource BoolToVisibilityConverter}}"
                                               Background="Transparent" 
                                               BorderThickness="0" 
                                               Padding="2"
                                               Width="20" Height="20"
                                               VerticalAlignment="Center"
                                               Cursor="Hand">
                                            <ui:SymbolIcon Symbol="{Binding IsExpanded, Converter={StaticResource IsExpandedToIconConverter}}" 
                                                          FontSize="12"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </Button>
                                        <!-- Spacer when no expand button -->
                                        <Border Width="20" 
                                               Visibility="{Binding CanExpand, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                                        
                                        <!-- Target Name + Version -->
                                        <StackPanel Margin="4,0,0,0">
                                            <TextBlock Text="{Binding Run.NameWithoutVersion}" 
                                                      FontSize="13"
                                                      FontWeight="Medium"
                                                      Foreground="{DynamicResource TextPrimaryBrush}"
                                                      TextTrimming="CharacterEllipsis"
                                                      MaxWidth="200"/>
                                            <TextBlock Text="{Binding Run.VersionDisplay}" 
                                                      FontSize="10"
                                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                                      Visibility="{Binding Run.VersionDisplay, Converter={StaticResource StringToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Type Icon -->
                                    <ui:SymbolIcon Grid.Column="2"
                                                  Symbol="{Binding Run.RunType, Converter={StaticResource RunTypeToIconConverter}}" 
                                                  FontSize="18"
                                                  Foreground="{DynamicResource TextSecondaryBrush}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  ToolTip="{Binding Run.RunTypeTooltip}"/>
                                    
                                    <!-- Start Time -->
                                    <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Run.StartTime, StringFormat=MM-dd}" 
                                                  FontSize="11"
                                                  Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="{Binding Run.StartTime, StringFormat=HH:mm}" 
                                                  FontSize="10"
                                                  Foreground="{DynamicResource TextTertiaryBrush}"/>
                                    </StackPanel>
                                    
                                    <!-- Duration -->
                                    <TextBlock Grid.Column="4"
                                              Text="{Binding Run.Duration, StringFormat=mm\\:ss}" 
                                              FontFamily="Consolas"
                                              FontSize="11"
                                              Foreground="{DynamicResource TextSecondaryBrush}"
                                              VerticalAlignment="Center"
                                              ToolTip="{Binding Run.Duration, StringFormat=hh\\:mm\\:ss}"/>
                                    
                                    <!-- Short Run ID -->
                                    <TextBlock Grid.Column="5"
                                              Text="{Binding Run.ShortRunId}" 
                                              FontFamily="Consolas"
                                              FontSize="10"
                                              Foreground="{DynamicResource TextTertiaryBrush}"
                                              ToolTip="{Binding Run.RunId}"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                         Width="16" 
                         HorizontalAlignment="Stretch" 
                         Background="Transparent"
                         ShowsPreview="False"/>
            
            <!-- Detail: Run Inspector Card -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource CardBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderSubtleBrush}" 
                    BorderThickness="1"
                    CornerRadius="{StaticResource RadiusM}">
                <Border.Effect>
                    <DropShadowEffect Color="#20000000" BlurRadius="8" ShadowDepth="2" Direction="270" Opacity="0.3"/>
                </Border.Effect>
                
                <Grid>
                    <!-- Show placeholder when no run is selected -->
                    <Grid Visibility="{Binding IsRunSelected, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <ui:SymbolIcon Symbol="DocumentSearch24" FontSize="48" Foreground="{DynamicResource TextTertiaryBrush}"/>
                            <TextBlock Text="Select a run to view details" 
                                      FontSize="{StaticResource FontSizeL}"
                                      Foreground="{DynamicResource TextTertiaryBrush}"
                                      Margin="0,16,0,0"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Show inspector when run is selected -->
                    <Grid Visibility="{Binding IsRunSelected, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Inspector Header -->
                    <Border Grid.Row="0" 
                            Background="{DynamicResource ControlBackgroundSecondaryBrush}"
                            BorderBrush="{DynamicResource BorderSubtleBrush}" 
                            BorderThickness="0,0,0,1"
                            CornerRadius="8,8,0,0"
                            Padding="20,16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="{Binding SelectedNode.Run.RunId}" 
                                              FontFamily="Consolas"
                                              FontWeight="{StaticResource FontWeightSemiBold}" 
                                              FontSize="{StaticResource FontSizeM}"
                                              Foreground="{DynamicResource TextPrimaryBrush}"
                                              VerticalAlignment="Center"/>
                                    <ui:Button Icon="{ui:SymbolIcon Copy20}" 
                                              Command="{Binding CopyRunIdCommand}"
                                              ToolTip="Copy full Run ID"
                                              Appearance="Secondary"
                                              Margin="8,0,0,0"
                                              Padding="4"
                                              Height="28"
                                              Width="28"
                                              VerticalAlignment="Center"/>
                                    <ui:Badge Content="{Binding RunStatus}" 
                                             VerticalAlignment="Center"
                                             Margin="8,0,0,0"
                                             Background="{Binding RunStatusEnum, Converter={StaticResource RunStatusToBrushConverter}}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Target: " 
                                              Foreground="{DynamicResource TextTertiaryBrush}"
                                              FontSize="{StaticResource FontSizeM}"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding RunDisplayName}" 
                                              FontSize="{StaticResource FontSizeM}"
                                              Foreground="{DynamicResource TextSecondaryBrush}"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <ui:Button Grid.Row="0" Grid.Column="1" 
                                      Icon="{ui:SymbolIcon FolderOpen24}" 
                                      Command="{Binding OpenFolderCommand}"
                                      ToolTip="Open Run Folder"/>

                            <ListBox Grid.Row="1"
                                     Grid.ColumnSpan="2"
                                     Margin="0,8,0,0"
                                     ItemsSource="{Binding DetailViews}"
                                     SelectedItem="{Binding SelectedView, Mode=TwoWay}"
                                     Style="{StaticResource HistorySegmentedListBoxStyle}"
                                     ItemContainerStyle="{StaticResource HistorySegmentedListBoxItemStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}"
                                                  FontSize="{StaticResource FontSizeS}"
                                                  TextTrimming="CharacterEllipsis"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                    
                    <ContentControl Grid.Row="1" Content="{Binding SelectedView}">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Setter Property="ContentTemplate" Value="{StaticResource HistorySummaryTemplate}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedView}" Value="{x:Static vm:HistoryDetailView.Summary}">
                                        <Setter Property="ContentTemplate" Value="{StaticResource HistorySummaryTemplate}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedView}" Value="{x:Static vm:HistoryDetailView.Stdout}">
                                        <Setter Property="ContentTemplate" Value="{StaticResource HistoryStdoutTemplate}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedView}" Value="{x:Static vm:HistoryDetailView.Stderr}">
                                        <Setter Property="ContentTemplate" Value="{StaticResource HistoryStderrTemplate}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedView}" Value="{x:Static vm:HistoryDetailView.Artifacts}">
                                        <Setter Property="ContentTemplate" Value="{StaticResource HistoryArtifactsTemplate}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </Grid>
            </Grid>
            </Border>
        </Grid>
        
        <!-- Busy Overlay -->
        <Border Grid.RowSpan="3" Background="{DynamicResource OverlayBackgroundBrush}" 
               Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True"/>
                <TextBlock Text="{Binding BusyMessage}" Margin="0,10,0,0" Foreground="{DynamicResource TextOnDarkBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
