<Page x:Class="PcTest.Ui.Views.Pages.PlanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:PcTest.Ui.ViewModels"
      Title="Plan"
      d:DataContext="{d:DesignInstance vm:PlanViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    
    <Grid>
        <TabControl SelectedIndex="{Binding SelectedTabIndex}">
            <!-- Cases Tab -->
            <TabItem Header="Cases">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Cases List -->
                    <Border Grid.Column="0" BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="0,0,1,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                                <ui:Button Content="Discover" 
                                          Icon="{ui:SymbolIcon ArrowSync24}"
                                          Command="{Binding CasesTab.DiscoverCommand}"
                                          IsEnabled="{Binding CasesTab.IsDiscovering, Converter={StaticResource InverseBoolConverter}}"/>
                                <ui:Button Content="Run" 
                                          Icon="{ui:SymbolIcon Play24}"
                                          Command="{Binding CasesTab.RunCommand}"
                                          Appearance="Primary"
                                          Margin="5,0,0,0"/>
                                <ui:Button Content="Open Folder" 
                                          Icon="{ui:SymbolIcon FolderOpen24}"
                                          Command="{Binding CasesTab.OpenInExplorerCommand}"
                                          Margin="5,0,0,0"/>
                            </StackPanel>
                            
                            <ui:TextBox Grid.Row="1" 
                                       PlaceholderText="Search cases..." 
                                       Text="{Binding CasesTab.SearchText, UpdateSourceTrigger=PropertyChanged}"
                                       Margin="10,0,10,10"
                                       Icon="{ui:SymbolIcon Search24}"/>
                            
                            <ListBox Grid.Row="2" 
                                    ItemsSource="{Binding CasesTab.Cases}"
                                    SelectedItem="{Binding CasesTab.SelectedCase}"
                                    VirtualizingPanel.IsVirtualizing="True"
                                    VirtualizingPanel.VirtualizationMode="Recycling">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="5">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Identity}" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="11"/>
                                            <TextBlock Text="{Binding Category}" Foreground="{DynamicResource TextFillColorTertiaryBrush}" FontSize="10"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                    
                    <!-- Case Details -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20" DataContext="{Binding CasesTab.SelectedCase}">
                            <TextBlock Text="Test Case Details" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,15"/>
                            
                            <ui:CardExpander Header="Basic Information" IsExpanded="True" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="ID:" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Id}"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Name:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Name}" Margin="0,5,0,0"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Version:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Version}" Margin="0,5,0,0"/>
                                    
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Category:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Category}" Margin="0,5,0,0"/>
                                    
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Privilege:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Privilege}" Margin="0,5,0,0"/>
                                    
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Timeout:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding TimeoutSec, StringFormat={}{0}s}" Margin="0,5,0,0"/>
                                    
                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Tags:" FontWeight="SemiBold" Margin="0,5,0,0"/>
                                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding TagsDisplay}" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                </Grid>
                            </ui:CardExpander>
                            
                            <ui:CardExpander Header="Description" IsExpanded="True" Margin="0,0,0,10">
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
                            </ui:CardExpander>
                            
                            <ui:CardExpander Header="Parameters" IsExpanded="True" Visibility="{Binding HasParameters, Converter={StaticResource BoolToVisibilityConverter}}" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Edit parameter values before running:" 
                                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                              Margin="0,0,0,10"/>
                                    <ItemsControl ItemsSource="{Binding Parameters}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="{DynamicResource ControlElevationBorderBrush}" 
                                                       BorderThickness="0,0,0,1" 
                                                       Padding="10" 
                                                       Margin="0,0,0,10">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="150"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        
                                                        <!-- Parameter name and badges -->
                                                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                                                  Text="{Binding Name}" 
                                                                  FontWeight="SemiBold" 
                                                                  VerticalAlignment="Center"/>
                                                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                                            <ui:Badge Content="{Binding Type}" Appearance="Primary" Margin="0,0,5,0"/>
                                                            <ui:Badge Content="Required" Appearance="Danger" Visibility="{Binding Required, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                        </StackPanel>
                                                        
                                                        <!-- Help text -->
                                                        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" 
                                                                  Text="{Binding Help}" 
                                                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                                  TextWrapping="Wrap"
                                                                  Margin="0,5,0,5"
                                                                  Visibility="{Binding Help, Converter={StaticResource StringToBoolConverter}}"/>
                                                        
                                                        <!-- Input field -->
                                                        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
                                                            <TextBlock Text="Value:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                            <TextBox Width="300" 
                                                                    Text="{Binding CurrentValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                    ToolTip="Default value (can be edited before running)"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </ui:CardExpander>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- Suites Tab -->
            <TabItem Header="Suites">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Suites List -->
                    <Border Grid.Column="0" BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="0,0,1,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <WrapPanel Grid.Row="0" Margin="10">
                                <ui:Button Content="New" Icon="{ui:SymbolIcon Add24}" Command="{Binding SuitesTab.CreateCommand}" Margin="0,0,5,5"/>
                                <ui:Button Content="Duplicate" Icon="{ui:SymbolIcon Copy24}" Command="{Binding SuitesTab.DuplicateCommand}" Margin="0,0,5,5"/>
                                <ui:Button Content="Delete" Icon="{ui:SymbolIcon Delete24}" Command="{Binding SuitesTab.DeleteCommand}" Margin="0,0,5,5"/>
                                <ui:Button Content="Import" Icon="{ui:SymbolIcon ArrowDownload24}" Command="{Binding SuitesTab.ImportCommand}" Margin="0,0,5,5"/>
                                <ui:Button Content="Export" Icon="{ui:SymbolIcon ArrowUpload24}" Command="{Binding SuitesTab.ExportCommand}" Margin="0,0,5,5"/>
                            </WrapPanel>
                            
                            <ui:TextBox Grid.Row="1" 
                                       PlaceholderText="Search suites..." 
                                       Text="{Binding SuitesTab.SearchText, UpdateSourceTrigger=PropertyChanged}"
                                       Margin="10,0,10,10"
                                       Icon="{ui:SymbolIcon Search24}"/>
                            
                            <ListBox Grid.Row="2" 
                                    ItemsSource="{Binding SuitesTab.Suites}"
                                    SelectedItem="{Binding SuitesTab.SelectedSuite}"
                                    VirtualizingPanel.IsVirtualizing="True">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="5">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Identity}" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="11"/>
                                            <TextBlock Foreground="{DynamicResource TextFillColorTertiaryBrush}" FontSize="10">
                                                <Run Text="{Binding NodeCount}"/> nodes
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                    
                    <!-- Suite Editor Panel -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" 
                                 Visibility="{Binding SuitesTab.IsEditorVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Margin="20" DataContext="{Binding SuitesTab.Editor}">
                            <!-- Header with dirty indicator -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Edit Suite" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                    <ui:Badge Content="Unsaved" Appearance="Caution" 
                                             Visibility="{Binding IsDirty, Converter={StaticResource BoolToVisibilityConverter}}"
                                             Margin="10,0,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <ui:Button Content="Save" Icon="{ui:SymbolIcon Save24}" Command="{Binding SaveSuiteCommand}" Margin="0,0,5,0"/>
                                    <ui:Button Content="Discard" Icon="{ui:SymbolIcon Dismiss24}" Command="{Binding DiscardChangesCommand}" Margin="0,0,5,0"/>
                                    <ui:Button Content="Validate" Icon="{ui:SymbolIcon Checkmark24}" Command="{Binding ValidateSuiteCommand}" Margin="0,0,5,0"/>
                                    <ui:Button Content="Run" Icon="{ui:SymbolIcon Play24}" Command="{Binding RunSuiteCommand}" Appearance="Primary"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Metadata -->
                            <ui:CardExpander Header="Metadata" IsExpanded="True" Margin="0,0,0,10">
                                <StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="ID" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Name" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Version" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Version, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Description" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Tags (comma-separated)" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding TagsText, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                </StackPanel>
                            </ui:CardExpander>
                            
                            <!-- Controls -->
                            <ui:CardExpander Header="Controls" IsExpanded="False" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                                        <TextBlock Text="Repeat" Margin="0,0,0,5"/>
                                        <ui:NumberBox Value="{Binding Repeat}" Minimum="1" Maximum="100"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                                        <TextBlock Text="Retry on Error" Margin="0,0,0,5"/>
                                        <ui:NumberBox Value="{Binding RetryOnError}" Minimum="0" Maximum="10"/>
                                    </StackPanel>
                                    <CheckBox Grid.Row="1" Grid.Column="0" Content="Continue on Failure" IsChecked="{Binding ContinueOnFailure}"/>
                                </Grid>
                            </ui:CardExpander>
                            
                            <!-- Pipeline Nodes -->
                            <ui:CardExpander Header="Pipeline Nodes" IsExpanded="True" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="200"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                        <ui:Button Content="Add" Icon="{ui:SymbolIcon Add24}" Command="{Binding AddNodeCommand}" Margin="0,0,5,0"/>
                                        <ui:Button Content="Remove" Icon="{ui:SymbolIcon Delete24}" Command="{Binding RemoveNodeCommand}" Margin="0,0,5,0"/>
                                        <ui:Button Icon="{ui:SymbolIcon ArrowUp24}" Command="{Binding MoveNodeUpCommand}" Margin="0,0,5,0"/>
                                        <ui:Button Icon="{ui:SymbolIcon ArrowDown24}" Command="{Binding MoveNodeDownCommand}"/>
                                    </StackPanel>
                                    
                                    <ListBox Grid.Row="1" 
                                            ItemsSource="{Binding Nodes}"
                                            SelectedItem="{Binding SelectedNode}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="5">
                                                    <TextBlock Text="{Binding NodeId}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Ref}" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    
                                    <!-- Node Editor -->
                                    <Border Grid.Row="2" Margin="0,10,0,0" Padding="10" 
                                           Background="{DynamicResource ControlFillColorDefaultBrush}"
                                           CornerRadius="4"
                                           DataContext="{Binding SelectedNode}"
                                           Visibility="{Binding DataContext.SelectedNode, RelativeSource={RelativeSource AncestorType=StackPanel}, Converter={StaticResource NullToVisibilityConverter}}">
                                        <StackPanel>
                                            <StackPanel Margin="0,0,0,10">
                                                <TextBlock Text="Node ID" Margin="0,0,0,5"/>
                                                <ui:TextBox Text="{Binding NodeId, UpdateSourceTrigger=PropertyChanged}"/>
                                            </StackPanel>
                                            <StackPanel Margin="0,0,0,10">
                                                <TextBlock Text="Test Case Reference" Margin="0,0,0,5"/>
                                                <ui:TextBox Text="{Binding Ref, UpdateSourceTrigger=PropertyChanged}"/>
                                            </StackPanel>
                                            <TextBlock Text="Inputs (JSON)" Margin="0,0,0,5"/>
                                            <TextBox Text="{Binding InputsJson, UpdateSourceTrigger=PropertyChanged}" 
                                                    AcceptsReturn="True" 
                                                    Height="100" 
                                                    FontFamily="Consolas"
                                                    VerticalScrollBarVisibility="Auto"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </ui:CardExpander>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- Plans Tab -->
            <TabItem Header="Plans">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Plans List -->
                    <Border Grid.Column="0" BorderBrush="{DynamicResource ControlElevationBorderBrush}" BorderThickness="0,0,1,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <WrapPanel Grid.Row="0" Margin="10">
                                <ui:Button Content="New" Icon="{ui:SymbolIcon Add24}" Command="{Binding PlansTab.CreateCommand}" Margin="0,0,5,5"/>
                                <ui:Button Content="Duplicate" Icon="{ui:SymbolIcon Copy24}" Command="{Binding PlansTab.DuplicateCommand}" Margin="0,0,5,5"/>
                                <ui:Button Content="Delete" Icon="{ui:SymbolIcon Delete24}" Command="{Binding PlansTab.DeleteCommand}" Margin="0,0,5,5"/>
                                <ui:Button Content="Import" Icon="{ui:SymbolIcon ArrowDownload24}" Command="{Binding PlansTab.ImportCommand}" Margin="0,0,5,5"/>
                                <ui:Button Content="Export" Icon="{ui:SymbolIcon ArrowUpload24}" Command="{Binding PlansTab.ExportCommand}" Margin="0,0,5,5"/>
                            </WrapPanel>
                            
                            <ui:TextBox Grid.Row="1" 
                                       PlaceholderText="Search plans..." 
                                       Text="{Binding PlansTab.SearchText, UpdateSourceTrigger=PropertyChanged}"
                                       Margin="10,0,10,10"
                                       Icon="{ui:SymbolIcon Search24}"/>
                            
                            <ListBox Grid.Row="2" 
                                    ItemsSource="{Binding PlansTab.Plans}"
                                    SelectedItem="{Binding PlansTab.SelectedPlan}"
                                    VirtualizingPanel.IsVirtualizing="True">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="5">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Identity}" Foreground="{DynamicResource TextFillColorSecondaryBrush}" FontSize="11"/>
                                            <TextBlock Foreground="{DynamicResource TextFillColorTertiaryBrush}" FontSize="10">
                                                <Run Text="{Binding SuiteCount}"/> suites
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                    
                    <!-- Plan Editor Panel -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto"
                                 Visibility="{Binding PlansTab.IsEditorVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Margin="20" DataContext="{Binding PlansTab.Editor}">
                            <!-- Header -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Edit Plan" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                    <ui:Badge Content="Unsaved" Appearance="Caution" 
                                             Visibility="{Binding IsDirty, Converter={StaticResource BoolToVisibilityConverter}}"
                                             Margin="10,0,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <ui:Button Content="Save" Icon="{ui:SymbolIcon Save24}" Command="{Binding SavePlanCommand}" Margin="0,0,5,0"/>
                                    <ui:Button Content="Discard" Icon="{ui:SymbolIcon Dismiss24}" Command="{Binding DiscardChangesCommand}" Margin="0,0,5,0"/>
                                    <ui:Button Content="Validate" Icon="{ui:SymbolIcon Checkmark24}" Command="{Binding ValidatePlanCommand}" Margin="0,0,5,0"/>
                                    <ui:Button Content="Run" Icon="{ui:SymbolIcon Play24}" Command="{Binding RunPlanCommand}" Appearance="Primary"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Metadata -->
                            <ui:CardExpander Header="Metadata" IsExpanded="True" Margin="0,0,0,10">
                                <StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="ID" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Name" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Version" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Version, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Description" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Tags (comma-separated)" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding TagsText, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                </StackPanel>
                            </ui:CardExpander>
                            
                            <!-- Suite References -->
                            <ui:CardExpander Header="Suite References" IsExpanded="True">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="200"/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                        <ui:Button Content="Add" Icon="{ui:SymbolIcon Add24}" Command="{Binding AddSuiteReferenceCommand}" Margin="0,0,5,0"/>
                                        <ui:Button Content="Remove" Icon="{ui:SymbolIcon Delete24}" Command="{Binding RemoveSuiteReferenceCommand}" Margin="0,0,5,0"/>
                                        <ui:Button Icon="{ui:SymbolIcon ArrowUp24}" Command="{Binding MoveSuiteReferenceUpCommand}" Margin="0,0,5,0"/>
                                        <ui:Button Icon="{ui:SymbolIcon ArrowDown24}" Command="{Binding MoveSuiteReferenceDownCommand}"/>
                                    </StackPanel>
                                    
                                    <ListBox Grid.Row="1" 
                                            ItemsSource="{Binding SuiteReferences}"
                                            SelectedItem="{Binding SelectedSuiteReference}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SuiteIdentity}" Margin="5"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </ui:CardExpander>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Busy overlay -->
        <Border Background="#80000000" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True"/>
                <TextBlock Text="{Binding BusyMessage}" Margin="0,10,0,0" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
