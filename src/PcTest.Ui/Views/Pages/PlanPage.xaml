<Page x:Class="PcTest.Ui.Views.Pages.PlanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:PcTest.Ui.ViewModels"
      Title="Plan"
      d:DataContext="{d:DesignInstance vm:PlanViewModel}"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    
    <Grid>
        <TabControl SelectedIndex="{Binding SelectedTabIndex}">
            <!-- Cases Tab -->
            <TabItem Header="Cases">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Cases List -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource SurfaceBackgroundBrush}"
                            BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="0,0,1,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="{StaticResource ThicknessM}">
                                <ui:Button Content="Discover" 
                                          Icon="{ui:SymbolIcon ArrowSync24}"
                                          Command="{Binding CasesTab.DiscoverCommand}"
                                          IsEnabled="{Binding CasesTab.IsDiscovering, Converter={StaticResource InverseBoolConverter}}"
                                          Margin="{StaticResource ControlMarginSmall}"/>
                                <ui:Button Content="Run" 
                                          Icon="{ui:SymbolIcon Play24}"
                                          Command="{Binding CasesTab.RunCommand}"
                                          Appearance="Primary"
                                          Margin="{StaticResource ControlMarginSmall}"/>
                                <ui:Button Content="Open Folder" 
                                          Icon="{ui:SymbolIcon FolderOpen24}"
                                          Command="{Binding CasesTab.OpenInExplorerCommand}"/>
                            </StackPanel>
                            
                            <ui:TextBox Grid.Row="1" 
                                       PlaceholderText="Search cases..." 
                                       Text="{Binding CasesTab.SearchText, UpdateSourceTrigger=PropertyChanged}"
                                       Margin="12,0,12,12"
                                       Icon="{ui:SymbolIcon Search24}"/>
                            
                            <ListBox Grid.Row="2" 
                                    ItemsSource="{Binding CasesTab.Cases}"
                                    SelectedItem="{Binding CasesTab.SelectedCase}"
                                    VirtualizingPanel.IsVirtualizing="True"
                                    VirtualizingPanel.VirtualizationMode="Recycling"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="{StaticResource ListItemPadding}">
                                            <TextBlock Text="{Binding Name}" 
                                                      FontWeight="{StaticResource FontWeightSemiBold}"
                                                      FontSize="{StaticResource FontSizeM}"
                                                      Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding Identity}" 
                                                      Foreground="{StaticResource TextSecondaryBrush}" 
                                                      FontSize="{StaticResource FontSizeS}"/>
                                            <TextBlock Text="{Binding Category}" 
                                                      Foreground="{StaticResource TextTertiaryBrush}" 
                                                      FontSize="{StaticResource FontSizeXS}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                    
                    <!-- Case Details -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="{StaticResource PagePadding}" DataContext="{Binding CasesTab.SelectedCase}">
                            <TextBlock Text="Test Case Details" 
                                      Style="{StaticResource PageTitleStyle}"/>
                            
                            <ui:CardExpander Header="Basic Information" IsExpanded="True" 
                                            Margin="{StaticResource CardMargin}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" 
                                              Style="{StaticResource LabelTextStyle}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" 
                                              Style="{StaticResource BodyTextStyle}"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="ID:" 
                                              Style="{StaticResource LabelTextStyle}" 
                                              Margin="{StaticResource SectionItemMargin}"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Id}" 
                                              Style="{StaticResource BodyTextStyle}" 
                                              Margin="{StaticResource SectionItemMargin}"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Version:" 
                                              Style="{StaticResource LabelTextStyle}" 
                                              Margin="{StaticResource SectionItemMargin}"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Version}" 
                                              Style="{StaticResource BodyTextStyle}" 
                                              Margin="{StaticResource SectionItemMargin}"/>
                                    
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Category:" 
                                              Style="{StaticResource LabelTextStyle}" 
                                              Margin="{StaticResource SectionItemMargin}"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Category}" 
                                              Style="{StaticResource BodyTextStyle}" 
                                              Margin="{StaticResource SectionItemMargin}"/>
                                    
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Privilege:" 
                                              Style="{StaticResource LabelTextStyle}" 
                                              Margin="{StaticResource SectionItemMargin}"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Privilege}" 
                                              Style="{StaticResource BodyTextStyle}" 
                                              Margin="{StaticResource SectionItemMargin}"/>
                                    
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Timeout:" 
                                              Style="{StaticResource LabelTextStyle}" 
                                              Margin="{StaticResource SectionItemMargin}"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding TimeoutSec, StringFormat={}{0}s}" 
                                              Style="{StaticResource BodyTextStyle}" 
                                              Margin="{StaticResource SectionItemMargin}"/>
                                    
                                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Tags:" 
                                              Style="{StaticResource LabelTextStyle}" 
                                              Margin="{StaticResource SectionItemMargin}"/>
                                    <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding TagsDisplay}" 
                                              Style="{StaticResource BodyTextStyle}" 
                                              Margin="{StaticResource SectionItemMargin}" TextWrapping="Wrap"/>
                                    
                                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Description:" 
                                              Style="{StaticResource LabelTextStyle}" 
                                              Margin="{StaticResource SectionItemMargin}"
                                              VerticalAlignment="Top"/>
                                    <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Description}" 
                                              Style="{StaticResource BodyTextStyle}" 
                                              Margin="{StaticResource SectionItemMargin}" TextWrapping="Wrap"/>
                                </Grid>
                            </ui:CardExpander>
                            
                            <ui:CardExpander Header="Parameters" IsExpanded="True" 
                                            Visibility="{Binding HasParameters, Converter={StaticResource BoolToVisibilityConverter}}" 
                                            Margin="{StaticResource CardMargin}">
                                <StackPanel>
                                    <TextBlock Text="Edit parameter values before running:" 
                                              Style="{StaticResource SecondaryTextStyle}"
                                              Margin="{StaticResource SectionItemMargin}"/>
                                    <ItemsControl ItemsSource="{Binding Parameters}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="{StaticResource BorderSubtleBrush}" 
                                                       BorderThickness="0,0,0,1" 
                                                       Padding="{StaticResource ThicknessM}" 
                                                       Margin="{StaticResource SectionItemMargin}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="150"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        
                                                        <!-- Parameter name and badges -->
                                                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                                                  Text="{Binding Name}" 
                                                                  Style="{StaticResource LabelTextStyle}" 
                                                                  VerticalAlignment="Center"/>
                                                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                                            <ui:Badge Content="{Binding Type}" Appearance="Primary" Margin="0,0,5,0"/>
                                                            <ui:Badge Content="Required" Appearance="Danger" Visibility="{Binding Required, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                                        </StackPanel>
                                                        
                                                        <!-- Help text -->
                                                        <TextBlock Grid.Row="1" Grid.ColumnSpan="2" 
                                                                  Text="{Binding Help}" 
                                                                  Style="{StaticResource SecondaryTextStyle}"
                                                                  TextWrapping="Wrap"
                                                                  Margin="{StaticResource SectionItemMargin}"
                                                                  Visibility="{Binding Help, Converter={StaticResource StringToBoolConverter}}"/>
                                                        
                                                        <!-- Input field -->
                                                        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
                                                            <TextBlock Text="Value:" 
                                                                      VerticalAlignment="Center" 
                                                                      Style="{StaticResource LabelTextStyle}"
                                                                      Margin="{StaticResource ControlMarginMedium}"/>
                                                            <TextBox Width="300" 
                                                                    Text="{Binding CurrentValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                    ToolTip="Default value (can be edited before running)"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </ui:CardExpander>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- Suites Tab -->
            <TabItem Header="Suites">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Suites List -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource SurfaceBackgroundBrush}"
                            BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="0,0,1,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <WrapPanel Grid.Row="0" Margin="{StaticResource ThicknessM}">
                                <ui:Button Content="New" Icon="{ui:SymbolIcon Add24}" 
                                          Command="{Binding SuitesTab.CreateCommand}" 
                                          Margin="0,0,8,8"/>
                                <ui:Button Content="Duplicate" Icon="{ui:SymbolIcon Copy24}" 
                                          Command="{Binding SuitesTab.DuplicateCommand}" 
                                          Margin="0,0,8,8"/>
                                <ui:Button Content="Delete" Icon="{ui:SymbolIcon Delete24}" 
                                          Command="{Binding SuitesTab.DeleteCommand}" 
                                          Margin="0,0,8,8"/>
                                <ui:Button Content="Import" Icon="{ui:SymbolIcon ArrowDownload24}" 
                                          Command="{Binding SuitesTab.ImportCommand}" 
                                          Margin="0,0,8,8"/>
                                <ui:Button Content="Export" Icon="{ui:SymbolIcon ArrowUpload24}" 
                                          Command="{Binding SuitesTab.ExportCommand}" 
                                          Margin="0,0,8,8"/>
                            </WrapPanel>
                            
                            <ui:TextBox Grid.Row="1" 
                                       PlaceholderText="Search suites..." 
                                       Text="{Binding SuitesTab.SearchText, UpdateSourceTrigger=PropertyChanged}"
                                       Margin="12,0,12,12"
                                       Icon="{ui:SymbolIcon Search24}"/>
                            
                            <ListBox Grid.Row="2" 
                                    ItemsSource="{Binding SuitesTab.Suites}"
                                    SelectedItem="{Binding SuitesTab.SelectedSuite}"
                                    VirtualizingPanel.IsVirtualizing="True"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="{StaticResource ListItemPadding}">
                                            <TextBlock Text="{Binding Name}" 
                                                      FontWeight="{StaticResource FontWeightSemiBold}"
                                                      FontSize="{StaticResource FontSizeM}"
                                                      Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding Identity}" 
                                                      Foreground="{StaticResource TextSecondaryBrush}" 
                                                      FontSize="{StaticResource FontSizeS}"/>
                                            <TextBlock Foreground="{StaticResource TextTertiaryBrush}" 
                                                      FontSize="{StaticResource FontSizeXS}">
                                                <Run Text="{Binding NodeCount}"/> nodes
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                    
                    <!-- Suite Editor Panel -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" 
                                 Visibility="{Binding SuitesTab.IsEditorVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Margin="{StaticResource PagePadding}" DataContext="{Binding SuitesTab.Editor}">
                            <!-- Header with dirty indicator -->
                            <Grid Margin="{StaticResource SectionHeaderMargin}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Suite Details" 
                                              Style="{StaticResource PageTitleStyle}"/>
                                    <ui:Badge Content="Unsaved" Appearance="Caution" 
                                             Visibility="{Binding IsDirty, Converter={StaticResource BoolToVisibilityConverter}}"
                                             Margin="{StaticResource ControlMarginMedium}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <ui:Button Content="Edit" Icon="{ui:SymbolIcon Edit24}" 
                                              Command="{Binding EditSuiteCommand}" 
                                              Margin="{StaticResource ControlMarginSmall}"/>
                                    <ui:Button Content="Save" Icon="{ui:SymbolIcon Save24}" 
                                              Command="{Binding SaveSuiteCommand}" 
                                              Margin="{StaticResource ControlMarginSmall}"/>
                                    <ui:Button Content="Discard" Icon="{ui:SymbolIcon Dismiss24}" 
                                              Command="{Binding DiscardChangesCommand}" 
                                              Margin="{StaticResource ControlMarginSmall}"/>
                                    <ui:Button Content="Validate" Icon="{ui:SymbolIcon Checkmark24}" 
                                              Command="{Binding ValidateSuiteCommand}" 
                                              Margin="{StaticResource ControlMarginSmall}"/>
                                    <ui:Button Content="Run" Icon="{ui:SymbolIcon Play24}" 
                                              Command="{Binding RunSuiteCommand}" Appearance="Primary"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Metadata -->
                            <ui:CardExpander Header="Metadata" IsExpanded="True" Margin="0,0,0,10">
                                <StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="ID" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Name" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Version" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Version, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Description" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Tags (comma-separated)" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding TagsText, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                </StackPanel>
                            </ui:CardExpander>
                            
                            <!-- Controls -->
                            <ui:CardExpander Header="Controls" IsExpanded="False" 
                                            Margin="{StaticResource CardMargin}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0" 
                                               Margin="{StaticResource SectionItemMargin}">
                                        <TextBlock Text="Repeat" 
                                                  Style="{StaticResource LabelTextStyle}" 
                                                  Margin="0,0,0,4"/>
                                        <ui:NumberBox Value="{Binding Repeat}" Minimum="1" Maximum="100"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="1" 
                                               Margin="{StaticResource SectionItemMargin}">
                                        <TextBlock Text="Retry on Error" 
                                                  Style="{StaticResource LabelTextStyle}" 
                                                  Margin="0,0,0,4"/>
                                        <ui:NumberBox Value="{Binding RetryOnError}" Minimum="0" Maximum="10"/>
                                    </StackPanel>
                                    <CheckBox Grid.Row="1" Grid.Column="0" Content="Continue on Failure" IsChecked="{Binding ContinueOnFailure}"/>
                                </Grid>
                            </ui:CardExpander>
                            
                            <!-- Pipeline Nodes -->
                            <ui:CardExpander Header="Pipeline Nodes" IsExpanded="True" 
                                            Margin="{StaticResource CardMargin}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="200"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                        <ui:Button Content="Add" Icon="{ui:SymbolIcon Add24}" Command="{Binding AddNodeCommand}" Margin="0,0,5,0"/>
                                        <ui:Button Content="Remove" Icon="{ui:SymbolIcon Delete24}" Command="{Binding RemoveNodeCommand}" Margin="0,0,5,0"/>
                                        <ui:Button Icon="{ui:SymbolIcon ArrowUp24}" Command="{Binding MoveNodeUpCommand}" Margin="0,0,5,0"/>
                                        <ui:Button Icon="{ui:SymbolIcon ArrowDown24}" Command="{Binding MoveNodeDownCommand}"/>
                                    </StackPanel>
                                    
                                    <ListBox Grid.Row="1" 
                                            ItemsSource="{Binding Nodes}"
                                            SelectedItem="{Binding SelectedNode}">
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem">
                                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryBrush}"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Margin="{StaticResource ListItemPadding}">
                                                    <TextBlock Text="{Binding NodeId}" 
                                                              FontWeight="{StaticResource FontWeightSemiBold}"
                                                              FontSize="{StaticResource FontSizeM}"
                                                              Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <TextBlock Text="{Binding Ref}" 
                                                              Foreground="{StaticResource TextSecondaryBrush}"
                                                              FontSize="{StaticResource FontSizeS}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                    
                                    <!-- Node Editor -->
                                    <Border Grid.Row="2" 
                                           Margin="{StaticResource SectionMargin}" 
                                           Padding="{StaticResource CardPadding}" 
                                           Background="{StaticResource ControlBackgroundSecondaryBrush}"
                                           BorderBrush="{StaticResource BorderSubtleBrush}"
                                           BorderThickness="1"
                                           CornerRadius="{StaticResource RadiusM}"
                                           DataContext="{Binding SelectedNode}"
                                           Visibility="{Binding DataContext.SelectedNode, RelativeSource={RelativeSource AncestorType=StackPanel}, Converter={StaticResource NullToVisibilityConverter}}">
                                        <StackPanel>
                                            <StackPanel Margin="{StaticResource SectionItemMargin}">
                                                <TextBlock Text="Node ID" 
                                                          Style="{StaticResource LabelTextStyle}" 
                                                          Margin="0,0,0,4"/>
                                                <ui:TextBox Text="{Binding NodeId, UpdateSourceTrigger=PropertyChanged}"/>
                                            </StackPanel>
                                            <StackPanel Margin="{StaticResource SectionItemMargin}">
                                                <TextBlock Text="Test Case Reference" 
                                                          Style="{StaticResource LabelTextStyle}" 
                                                          Margin="0,0,0,4"/>
                                                <ui:TextBox Text="{Binding Ref, UpdateSourceTrigger=PropertyChanged}"/>
                                            </StackPanel>
                                            <TextBlock Text="Inputs (JSON)" 
                                                      Style="{StaticResource LabelTextStyle}" 
                                                      Margin="0,0,0,4"/>
                                            <TextBox Text="{Binding InputsJson, UpdateSourceTrigger=PropertyChanged}" 
                                                    AcceptsReturn="True" 
                                                    Height="100" 
                                                    FontFamily="Consolas"
                                                    VerticalScrollBarVisibility="Auto"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </ui:CardExpander>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- Plans Tab -->
            <TabItem Header="Plans">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Plans List -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource SurfaceBackgroundBrush}"
                            BorderBrush="{StaticResource BorderSubtleBrush}" BorderThickness="0,0,1,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <WrapPanel Grid.Row="0" Margin="{StaticResource ThicknessM}">
                                <ui:Button Content="New" Icon="{ui:SymbolIcon Add24}" 
                                          Command="{Binding PlansTab.CreateCommand}" 
                                          Margin="0,0,8,8"/>
                                <ui:Button Content="Duplicate" Icon="{ui:SymbolIcon Copy24}" 
                                          Command="{Binding PlansTab.DuplicateCommand}" 
                                          Margin="0,0,8,8"/>
                                <ui:Button Content="Delete" Icon="{ui:SymbolIcon Delete24}" 
                                          Command="{Binding PlansTab.DeleteCommand}" 
                                          Margin="0,0,8,8"/>
                                <ui:Button Content="Import" Icon="{ui:SymbolIcon ArrowDownload24}" 
                                          Command="{Binding PlansTab.ImportCommand}" 
                                          Margin="0,0,8,8"/>
                                <ui:Button Content="Export" Icon="{ui:SymbolIcon ArrowUpload24}" 
                                          Command="{Binding PlansTab.ExportCommand}" 
                                          Margin="0,0,8,8"/>
                            </WrapPanel>
                            
                            <ui:TextBox Grid.Row="1" 
                                       PlaceholderText="Search plans..." 
                                       Text="{Binding PlansTab.SearchText, UpdateSourceTrigger=PropertyChanged}"
                                       Margin="12,0,12,12"
                                       Icon="{ui:SymbolIcon Search24}"/>
                            
                            <ListBox Grid.Row="2" 
                                    ItemsSource="{Binding PlansTab.Plans}"
                                    SelectedItem="{Binding PlansTab.SelectedPlan}"
                                    VirtualizingPanel.IsVirtualizing="True"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryBrush}"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="{StaticResource ListItemPadding}">
                                            <TextBlock Text="{Binding Name}" 
                                                      FontWeight="{StaticResource FontWeightSemiBold}"
                                                      FontSize="{StaticResource FontSizeM}"
                                                      Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding Identity}" 
                                                      Foreground="{StaticResource TextSecondaryBrush}" 
                                                      FontSize="{StaticResource FontSizeS}"/>
                                            <TextBlock Foreground="{StaticResource TextTertiaryBrush}" 
                                                      FontSize="{StaticResource FontSizeXS}">
                                                <Run Text="{Binding SuiteCount}"/> suites
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                    
                    <!-- Plan Editor Panel -->
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto"
                                 Visibility="{Binding PlansTab.IsEditorVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel Margin="{StaticResource PagePadding}" DataContext="{Binding PlansTab.Editor}">
                            <!-- Header -->
                            <Grid Margin="{StaticResource SectionHeaderMargin}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Plan Details" 
                                              Style="{StaticResource PageTitleStyle}"/>
                                    <ui:Badge Content="Unsaved" Appearance="Caution" 
                                             Visibility="{Binding IsDirty, Converter={StaticResource BoolToVisibilityConverter}}"
                                             Margin="{StaticResource ControlMarginMedium}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <ui:Button Content="Edit" Icon="{ui:SymbolIcon Edit24}" 
                                              Command="{Binding EditPlanCommand}" 
                                              Margin="{StaticResource ControlMarginSmall}"/>
                                    <ui:Button Content="Save" Icon="{ui:SymbolIcon Save24}" 
                                              Command="{Binding SavePlanCommand}" 
                                              Margin="{StaticResource ControlMarginSmall}"/>
                                    <ui:Button Content="Discard" Icon="{ui:SymbolIcon Dismiss24}" 
                                              Command="{Binding DiscardChangesCommand}" 
                                              Margin="{StaticResource ControlMarginSmall}"/>
                                    <ui:Button Content="Validate" Icon="{ui:SymbolIcon Checkmark24}" 
                                              Command="{Binding ValidatePlanCommand}" 
                                              Margin="{StaticResource ControlMarginSmall}"/>
                                    <ui:Button Content="Run" Icon="{ui:SymbolIcon Play24}" 
                                              Command="{Binding RunPlanCommand}" Appearance="Primary"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Metadata -->
                            <ui:CardExpander Header="Metadata" IsExpanded="True" Margin="0,0,0,10">
                                <StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="ID" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Name" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Version" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Version, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Description" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Tags (comma-separated)" Margin="0,0,0,5"/>
                                        <ui:TextBox Text="{Binding TagsText, UpdateSourceTrigger=PropertyChanged}"/>
                                    </StackPanel>
                                </StackPanel>
                            </ui:CardExpander>
                            
                            <!-- Suite References -->
                            <ui:CardExpander Header="Suite References" IsExpanded="True">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="200"/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                        <ui:Button Content="Add" Icon="{ui:SymbolIcon Add24}" Command="{Binding AddSuiteReferenceCommand}" Margin="0,0,5,0"/>
                                        <ui:Button Content="Remove" Icon="{ui:SymbolIcon Delete24}" Command="{Binding RemoveSuiteReferenceCommand}" Margin="0,0,5,0"/>
                                        <ui:Button Icon="{ui:SymbolIcon ArrowUp24}" Command="{Binding MoveSuiteReferenceUpCommand}" Margin="0,0,5,0"/>
                                        <ui:Button Icon="{ui:SymbolIcon ArrowDown24}" Command="{Binding MoveSuiteReferenceDownCommand}"/>
                                    </StackPanel>
                                    
                                    <ListBox Grid.Row="1" 
                                            ItemsSource="{Binding SuiteReferences}"
                                            SelectedItem="{Binding SelectedSuiteReference}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SuiteIdentity}" Margin="5"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </ui:CardExpander>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Busy overlay -->
        <Border Background="#80000000" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ui:ProgressRing IsIndeterminate="True"/>
                <TextBlock Text="{Binding BusyMessage}" Margin="0,10,0,0" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
